@model GameInLibrary

@{
    ViewData["Title"] = "Dodaj grę";
}

<h1>Dodaj nową grę (testowo)</h1>

<h4>Wpisz ID gry z IGDB, aby dodać ją do biblioteki.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="IgdbGameId" class="control-label">ID Gry z IGDB</label>
                <input asp-for="IgdbGameId" class="form-control" />
                <span asp-validation-for="IgdbGameId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj do biblioteki" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}