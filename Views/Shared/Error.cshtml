@using praca_dyplomowa_zesp.Models.ViewModels
@model ErrorViewModel
@{
    ViewData["Title"] = "System Failure";
}

<div class="container d-flex flex-column justify-content-center align-items-center fade-in-up" style="min-height: 80vh;">

    @* Główny panel błędu - używamy klasy glass-panel z site.css *@
    <div class="glass-panel p-5 text-center position-relative" style="max-width: 600px; border-color: var(--neon-red); box-shadow: 0 0 50px rgba(255, 51, 51, 0.15);">

        @* Ikona błędu *@
        <div class="mb-4">
            <i class="bi bi-exclamation-triangle" style="font-size: 5rem; color: var(--neon-red); text-shadow: 0 0 20px var(--neon-red);"></i>
        </div>

        @* Tytuł z efektem neonu *@
        <h1 class="text-neon-title mb-3" style="color: var(--neon-red); text-shadow: 0 0 15px var(--neon-red); letter-spacing: 4px;">
            SYSTEM FAILURE
        </h1>

        <h4 class="text-white text-uppercase mb-4" style="letter-spacing: 2px;">Krytyczny błąd macierzy</h4>

        <p class="text-muted mb-5" style="font-size: 1.1rem;">
            Wykryto anomalię w kodzie. Proces został zatrzymany, aby zapobiec uszkodzeniu danych.
            Netrunnerzy zostali powiadomieni.
        </p>

        @* Sekcja Request ID stylizowana jako alert-neon *@
        @if (Model.ShowRequestId)
        {
            <div class="alert alert-neon alert-neon-danger mb-5 text-start d-flex align-items-center gap-3">
                <i class="bi bi-bug-fill fs-3"></i>
                <div class="flex-grow-1 overflow-hidden">
                    <small class="text-uppercase opacity-75 d-block" style="font-size: 0.7rem; letter-spacing: 1px;">Tracking ID</small>
                    <code class="text-white fw-bold fs-5 d-block text-truncate">@Model.RequestId</code>
                </div>
            </div>
        }

        @* Przycisk powrotu - stylizowany na cyjan dla kontrastu *@
        <a asp-controller="Home" asp-action="Index" class="btn btn-neon-cyan px-5 py-3 fw-bold">
            <i class="bi bi-house-door-fill me-2"></i> POWRÓT DO BAZY
        </a>

    </div>

    @* Tło dekoracyjne (opcjonalne, wykorzystuje klasy Bootstrap/site.css) *@
    <div class="position-absolute start-50 top-50 translate-middle z-n1 opacity-25"
         style="width: 100%; height: 100%; background: radial-gradient(circle, rgba(255,51,51,0.1) 0%, transparent 70%); pointer-events: none;">
    </div>
</div>