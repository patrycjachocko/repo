@model praca_dyplomowa_zesp.Models.Modules.Guides.Guide

@{
    ViewData["Title"] = "Usuń poradnik";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-white border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Potwierdzenie usunięcia</h3>
                </div>
                <div class="card-body text-center">
                    <h4 class="mb-3">Czy na pewno chcesz usunąć ten poradnik?</h4>
                    <h2 class="text-primary mb-4">"@Model.Title"</h2>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-light">Anuluj</a>
                            <button type="submit" class="btn btn-danger px-4">Usuń</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>