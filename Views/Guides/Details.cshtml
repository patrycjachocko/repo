                {
                    <div class="reply-thread mt-3">
                        @foreach (var reply in comment.Replies)
                        {
                            var isReplyAuthor = User.Identity.IsAuthenticated && reply.Author.UserName == User.Identity.Name;
                            var canManageReply = isReplyAuthor || isAdminOrMod;
                            var replyLikes = reply.Reactions?.Count(r => r.Type == ReactionType.Like) ?? 0;
                            var replyDislikes = reply.Reactions?.Count(r => r.Type == ReactionType.Dislike) ?? 0;
                            var replyScore = replyLikes - replyDislikes;
                            var replyScoreColor = replyScore > 0 ? "text-success" : (replyScore < 0 ? "text-danger" : "text-muted");
                            var userLikedReply = reply.Reactions?.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Like) ?? false;
                            var userDislikedReply = reply.Reactions?.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Dislike) ?? false;

                            <div class="mb-3 pb-2 border-bottom border-secondary" style="border-color: rgba(255,255,255,0.05) !important;">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="d-flex align-items-center">
                                        @if (reply.Author?.ProfilePicture != null)
                                        {
                                            <img src="@Url.Action("GetAvatar", "Profile", new { id = reply.Author.Id })" class="rounded-circle me-2" style="width: 24px; height: 24px; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <img src="~/uploads/avatars/default_avatar.png" class="rounded-circle me-2" style="width: 24px; height: 24px; object-fit: cover;" />
                                        }
                                        <strong class="text-light me-2 small">@reply.Author.UserName</strong>
                                        <small class="text-muted" style="font-size: 0.7rem;">@reply.CreatedAt.ToString("dd.MM HH:mm")</small>
                                    </div>
                                    @if (canManageReply)
