@using praca_dyplomowa_zesp.Models.Interactions.Reactions
@using System.Security.Claims
@model praca_dyplomowa_zesp.Models.Modules.Guides.GuideDetailsViewModel

@{
    ViewData["Title"] = Model.Guide.Title;

    Guid currentUserId = Guid.Empty;
    if (User.Identity.IsAuthenticated)
    {
        var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (userIdClaim != null)
        {
            Guid.TryParse(userIdClaim, out currentUserId);
        }
    }

    bool isAuthor = User.Identity.IsAuthenticated && Model.Guide.User?.UserName == User.Identity.Name;
    bool isAdminOrMod = User.IsInRole("Admin") || User.IsInRole("Moderator");
    bool isRejected = Model.Guide.IsRejected;
    bool isPending = !Model.Guide.IsApproved && !Model.Guide.IsDeleted && !Model.Guide.IsDraft && !isRejected;
}

@* --- STYLE CYBERPUNK --- *@
<style>
    :root {
        --neon-blue: #00f3ff;
        --neon-pink: #ff0099;
        --neon-green: #00ff9d;
        --neon-red: #ff3333;
        --neon-yellow: #fcee0a;
        --dark-bg: #0b0b0e;
        --panel-bg: rgba(19, 19, 24, 0.95);
        --glass-bg: rgba(20, 20, 25, 0.7);
    }

    body {
        background-color: var(--dark-bg);
        color: #e0e0e0;
    }

    /* Karty i Panele */
    .cyber-card {
        background: var(--panel-bg);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px; /* Lekko zaokrąglone */
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(10px);
        overflow: hidden;
        margin-bottom: 2rem;
    }

    .cyber-card-header {
        background: linear-gradient(90deg, rgba(255,255,255,0.05) 0%, transparent 100%);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 1.5rem;
    }

    /* Hero Section (Nagłówek z tłem) */
    .guide-hero {
        position: relative;
        padding: 4rem 2rem;
        border-bottom: 2px solid var(--neon-blue);
        background-position: center;
        background-size: cover;
        box-shadow: 0 10px 30px rgba(0, 243, 255, 0.15);
    }

        .guide-hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(to bottom, rgba(11, 11, 14, 0.6) 0%, var(--dark-bg) 100%);
            z-index: 1;
        }

    .guide-hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
    }

    .guide-title {
        font-size: 3.5rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #fff;
        text-shadow: 0 0 20px rgba(0, 243, 255, 0.6);
        margin-bottom: 1rem;
    }

    /* Alerty Systemowe */
    .cyber-alert {
        background: rgba(10, 10, 12, 0.9);
        border-left: 4px solid;
        padding: 1.5rem;
        margin-bottom: 2rem;
        position: relative;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
    }

    .cyber-alert-danger {
        border-color: var(--neon-red);
        box-shadow: inset 0 0 20px rgba(255, 51, 51, 0.1);
    }

    .cyber-alert-warning {
        border-color: var(--neon-yellow);
        box-shadow: inset 0 0 20px rgba(252, 238, 10, 0.1);
    }

    .cyber-alert-info {
        border-color: var(--neon-blue);
        box-shadow: inset 0 0 20px rgba(0, 243, 255, 0.1);
    }

    /* Treść Poradnika */
    .guide-content {
        font-size: 1.1rem;
        line-height: 1.8;
        color: #ddd;
    }

        .guide-content h2, .guide-content h3 {
            color: var(--neon-blue);
            margin-top: 2rem;
            border-bottom: 1px solid rgba(0, 243, 255, 0.3);
            padding-bottom: 0.5rem;
            display: inline-block;
        }

        .guide-content img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            border: 1px solid #444;
            box-shadow: 0 5px 15px rgba(0,0,0,0.5);
            margin: 20px 0;
        }

    /* Komentarze */
    .comment-card {
        background: rgba(255, 255, 255, 0.03);
        border: 1px solid rgba(255, 255, 255, 0.05);
        margin-bottom: 1rem;
        border-radius: 8px;
        transition: all 0.3s;
    }

        .comment-card:hover {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.1);
        }

    /* Linie odpowiedzi */
    .reply-thread {
        border-left: 2px solid rgba(255, 255, 255, 0.1);
        margin-left: 1.5rem;
        padding-left: 1rem;
    }

    /* Przyciski */
    .btn-cyber {
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
        border-radius: 4px;
        transition: all 0.3s;
        border: none;
        padding: 8px 20px;
    }

    .btn-cyber-primary {
        background: linear-gradient(45deg, #007bff, var(--neon-blue));
        color: #fff;
        box-shadow: 0 0 10px rgba(0, 123, 255, 0.4);
    }

        .btn-cyber-primary:hover {
            box-shadow: 0 0 20px rgba(0, 243, 255, 0.6);
            color: #fff;
            transform: translateY(-2px);
        }

    .btn-cyber-outline {
        background: transparent;
        border: 1px solid var(--neon-blue);
        color: var(--neon-blue);
    }

        .btn-cyber-outline:hover {
            background: var(--neon-blue);
            color: #000;
            box-shadow: 0 0 15px var(--neon-blue);
        }

    /* Avatary z ramką */
    .avatar-cyber {
        border: 2px solid #555;
        box-shadow: 0 0 10px rgba(0,0,0,0.5);
    }

    .role-admin {
        border-color: var(--neon-red);
        box-shadow: 0 0 10px var(--neon-red);
    }

    .role-mod {
        border-color: var(--neon-green);
        box-shadow: 0 0 10px var(--neon-green);
    }

    /* Modal Odrzucenia */
    .modal-content-cyber {
        background-color: var(--panel-bg);
        border: 1px solid var(--neon-red);
        box-shadow: 0 0 30px rgba(255, 51, 51, 0.2);
        color: #fff;
    }

    .modal-header {
        border-bottom-color: rgba(255, 51, 51, 0.3);
    }

    .modal-footer {
        border-top-color: rgba(255, 51, 51, 0.3);
    }

    /* Gwiazdki */
    .star-icon {
        text-shadow: 0 0 5px rgba(255, 193, 7, 0.5);
        transition: transform 0.2s;
    }

        .star-icon:hover {
            transform: scale(1.2);
        }
</style>

<div class="container mt-4">

    @* --- KOMUNIKATY (TOASTS) --- *@
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert cyber-alert cyber-alert-info alert-dismissible fade show text-white" role="alert">
            <i class="fas fa-check-circle me-2 text-info"></i> @TempData["StatusMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert cyber-alert cyber-alert-danger alert-dismissible fade show text-white" role="alert">
            <i class="fas fa-exclamation-triangle me-2 text-danger"></i> @TempData["Error"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- PASEK NAWIGACJI --- *@
    <div class="d-flex justify-content-between mb-4">
        <a asp-action="Index" asp-route-gameId="@Model.Guide.IgdbGameId" class="btn btn-cyber-outline">
            <i class="fas fa-arrow-left me-2"></i> BAZA DANYCH
        </a>

        @if (!Model.Guide.IsDraft)
        {
            <a asp-action="DownloadPdf" asp-route-id="@Model.Guide.Id" class="btn btn-outline-danger" style="border-color: var(--neon-red); color: var(--neon-red);" target="_blank">
                <i class="fas fa-file-pdf me-2"></i> POBIERZ DANE [PDF]
            </a>
        }
    </div>

    @* --- BLOKI STATUSÓW (CYBER STYL) --- *@
    @if (isRejected)
    {
        <div class="cyber-alert cyber-alert-danger">
            <div class="d-flex align-items-start">
                <i class="fas fa-times-circle fa-3x me-4 text-danger" style="text-shadow: 0 0 15px red;"></i>
                <div class="w-100">
                    <h4 class="text-danger fw-bold text-uppercase mb-2">ODMOWA DOSTĘPU: BŁĘDY DANYCH</h4>
                    <p class="text-white-50 mb-3">Twój poradnik został odrzucony przez administrację. Wymagana korekta danych.</p>
                    <div class="p-3 border border-danger bg-danger bg-opacity-10 rounded">
                        <strong class="text-danger text-uppercase">Log systemowy:</strong> <span class="text-light fst-italic">@Model.Guide.RejectionReason</span>
                    </div>
                </div>
            </div>
        </div>
    }
    else if (Model.Guide.IsDraft)
    {
        <div class="cyber-alert cyber-alert-info" style="border-color: #aaa; box-shadow: inset 0 0 20px rgba(255,255,255,0.1);">
            <div class="d-flex align-items-center">
                <i class="fas fa-pencil-ruler fa-2x me-3 text-muted"></i>
                <div>
                    <h5 class="fw-bold text-uppercase text-muted mb-1">Status: SZKIC ROBOCZY</h5>
                    <p class="mb-0 text-white-50 small">Widoczne tylko dla autora. Edytuj i opublikuj, aby udostępnić w sieci.</p>
                </div>
            </div>
        </div>
    }
    else if (isPending)
    {
        <div class="cyber-alert cyber-alert-warning">
            <div class="d-flex align-items-center">
                <i class="fas fa-lock fa-2x me-3 text-warning"></i>
                <div>
                    <h5 class="fw-bold text-uppercase text-warning mb-1">Status: WERYFIKACJA SYSTEMOWA</h5>
                    <p class="mb-0 text-white-50 small">Dane są analizowane przez moderatorów. Oczekiwanie na autoryzację.</p>
                </div>
            </div>
        </div>
    }

    @if (Model.Guide.IsDeleted)
    {
        <div class="cyber-alert cyber-alert-danger">
            <div class="d-flex align-items-center">
                <i class="fas fa-trash-alt fa-2x me-3 text-danger"></i>
                <div>
                    <h5 class="fw-bold text-uppercase text-danger mb-1">OBIEKT W KOSZU</h5>
                    <p class="mb-0 text-white-50 small">Zasób usunięty lub zarchiwizowany. Dostęp tylko dla administracji.</p>
                </div>
            </div>
        </div>
    }

    @* --- KARTA PORADNIKA (HERO + TREŚĆ) --- *@
    <div class="cyber-card mb-5">

        @* Hero Image Wrapper *@
        <div class="guide-hero" style="background-image: url('@(Model.Guide.CoverImage != null ? $"data:{Model.Guide.CoverImageContentType};base64,{Convert.ToBase64String(Model.Guide.CoverImage)}" : "")');">
            <div class="guide-hero-content">
                @if (Model.Guide.IsDraft)
                {
                    <span class="badge bg-secondary mb-3 border border-light">SZKIC</span>
                }
                @if (isRejected)
                {
                    <span class="badge bg-danger mb-3 border border-danger shadow">ODRZUCONY</span>
                }

                <h1 class="guide-title">@Model.Guide.Title</h1>
                <p class="lead text-light opacity-75 mb-4" style="font-family: monospace;">@Model.Guide.Description</p>

                @* Metadane *@
                <div class="d-flex justify-content-center flex-wrap gap-4 text-white-50 small text-uppercase">

                    @* Autor *@
                    @{
                        string guideAuthorClass = "text-white";
                        string avatarClass = "avatar-cyber";
                        var guideRole = Model.Guide.User?.Role?.ToLower();
                        if (guideRole == "admin") { guideAuthorClass = "text-danger fw-bold"; avatarClass += " role-admin"; }
                        else if (guideRole == "moderator") { guideAuthorClass = "text-success fw-bold"; avatarClass += " role-mod"; }
                    }

                    <div class="d-flex align-items-center bg-black bg-opacity-50 px-3 py-1 rounded-pill border border-secondary">
                        @if (Model.Guide.User?.ProfilePicture != null)
                        {
                            <img src="@Url.Action("GetAvatar", "Profile", new { id = Model.Guide.UserId })" class="rounded-circle me-2 @avatarClass" style="width: 24px; height: 24px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/uploads/avatars/default_avatar.png" class="rounded-circle me-2 @avatarClass" style="width: 24px; height: 24px; object-fit: cover;" />
                        }
                        <span class="@guideAuthorClass">@Model.Guide.User?.UserName</span>
                    </div>

                    <div class="d-flex align-items-center bg-black bg-opacity-50 px-3 py-1 rounded-pill border border-secondary">
                        <i class="fas fa-calendar-alt me-2 text-info"></i> @Model.Guide.CreatedAt.ToString("dd.MM.yyyy")
                    </div>

                    <div class="d-flex align-items-center bg-black bg-opacity-50 px-3 py-1 rounded-pill border border-secondary">
                        <i class="fas fa-star me-2 text-warning"></i> @Model.AverageRating.ToString("0.0")/5.0
                    </div>
                </div>
            </div>
        </div>

        @* Treść *@
        <div class="card-body p-4 p-md-5">
            <div class="guide-content">
                @if (!string.IsNullOrEmpty(Model.Guide.Content))
                {
                    @Html.Raw(Model.Guide.Content)
                }
                else
                {
                    <div class="text-center text-muted py-5 border border-secondary border-dashed rounded">
                        <i class="fas fa-terminal fa-2x mb-3"></i>
                        <p>BRAK DANYCH. PLIK PUSTY.</p>
                    </div>
                }
            </div>
        </div>

        @* Footer Akcji *@
        @if ((!Model.Guide.IsDeleted && (isAuthor || isAdminOrMod)) || (Model.Guide.IsDeleted && isAdminOrMod))
        {
            <div class="card-footer border-top border-secondary p-3 bg-black bg-opacity-25 d-flex justify-content-end gap-3">
                <a asp-action="Edit" asp-route-id="@Model.Guide.Id" class="btn btn-warning fw-bold text-dark">
                    <i class="fas fa-edit me-1"></i> Edytuj
                </a>

                @if (Model.Guide.IsDeleted)
                {
                    <form asp-controller="Admin" asp-action="RestoreGuide" method="post">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-trash-restore me-1"></i> Przywróć
                        </button>
                    </form>
                    <form asp-controller="Guides" asp-action="DeletePermanently" method="post" onsubmit="return confirm('To usunięcie będzie PERMANENTNE i nieodwracalne. Kontynuować?');">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-danger" style="box-shadow: 0 0 10px red;">
                            <i class="fas fa-times me-1"></i> Usuń TRWALE
                        </button>
                    </form>
                }
                else
                {
                    <form asp-action="Delete" method="post" asp-route-id="@Model.Guide.Id" onsubmit="return confirm('@(Model.Guide.IsApproved ? "Przenieść do kosza?" : "Usunąć?")');">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Usuń
                        </button>
                    </form>
                }
            </div>
        }
    </div>

    @* --- PANEL MODERATORA (OCZEKUJĄCE) --- *@
    @if (isPending && isAdminOrMod)
    {
        <div class="cyber-alert cyber-alert-warning p-4 mb-5 text-center">
            <h4 class="text-warning text-uppercase fw-bold mb-3"><i class="fas fa-user-shield me-2"></i> Panel Decyzyjny</h4>
            <p class="text-white-50 mb-4">Ten zasób oczekuje na autoryzację. Podejmij decyzję.</p>

            <div class="d-flex justify-content-center gap-3">
                <form asp-controller="Guides" asp-action="ApproveGuide" method="post">
                    <input type="hidden" name="id" value="@Model.Guide.Id" />
                    <button type="submit" class="btn btn-success btn-lg px-5 fw-bold" style="background: var(--neon-green); color: #000; border: none; box-shadow: 0 0 15px rgba(0,255,157,0.4);">
                        <i class="fas fa-check me-2"></i> ZATWIERDŹ
                    </button>
                </form>
                <button type="button" class="btn btn-danger btn-lg px-5 fw-bold" data-bs-toggle="modal" data-bs-target="#rejectModal" style="background: var(--neon-red); border: none; box-shadow: 0 0 15px rgba(255,51,51,0.4);">
                    <i class="fas fa-ban me-2"></i> ODRZUĆ
                </button>
            </div>
        </div>
    }

    @* --- SEKCJA OCENY --- *@
    @if (Model.Guide.IsApproved && !Model.Guide.IsDeleted && !Model.Guide.IsDraft)
    {
        <div class="cyber-card mb-5 text-center p-4">
            <h4 class="text-uppercase text-white mb-3" style="letter-spacing: 2px;">Oceń ten materiał</h4>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.AntiForgeryToken()
                <input type="hidden" id="guideId" value="@Model.Guide.Id" />
                <input type="hidden" id="currentRating" value="@Model.UserRating" />

                <div class="d-flex flex-column justify-content-center align-items-center gap-2">
                    <div id="star-container" style="cursor: pointer; font-size: 2.5rem; color: #444;">
                        <i class="far fa-star star-icon" data-value="1"></i>
                        <i class="far fa-star star-icon" data-value="2"></i>
                        <i class="far fa-star star-icon" data-value="3"></i>
                        <i class="far fa-star star-icon" data-value="4"></i>
                        <i class="far fa-star star-icon" data-value="5"></i>
                    </div>
                    <div class="d-flex align-items-center gap-2 mt-2">
                        <span class="text-muted text-uppercase small">Twoja ocena:</span>
                        <span id="rating-display" class="fs-4 fw-bold text-warning" style="text-shadow: 0 0 10px gold;">
                            @(Model.UserRating > 0 ? Model.UserRating.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture) : "0.0")
                        </span>
                    </div>
                    <span id="save-message" class="text-success fw-bold text-uppercase mt-2" style="opacity: 0; transition: opacity 0.5s; letter-spacing: 1px;">
                        <i class="fas fa-check-circle"></i> Zapisano w bazie
                    </span>
                </div>
            }
            else
            {
                <p class="text-muted"><a asp-controller="Account" asp-action="Login" class="text-info text-decoration-none">Zaloguj się</a>, aby przyznać ocenę.</p>
            }
        </div>
    }

    @* --- SEKCJA KOMENTARZY --- *@
    <div class="comments-section mb-5" id="comments">
        <h4 class="text-white text-uppercase border-bottom border-secondary pb-2 mb-4">
            <i class="fas fa-comments me-2 text-primary"></i> Transmisja Danych (@Model.Comments.Count)
        </h4>

        @if (User.Identity.IsAuthenticated)
        {
            <div class="cyber-card p-3 mb-4">
                <form asp-action="AddComment" method="post">
                    <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                    <div class="mb-3">
                        <textarea name="content" class="form-control bg-black text-white border-secondary" rows="3" placeholder="Wprowadź komunikat..." style="resize: none;"></textarea>
                    </div>
                    <button type="submit" class="btn btn-cyber-primary float-end">WYŚLIJ</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        }

        @foreach (var comment in Model.Comments)
        {
            var isCommentAuthor = User.Identity.IsAuthenticated && comment.Author.UserName == User.Identity.Name;
            var canManageComment = isCommentAuthor || isAdminOrMod;
            var userLikedComment = comment.Reactions.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Like);
            var userDislikedComment = comment.Reactions.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Dislike);

            var likesCount = comment.Reactions.Count(r => r.Type == ReactionType.Like);
            var dislikesCount = comment.Reactions.Count(r => r.Type == ReactionType.Dislike);
            var commentScore = likesCount - dislikesCount;
            var scoreColorClass = commentScore > 0 ? "text-success" : (commentScore < 0 ? "text-danger" : "text-muted");

            <div class="comment-card p-3">
                <div class="d-flex justify-content-between align-items-start mb-2">
                    @* Avatar *@
                    <div class="d-flex align-items-center">
                        @if (comment.Author?.ProfilePicture != null)
                        {
                            <img src="@Url.Action("GetAvatar", "Profile", new { id = comment.Author.Id })" class="rounded-circle me-2" style="width: 36px; height: 36px; object-fit: cover; border: 1px solid #666;" />
                        }
                        else
                        {
                            <img src="~/uploads/avatars/default_avatar.png" class="rounded-circle me-2" style="width: 36px; height: 36px; object-fit: cover; border: 1px solid #666;" />
                        }

                        @{
                            string commentNickClass = "text-info fw-bold";
                            var cRole = comment.Author?.Role?.ToLower();
                            if (cRole == "admin") commentNickClass = "text-danger fw-bold";
                            if (cRole == "moderator") commentNickClass = "text-success fw-bold";
                        }
                        <div>
                            <div class="@commentNickClass">@comment.Author?.UserName</div>
                            <div class="text-muted small" style="font-size: 0.75rem;">@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>

                    @* Menu *@
                    @if (canManageComment)
                    {
                        <div class="dropdown">
                            <button class="btn btn-link text-secondary p-0" type="button" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></button>
                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                @if (isCommentAuthor)
                                {
                                    <li><a class="dropdown-item" href="#" onclick="toggleEditForm('comment-edit-@comment.Id'); return false;">Edytuj</a></li>
                                }
                                <li>
                                    <form asp-action="DeleteComment" method="post" onsubmit="return confirm('Usunąć komentarz?');">
                                        <input type="hidden" name="commentId" value="@comment.Id" />
                                        <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                        <button type="submit" class="dropdown-item text-danger">Usuń</button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                </div>

                <div id="comment-content-@comment.Id" class="mb-2"><p class="card-text text-light">@comment.Content</p></div>

                @if (isCommentAuthor)
                {
                    <div id="comment-edit-@comment.Id" class="d-none mb-3">
                        <form asp-action="EditComment" method="post">
                            <input type="hidden" name="commentId" value="@comment.Id" />
                            <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                            <textarea name="content" class="form-control bg-black text-white border-secondary mb-2">@comment.Content</textarea>
                            <button type="submit" class="btn btn-sm btn-success">Zapisz</button>
                            <button type="button" class="btn btn-sm btn-secondary" onclick="toggleEditForm('comment-edit-@comment.Id')">Anuluj</button>
                        </form>
                    </div>
                }

                @* Akcje Komentarza *@
                <div class="d-flex align-items-center gap-3">
