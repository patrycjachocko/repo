@model praca_dyplomowa_zesp.Models.Modules.Home.HomeViewModel
@{
    ViewData["Title"] = "Strona Główna";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<style>
    :root {
        --neon-blue: #00f3ff;
        --neon-purple: #bc13fe;
        --dark-bg: #0f0f12;
    }

    /* --- UKŁAD I STOPKA --- */
    footer {
        display: none !important;
    }

    .navbar {
        margin-bottom: 0 !important;
    }

    body {
        margin-bottom: 0 !important;
        background-color: var(--dark-bg);
        color: #fff;
        overflow: hidden !important;
        height: 100vh;
    }

    .container {
        max-width: 85% !important;
        margin: 0 auto !important;
        padding-left: 0 !important;
        padding-right: 0 !important;
    }

    main {
        padding-bottom: 0 !important;
    }

    /* --- HERO & SWIPER --- */

    .hero-section {
        text-align: center;
        height: calc(100vh - 57px);
        position: relative;
        display: flex;
        flex-direction: column;
        justify-content: center;
        background: radial-gradient(circle at center, #1a1a24 0%, var(--dark-bg) 70%);
        border-radius: 0 0 30px 30px;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 10px;
        text-transform: uppercase;
        background: linear-gradient(90deg, var(--neon-blue), var(--neon-purple));
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 25px rgba(188, 19, 254, 0.6);
        position: relative;
        z-index: 20;
    }

    .hero-subtitle {
        font-size: 1.4rem;
        color: #aaa;
        margin-bottom: 40px;
        font-weight: 300;
        letter-spacing: 1px;
        position: relative;
        z-index: 20;
    }

    /* --- SWIPER STYLES --- */
    .swiper {
        width: 100%;
        padding-top: 30px;
        padding-bottom: 50px;
        overflow: hidden !important;
        border-radius: 20px;
        -webkit-mask-image: linear-gradient(to right, transparent 0%, black 15%, black 85%, transparent 100%);
        mask-image: linear-gradient(to right, transparent 0%, black 15%, black 85%, transparent 100%);
    }

    .swiper-slide {
        background-position: center;
        background-size: cover;
        width: 380px;
        height: 570px;
        border-radius: 20px;
        overflow: hidden;
        position: relative;
        box-shadow: 0 20px 60px rgba(0,0,0,0.9);
        background-color: #1a1a20;
        border: 1px solid #333;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
    }

        .swiper-slide img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.6s ease;
            /* Usunięto loading="lazy", żeby obrazki były gotowe od razu */
        }

    .swiper-slide-active:hover img {
        transform: scale(1.08);
    }

    .swiper-slide-active {
        border: 2px solid var(--neon-purple);
        box-shadow: 0 0 50px rgba(188, 19, 254, 0.4);
        z-index: 10;
    }

    .game-info {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 30px 20px;
        background: linear-gradient(to top, rgba(0,0,0,0.95), transparent);
        transform: translateY(120px);
        transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        text-align: center;
    }

    .swiper-slide-active:hover .game-info,
    .swiper-slide-active .game-info {
        transform: translateY(0);
    }

    .swiper-slide:not(.swiper-slide-active) .game-info {
        transform: translateY(120px) !important;
    }

    .game-title {
        font-size: 1.5rem;
        font-weight: bold;
        color: white;
        margin-bottom: 8px;
        text-shadow: 0 2px 10px rgba(0,0,0,1);
        line-height: 1.2;
    }

    .badge-library {
        background-color: var(--neon-blue);
        color: #000;
        font-size: 0.8rem;
        padding: 4px 12px;
        border-radius: 12px;
        font-weight: 800;
        text-transform: uppercase;
        display: inline-block;
        margin-bottom: 10px;
        box-shadow: 0 0 10px var(--neon-blue);
    }

    .btn-details {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 30px;
        background: linear-gradient(45deg, var(--neon-purple), var(--neon-blue));
        border: none;
        border-radius: 30px;
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-size: 1rem;
        transition: all 0.3s;
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
    }

        .btn-details:hover {
            filter: brightness(1.2);
            transform: translateY(-2px);
            color: white;
            box-shadow: 0 0 20px rgba(188, 19, 254, 0.6);
        }
</style>

<div class="hero-section">
    @if (User.Identity.IsAuthenticated)
    {
        <h1 class="hero-title">Twoje Centrum Gier</h1>
        <p class="hero-subtitle">Kontynuuj przygodę lub odkryj coś nowego</p>
    }
    else
    {
        <h1 class="hero-title">Witaj w Świecie Gier</h1>
        <p class="hero-subtitle">Zaloguj się, aby zarządzać swoją kolekcją</p>
    }

    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @if (Model.Games != null && Model.Games.Any())
            {
                foreach (var game in Model.Games)
                {
                    <div class="swiper-slide">
                        <img src="@(game.CoverUrl ?? "https://via.placeholder.com/380x570?text=No+Cover")" alt="@game.Name" />

                        <div class="game-info">
                            @if (game.IsInLibrary)
                            {
                                <span class="badge-library">W Bibliotece</span>

                                <br />
                            }
                            <div class="game-title">@game.Name</div>
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@game.IgdbId" class="btn-details">
                                Zobacz szczegóły
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-white">Wczytywanie gier...</div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
    var swiper = new Swiper(".mySwiper", {
        effect: "coverflow",
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: "auto",
        initialSlide: 2,

        // ZMIANY W PĘTLI
        loop: true,
        loopedSlides: 15, // Wymuszamy na Swiperze przygotowanie większej liczby duplikatów z obu stron

        speed: 800,

        coverflowEffect: {
            rotate: 15,
            stretch: 0,
            depth: 250,
            modifier: 1,
            slideShadows: true,
        },

        autoplay: {
            delay: 3000,
            disableOnInteraction: false,
            pauseOnMouseEnter: true
        },

        keyboard: {
            enabled: true,
        },

        mousewheel: {
            invert: false,
        },
    });
</script>