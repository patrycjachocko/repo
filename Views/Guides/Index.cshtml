@model praca_dyplomowa_zesp.Models.Modules.Guides.GuidesViewModel
@{
    ViewData["Title"] = $"{Model.GameName} - Poradniki";
    bool canManageMaps = User.IsInRole("Admin") || User.IsInRole("Moderator");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom border-secondary">
        <div>
            <h1 class="display-5 fw-bold text-primary">@Model.GameName</h1>
            <p class="text-muted lead">Baza wiedzy i poradników społeczności</p>
        </div>
        <div class="d-flex gap-2">
            @if (canManageMaps)
            {
                <button type="button" class="btn btn-warning btn-lg" onclick="openMapManager()">
                    <i class="fas fa-map-marked-alt"></i> Zarządzaj Mapami
                </button>
            }

            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Create" asp-route-gameId="@Model.IgdbGameId" class="btn btn-success btn-lg">
                    <i class="fas fa-plus"></i> Napisz poradnik
                </a>

                @if (Model.IsInLibrary)
                {
                    <button class="btn btn-outline-success btn-lg disabled"><i class="fas fa-check"></i> W bibliotece</button>
                }
                else
                {
                    <form asp-controller="Library" asp-action="Create" method="post">
                        <input type="hidden" name="IgdbGameId" value="@Model.IgdbGameId" />
                        <input type="hidden" name="returnUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
                        <button type="submit" class="btn btn-outline-primary btn-lg">Dodaj do biblioteki</button>
                    </form>
                }
            }
            else
            {
                @* --- KOMUNIKAT DLA NIEZALOGOWANYCH --- *@
                <div class="alert alert-dark text-white d-flex align-items-center mb-0 px-4 py-2 border-secondary" role="alert">
                    <i class="fas fa-info-circle me-3 fs-4 text-primary"></i>
                    <div>
                        <strong>Chcesz dołączyć do dyskusji?</strong><br />
                        <a asp-controller="Account" asp-action="Login" class="text-primary fw-bold text-decoration-none">Zaloguj się</a>,
                        aby dodawać gry do biblioteki i pisać poradniki!
                    </div>
                </div>
            }
        </div>
    </div>

    @* --- PANEL FILTROWANIA --- *@
    <div class="card bg-dark border-secondary mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 align-items-center">
                <input type="hidden" name="gameId" value="@Model.IgdbGameId" />
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-search"></i></span>
                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control bg-dark text-white border-secondary" placeholder="Szukaj po tytule lub treści..." />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-secondary border-secondary text-white"><i class="fas fa-sort"></i></span>
                        <select name="sortOrder" class="form-select bg-dark text-white border-secondary" onchange="this.form.submit()">
                            <!option value="newest" @(ViewData["CurrentSort"] as string == "newest" ? "selected" : "")>Najnowsze</!option>
                            <!option value="rating_desc" @(ViewData["CurrentSort"] as string == "rating_desc" ? "selected" : "")>Najlepiej oceniane</!option>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <!option value="mine" @(ViewData["CurrentSort"] as string == "mine" ? "selected" : "")>Moje poradniki na górze</!option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Filtruj</button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Guides.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var guide in Model.Guides)
            {
                var avgRating = guide.Rates != null && guide.Rates.Any() ? guide.Rates.Average(r => r.Value) : 0;

                // --- LOGIKA STATUSÓW ---
                bool isDeleted = guide.IsDeleted;
                bool isDraft = guide.IsDraft;
                bool isRejected = guide.IsRejected;
                bool isPending = !guide.IsApproved && !isDraft && !isDeleted && !isRejected;

                string cardClass = "";
                if (isDeleted) cardClass = "guide-card-deleted";
                else if (isDraft) cardClass = "guide-card-draft";
                else if (isRejected) cardClass = "guide-card-rejected";
                else if (isPending) cardClass = "guide-card-pending";

                bool canManage = User.IsInRole("Admin") || User.IsInRole("Moderator") || User.Identity.Name == guide.User?.UserName;

                <div class="col">
                    <div class="card h-100 bg-dark text-white border-secondary shadow-lg hover-effect @cardClass">

                        @* --- BADGE --- *@
                        @if (isDeleted)
                        {
                            <div class="status-badge badge-deleted"><i class="fas fa-trash-alt"></i> KOSZ</div>
                        }
                        else if (isDraft)
                        {
                            <div class="status-badge badge-draft"><i class="fas fa-pencil-ruler"></i> SZKIC</div>
                        }
                        else if (isRejected)
                        {
                            <div class="status-badge badge-rejected"><i class="fas fa-times-circle"></i> ODRZUCONY</div>
                        }
                        else if (isPending)
                        {
                            <div class="status-badge badge-pending"><i class="fas fa-lock"></i> OCZEKUJE</div>
                        }

                        <div style="height: 200px; overflow: hidden; background-color: #2c2c35; display: flex; align-items: center; justify-content: center; position: relative;">
                            @if (guide.CoverImage != null)
                            {
                                <img src="data:@guide.CoverImageContentType;base64,@Convert.ToBase64String(guide.CoverImage)"
                                     class="card-img-top" style="width: 100%; height: 100%; object-fit: cover; @(isDraft || isRejected || isDeleted ? "filter: grayscale(100%);" : "")"
                                     alt="@guide.Title">
                            }
                            else
                            {
                                <i class="fas fa-book-open fa-4x text-secondary"></i>
                            }

                            <div class="position-absolute top-0 end-0 m-2 badge bg-warning text-dark fs-6 shadow">
                                <i class="fas fa-star"></i> @avgRating.ToString("0.0")
                            </div>
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">@guide.Title</h5>
                            <p class="card-text text-muted small mb-3">
                                Autor: <span class="text-white">@guide.User?.UserName</span> |
                                @guide.CreatedAt.ToString("dd.MM.yyyy")
                            </p>
                            <p class="card-text flex-grow-1 text-truncate" style="max-height: 3em;">@guide.Description</p>

                            @if (isRejected && canManage)
                            {
                                <div class="alert alert-danger py-1 px-2 small mb-2 text-center" style="background-color: #4a1c1c; border-color: #842029; color: #ea868f;">
                                    <i class="fas fa-exclamation-triangle"></i> Wymaga poprawy
                                </div>
                            }

                            <div class="mt-3 d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@guide.Id" class="btn btn-outline-light flex-grow-1 stretched-link">
                                    Czytaj dalej
                                </a>

                                @if (canManage)
                                {
                                    <div class="d-flex gap-2" style="position: relative; z-index: 10;">
                                        <a asp-action="Edit" asp-route-id="@guide.Id" class="btn btn-outline-warning" title="Edytuj" style="min-width: 42px;">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        @if (guide.IsDeleted)
                                        {
                                            <form asp-action="DeletePermanently" asp-route-id="@guide.Id" method="post" onsubmit="return confirm('To usunięcie jest NIEODWRACALNE. Kontynuować?');" class="d-flex">
                                                <button type="submit" class="btn btn-danger" title="Usuń na zawsze" style="min-width: 42px;">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-action="Delete" asp-route-id="@guide.Id" class="btn btn-outline-danger" title="Usuń do kosza" style="min-width: 42px;">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h3 class="text-muted">Pusto tu...</h3>
            <p class="text-secondary">Brak poradników.</p>
        </div>
    }
</div>

@if (canManageMaps)
{
    @* --- MODAL MANAGER MAP (ADMIN/MOD) --- *@
    <div class="modal fade" id="mapManagerModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content bg-dark text-white border-secondary">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title"><i class="fas fa-cogs"></i> Zarządzanie Mapami</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="table-responsive">
                        <table class="table table-dark table-hover align-middle">
                            <thead>
                                <tr>
                                    <th style="width: 100px;">Podgląd</th>
                                    <th>Nazwa (Edytowalna)</th>
                                    <th style="width: 150px;">Status</th>
                                    <th style="width: 100px;">Akcja</th>
                                </tr>
                            </thead>
                            <tbody id="mapManagerList">
                                @* Wiersze ładowane przez JS *@
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

        <script>
            var gameId = @Model.IgdbGameId;

            function openMapManager() {
                var modal = new bootstrap.Modal(document.getElementById('mapManagerModal'));
                loadManagerMaps();
                modal.show();
            }

            function loadManagerMaps() {
                $.get('/Maps/GetMapsForManager', { gameId: gameId }, function (data) {
                    var container = $('#mapManagerList');
                    container.empty();

                    if (data.length === 0) {
                        container.html('<tr><td colspan="4" class="text-center py-4">Brak map.</td></tr>');
                        return;
                    }

                    data.forEach(function (map) {
                        var statusBadge = map.isDeleted
                            ? '<span class="badge bg-danger">Usunięta (Ukryta)</span>'
                            : '<span class="badge bg-success">Aktywna</span>';

                        var btnClass = map.isDeleted ? "btn-success" : "btn-danger";
                        var btnIcon = map.isDeleted ? "fa-trash-restore" : "fa-trash";
                        var btnText = map.isDeleted ? "Przywróć" : "Usuń";
                        var rowClass = map.isDeleted ? "opacity-50" : "";

                        var html = `
                            <tr class="${rowClass}">
                                <td>
                                    <img src="${map.imageUrl}" class="rounded border border-secondary" style="width: 80px; height: 50px; object-fit: cover;">
                                </td>
                                <td>
                                    <div class="input-group input-group-sm">
                                        <input type="text" class="form-control bg-dark text-white border-secondary" value="${map.name}" id="map-name-${map.id}">
                                        <button class="btn btn-outline-primary" onclick="renameMap(${map.id})"><i class="fas fa-save"></i></button>
                                    </div>
                                </td>
                                <td>${statusBadge}</td>
                                <td>
                                    <button class="btn btn-sm ${btnClass} w-100" onclick="toggleMapStatus(${map.id})">
                                        <i class="fas ${btnIcon}"></i> ${btnText}
                                    </button>
                                </td>
                            </tr>
                        `;
                        container.append(html);
                    });
                });
            }

            function renameMap(id) {
                var newName = $('#map-name-' + id).val();
                $.post('/Maps/RenameMap', { id: id, newName: newName }, function (res) {
                    if (res.success) {
                        // Opcjonalnie: Pokaż toast
                        // alert("Zmieniono nazwę!");
                    } else {
                        alert("Błąd zmiany nazwy.");
                    }
                }).fail(function() { alert("Błąd serwera."); });
            }

            function toggleMapStatus(id) {
                if(!confirm("Czy na pewno chcesz zmienić status tej mapy? \n(Usunięta mapa zniknie z listy wyboru dla nowych poradników, ale pozostanie w istniejących).")) return;

                $.post('/Maps/ToggleMapStatus', { id: id }, function (res) {
                    if (res.success) {
                        loadManagerMaps(); // Przeładuj listę
                    } else {
                        alert("Wystąpił błąd.");
                    }
                });
            }
        </script>
    }
}
else
{
    @section Scripts {
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    }
}

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.5) !important;
            border-color: var(--bs-primary) !important;
        }

    /* --- STYLIZACJA KART --- */

    /* SZKIC: Szary */
    .guide-card-draft {
        opacity: 0.9;
        border: 2px dashed #adb5bd !important;
        background-color: #212529 !important;
    }

        .guide-card-draft:hover {
            opacity: 1;
        }

    /* ODRZUCONY: Fioletowy (Indigo) */
    .guide-card-rejected {
        opacity: 0.9;
        border: 2px dashed #6f42c1 !important;
        background-color: #2a2035 !important;
    }

        .guide-card-rejected:hover {
            opacity: 1;
        }

    /* OCZEKUJĄCY: Żółty (Warning) */
    .guide-card-pending {
        opacity: 0.9;
        border: 2px dashed #ffc107 !important;
        background-color: #2b2505 !important;
    }

        .guide-card-pending:hover {
            opacity: 1;
        }

    /* KOSZ: Czerwony (Danger) */
    .guide-card-deleted {
        opacity: 0.7; /* Bardziej przeźroczysty */
        border: 2px dashed #dc3545 !important;
        background-color: #2c0b0e !important;
    }

        .guide-card-deleted:hover {
            opacity: 1;
        }


    /* --- BADGE --- */
    .status-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        color: #fff;
        font-weight: bold;
        padding: 5px 12px;
        border-radius: 20px;
        z-index: 10;
        box-shadow: 0 2px 5px rgba(0,0,0,0.5);
        font-size: 0.85rem;
    }

    .badge-pending {
        background-color: #ffc107;
        color: #000;
    }

    .badge-deleted {
        background-color: #dc3545;
    }

    .badge-draft {
        background-color: #adb5bd;
        color: #212529;
    }

    .badge-rejected {
        background-color: #6f42c1;
    }
</style>