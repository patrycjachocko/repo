@using praca_dyplomowa_zesp.Models.Modules.Users
@using praca_dyplomowa_zesp.Models
@model RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}

<div class="container auth-wrapper">
    <div class="row justify-content-center w-100">
        <div class="col-md-7 col-lg-6 col-xl-5">

            <div class="card auth-card">
                <div class="card-body p-4 p-sm-5">

                    <h2 class="text-neon-title">Rejestracja</h2>

                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        @* USUNIĘTO asp-validation-summary *@

                        <div class="form-floating mb-3">
                            <input asp-for="Login" class="form-control form-control-tech" placeholder="Login" required />
                            <label asp-for="Login">Login (ID)</label>
                            <span asp-validation-for="Login" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="UserName" class="form-control form-control-tech" placeholder="Nick" required />
                            <label asp-for="UserName">Nazwa gracza</label>
                            <span asp-validation-for="UserName" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control form-control-tech" type="password" placeholder="Hasło" required />
                            <label asp-for="Password">Hasło</label>
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="ConfirmPassword" class="form-control form-control-tech" type="password" placeholder="Powtórz hasło" required />
                            <label asp-for="ConfirmPassword">Powtórz hasło</label>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-neon-green">
                                Stwórz konto
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="text-muted small mb-1">Masz już ID?</p>
                            <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="btn btn-low-tier fw-bold" style="color: #fff;">
                                ZALOGUJ SIĘ TUTAJ
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}