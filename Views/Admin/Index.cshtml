@model praca_dyplomowa_zesp.Models.Modules.Admin.AdminPanelViewModel
@{
    ViewData["Title"] = "Panel Administratora";
}

<style>
    :root {
        --neon-blue: #00f3ff;
        --neon-purple: #bc13fe;
        --neon-green: #00ff9d;
        --dark-bg: #0f0f12;
        --panel-bg: #1a1a20;
    }

    .admin-container {
        background-color: var(--panel-bg);
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 0 30px rgba(0,0,0,0.5);
        border: 1px solid #333;
        margin-top: 20px;
        min-height: 80vh;
    }

    h2 {
        color: var(--neon-blue);
        text-transform: uppercase;
        font-weight: 800;
        margin-bottom: 20px;
        text-shadow: 0 0 10px rgba(0, 243, 255, 0.4);
    }

    /* --- TABS --- */
    .nav-tabs {
        border-bottom: 2px solid #333;
        margin-bottom: 25px;
    }

        .nav-tabs .nav-link {
            color: #aaa;
            background: transparent;
            border: none;
            font-size: 1.1rem;
            padding: 10px 20px;
            transition: all 0.3s;
        }

            .nav-tabs .nav-link:hover {
                color: #fff;
                border-color: transparent;
            }

            .nav-tabs .nav-link.active {
                color: var(--neon-purple) !important;
                background-color: transparent !important;
                border-bottom: 3px solid var(--neon-purple);
                font-weight: bold;
            }

                /* Styl dla aktywnej zakładki kosza (czerwony) */
                .nav-tabs .nav-link.active.text-danger {
                    color: #dc3545 !important;
                    border-bottom: 3px solid #dc3545;
                }

                /* Styl dla aktywnej zakładki ticketów (żółty) */
                .nav-tabs .nav-link.active.text-warning {
                    color: #ffc107 !important;
                    border-bottom: 3px solid #ffc107;
                }

    /* --- TABLE --- */
    .table-dark {
        background-color: #15151a;
        border-radius: 10px;
        overflow: hidden;
    }

        .table-dark th {
            background-color: #222;
            color: var(--neon-blue);
            border-bottom: 2px solid #333;
            padding: 15px;
        }

        .table-dark td {
            vertical-align: middle;
            border-color: #333;
            padding: 12px 15px;
        }

    .user-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #444;
        margin-right: 10px;
    }

    .action-btn-group {
        display: flex;
        gap: 10px;
        justify-content: flex-end;
    }

    .badge-role-admin { background-color: #dc3545; color: white; }
    .badge-role-mod { background-color: var(--neon-green); color: white; }
    .badge-role-user { background-color: #6c757d; color: white; }

    .status-dot {
        height: 10px;
        width: 10px;
        border-radius: 50%;
        display: inline-block;
        margin-right: 5px;
    }

    .status-active { background-color: #28a745; box-shadow: 0 0 5px #28a745; }
    .status-banned { background-color: #dc3545; box-shadow: 0 0 5px #dc3545; }
    .status-muted { background-color: #ffc107; box-shadow: 0 0 5px #ffc107; }

    .search-box input {
        background-color: #222;
        border: 1px solid #444;
        color: #fff;
        border-radius: 20px 0 0 20px;
    }

    .search-box button {
        border-radius: 0 20px 20px 0;
        background-color: var(--neon-blue);
        color: black;
        font-weight: bold;
        border: none;
    }

    .trash-warning td { color: #ff6b6b; }

    @("@keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }")
    .animate-pulse {
        animation: pulse 1.5s infinite;
    }
</style>

<div class="container">
    <div class="admin-container">
        <h2>Panel Administratora</h2>

        @{
            bool isAdmin = User.IsInRole("Admin");
            int openTicketsCount = Model.Tickets != null ? Model.Tickets.Count(t => t.Status == praca_dyplomowa_zesp.Models.TicketStatus.Oczekujące) : 0;
        }

        <ul class="nav nav-tabs" id="adminTabs" role="tablist">
            @if (isAdmin)
            {
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab">
                        Zarządzanie Użytkownikami
                    </button>
                </li>
            }

            <li class="nav-item" role="presentation">
                <button class="nav-link @(!isAdmin ? "active" : "")" id="posts-tab" data-bs-toggle="tab" data-bs-target="#posts" type="button" role="tab">
                    Akceptacja Postów
                    @if (Model.PendingGuides.Count > 0)
                    {
                        <span class="badge bg-danger rounded-pill ms-2">@Model.PendingGuides.Count</span>
                    }
                </button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="nav-link text-danger" id="trash-tab" data-bs-toggle="tab" data-bs-target="#trash" type="button" role="tab">
                    <i class="fas fa-trash-alt me-2"></i> Kosz
                    @if (Model.DeletedGuides != null && Model.DeletedGuides.Count > 0)
                    {
                        <span class="badge bg-danger rounded-pill ms-2">@Model.DeletedGuides.Count</span>
                    }
                </button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="nav-link text-warning" id="tickets-tab" data-bs-toggle="tab" data-bs-target="#tickets" type="button" role="tab">
                    <i class="fas fa-envelope-open-text me-2"></i> Zgłoszenia
                    @if (openTicketsCount > 0)
                    {
                        <span class="badge bg-danger rounded-pill ms-2">@openTicketsCount</span>
                    }
                </button>
            </li>
        </ul>

        <div class="tab-content" id="adminTabsContent">

            @* 1. TREŚĆ: UŻYTKOWNICY *@
            @if (isAdmin)
            {
                <div class="tab-pane fade show active" id="users" role="tabpanel">
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="input-group search-box" style="max-width: 400px;">
                            <input type="text" name="searchString" class="form-control" placeholder="Szukaj (Nazwa lub Login)..." value="@Model.SearchString">
                            <button class="btn btn-outline-secondary" type="submit">Szukaj</button>
                        </div>
                    </form>

                    <div class="table-responsive">
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Użytkownik (Display)</th>
                                    <th>Login</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th class="text-end">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@user.AvatarUrl" class="user-avatar" alt="Avatar">
                                                <span class="fw-bold">@user.UserName</span>
                                            </div>
                                        </td>
                                        <td>@user.Login</td>
                                        <td>
    @{
        // Jeśli jest Adminem, pokaż odznakę Admina
        if (user.Roles.Contains("Admin")) 
        { 
            <span class="badge badge-role-admin me-1">Admin</span> 
        }
        
        // Jeśli jest Moderatorem, pokaż odznakę Moda
        if (user.Roles.Contains("Moderator")) 
        { 
            <span class="badge badge-role-mod me-1">Mod</span> 
        }
        
        // Pokaż "User" TYLKO wtedy, gdy nie jest ani Adminem, ani Moderatorem
        if (!user.Roles.Contains("Admin") && !user.Roles.Contains("Moderator"))
        {
            <span class="badge badge-role-user me-1">User</span>
        }
    }
</td>
                                        <td>
                                            @if (user.IsLockedOut) { <span class="text-danger" title="Zbanowany do @user.LockoutEnd"><span class="status-dot status-banned"></span> BAN</span> }
                                            else if (user.IsMuted) { <span class="text-warning" title="Wyciszony do @user.MuteEnd"><span class="status-dot status-muted"></span> MUTE</span> }
                                            else { <span class="text-success"><span class="status-dot status-active"></span> Aktywny</span> }
                                        </td>
                                        <td class="text-end">
                                            @if (!user.Roles.Contains("Admin"))
                                            {
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">Opcje</button>
                                                    <ul class="dropdown-menu dropdown-menu-dark">
                                                        <li>
                                                            <form asp-action="ToggleModerator" method="post">
                                                                <input type="hidden" name="userId" value="@user.Id" />
                                                                @if (user.Roles.Contains("Moderator"))
                                                                {
                                                                    <button type="submit" class="dropdown-item text-warning">Odbierz Moderatora</button>
                                                                }
                                                                else
                                                                {
                                                                    <button type="submit" class="dropdown-item text-success">Mianuj Moderatorem</button>
                                                                }
                                                            </form>
                                                        </li>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <li><button class="dropdown-item text-info" onclick="openMuteModal('@user.Id', '@user.UserName')">@(user.IsMuted ? "Zmień Wyciszenie" : "Wycisz (Mute)")</button></li>
                                                        <li><button class="dropdown-item text-danger" onclick="openBanModal('@user.Id', '@user.UserName')">@(user.IsLockedOut ? "Zmień Bana / Odbanuj" : "Zbanuj (Ban)")</button></li>
                                                    </ul>
                                                </div>
                                            }
                                            else { <span class="text-muted small">Brak akcji</span> }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }

            @* 2. TREŚĆ: POSTY *@
            <div class="tab-pane fade @(!isAdmin ? "show active" : "")" id="posts" role="tabpanel">
                @if (Model.PendingGuides.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Tytuł</th>
                                    <th>Autor</th>
                                    <th>Data dodania</th>
                                    <th class="text-end">Decyzja</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var guide in Model.PendingGuides)
                                {
                                    <tr>
                                        <td class="fw-bold">
                                            <a asp-controller="Guides" asp-action="Details" asp-route-id="@guide.Id" target="_blank" class="text-white text-decoration-none">
                                                <i class="fas fa-external-link-alt text-muted small me-2"></i>@guide.Title
                                            </a>
                                        </td>
                                        <td>@guide.User?.UserName</td>
                                        <td>@guide.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>
                                            <div class="action-btn-group">
                                                <form asp-action="ApproveGuide" method="post" style="display:inline;">
                                                        <input type="hidden" name="id" value="@guide.Id" />
                                                             <button type="submit" class="btn btn-sm btn-success" title="Zatwierdź"><i class="fas fa-check"></i></button>
                                                                        </form>
    
                                                                    <button type="button" class="btn btn-sm btn-danger" 
                                                                  title="Odrzuć z powodem" 
                                                                      onclick="openRejectModal('@guide.Id', '@guide.Title')">
                                                                                <i class="fas fa-ban"></i> </button>
                                                    </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center p-5 text-muted">
                        <i class="fas fa-check-circle fa-3x mb-3 text-success" style="opacity: 0.5"></i>
                        <h4>Wszystko wyczyszczone!</h4>
                        <p>Brak oczekujących poradników.</p>
                    </div>
                }
            </div>

            @* 3. TREŚĆ: KOSZ *@
            <div class="tab-pane fade" id="trash" role="tabpanel">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-danger"><i class="fas fa-trash-alt me-2"></i>Usunięte poradniki</h4>
                    @if (Model.DeletedGuides != null && Model.DeletedGuides.Any())
                    {
                        <form asp-action="EmptyTrash" method="post" onsubmit="return confirm('UWAGA: Czy na pewno chcesz OPRÓŻNIĆ cały kosz?');">
                            <button type="submit" class="btn btn-outline-danger btn-sm"><i class="fas fa-fire me-1"></i> Opróżnij Kosz</button>
                        </form>
                    }
                </div>

                @if (Model.DeletedGuides != null && Model.DeletedGuides.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-hover">
                            <thead>
                                <tr>
                                    <th>Tytuł</th>
                                    <th>Autor</th>
                                    <th>Usunięto</th>
                                    <th>Status (30 dni)</th>
                                    <th class="text-end">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.DeletedGuides)
                                {
                                    var daysInTrash = (DateTime.Now - (item.DeletedAt ?? DateTime.Now)).TotalDays;
                                    bool isOld = daysInTrash > 25;
                                    <tr class="@(isOld ? "trash-warning" : "")">
                                        <td class="fw-bold">
                                            <a asp-controller="Guides" asp-action="Details" asp-route-id="@item.Id" target="_blank" class="@(isOld ? "text-danger" : "text-muted") text-decoration-none">@item.Title</a>
                                        </td>
                                        <td>@item.User?.UserName</td>
                                        <td>@item.DeletedAt?.ToString("dd.MM.yyyy HH:mm")</td>
                                        <td>@(isOld ? "> 25 dni" : $"{Math.Floor(daysInTrash)} dni")</td>
                                        <td>
                                            <div class="action-btn-group">
                                                <form asp-action="RestoreGuide" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                    <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-undo"></i></button>
                                                </form>
                                                <form asp-action="DeletePermanently" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Usunąć PERMANENTNIE?');">
                                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center p-5 text-muted">
                        <i class="fas fa-trash-restore fa-3x mb-3" style="opacity: 0.3"></i>
                        <h4>Kosz jest pusty</h4>
                    </div>
                }
            </div>

            @* 4. TREŚĆ: ZGŁOSZENIA (TICKETY) - POPRAWIONA *@
            <div class="tab-pane fade" id="tickets" role="tabpanel">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-warning"><i class="fas fa-envelope-open-text me-2"></i>Zgłoszenia użytkowników</h4>
                </div>

                @if (Model.Tickets != null && Model.Tickets.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-dark table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>Status</th>
                                    <th>Data</th>
                                    <th>Użytkownik</th>
                                    <th>Temat</th>
                                    <th class="text-end">Akcje</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Tickets)
                                {
                                    <tr class="align-middle">
                                        <td>
                                            @* ZMIANA NAZW STATUSÓW *@
                                            @if (item.Status == praca_dyplomowa_zesp.Models.TicketStatus.Oczekujące)
                                            {
                                                <span class="badge bg-danger">Oczekujące</span>
                                            }
                                            else if (item.Status == praca_dyplomowa_zesp.Models.TicketStatus.W_trakcie)
                                            {
                                                <span class="badge bg-warning text-dark">W trakcie</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Zamknięte</span>
                                            }
                                        </td>

                                        <td class="small text-muted">@item.CreatedAt.ToString("dd.MM HH:mm")</td>

                                        <td>
                                            @if (item.User != null)
                                            {
                                                <span class="fw-bold">@item.User.UserName</span>
                                            }
                                            else
                                            {
                                                <span>Nieznany</span>
                                            }

                                            @* WYKRZYKNIK DLA ADMINA (JEŚLI USER ODPISAŁ) *@
                                            @if (item.HasUnreadMessage && item.Status != praca_dyplomowa_zesp.Models.TicketStatus.Zamknięte)
                                            {
                                                <span class="ms-2 text-warning" title="Użytkownik odpisał!" data-bs-toggle="tooltip">
                                                    <i class="fas fa-exclamation-circle fa-lg animate-pulse"></i>
                                                </span>
                                            }
                                        </td>

                                        <td>@item.Title</td>

                                        <td class="text-end">
                                            <a asp-controller="Admin" asp-action="TicketDetails" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                                <i class="fas fa-comments me-1"></i> Otwórz
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center p-5 text-muted">
                        <i class="fas fa-envelope fa-3x mb-3" style="opacity: 0.3"></i>
                        <h4>Brak zgłoszeń</h4>
                        <p>Wszystko działa jak należy, nikt nie narzeka! :)</p>
                    </div>
                }
            </div>

        </div>
    </div>
</div>

@* Modale Mute/Ban pozostają bez zmian *@
<div class="modal fade" id="muteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-secondary">
            <form asp-action="MuteUser" method="post">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">Wycisz użytkownika: <span id="muteUserName" class="text-info"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="userId" id="muteUserId" />
                    <label class="form-label">Czas trwania (godziny):</label>
                    <select name="hours" class="form-select bg-secondary text-white mb-3">
                        <option value="0">Zdejmij wyciszenie</option>
                        <option value="1">1 godzina</option>
                        <option value="24">24 godziny</option>
                        <option value="168">7 dni</option>
                    </select>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-info">Zatwierdź</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="banModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-danger">
            <form asp-action="BanUser" method="post">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title">Zbanuj użytkownika: <span id="banUserName" class="text-danger"></span></h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="userId" id="banUserId" />
                    <label class="form-label">Czas trwania (dni):</label>
                    <select name="days" class="form-select bg-secondary text-white mb-3">
                        <option value="0">Odbanuj (0 dni)</option>
                        <option value="1">1 dzień</option>
                        <option value="7">7 dni</option>
                        <option value="30">30 dni</option>
                        <option value="3650">Permanentnie (10 lat)</option>
                    </select>
                    <label class="form-label">Powód (opcjonalnie):</label>
                    <input type="text" name="reason" class="form-control bg-secondary text-white" placeholder="np. Spamowanie" />
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-danger">Wykonaj wyrok</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-white border-danger">
            <form asp-action="RejectGuide" method="post">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title text-danger">
                        <i class="fas fa-ban me-2"></i>Odrzuć poradnik: <span id="rejectGuideTitle" class="text-white"></span>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" id="rejectGuideId" />

                    <div class="mb-3">
                        <label class="form-label">Powód odrzucenia:</label>
                        <textarea name="reason" class="form-control bg-secondary text-white" rows="4" required
                                  placeholder="Napisz, co autor musi poprawić (np. Brak zdjęć, wulgaryzmy)..."></textarea>
                        <div class="form-text text-muted">Autor zobaczy ten komunikat i będzie mógł poprawić post.</div>
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-danger">Potwierdź odrzucenie</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function() {
        var triggerTabList = [].slice.call(document.querySelectorAll('#adminTabs button'))
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl)
            triggerEl.addEventListener('click', function (event) {
                localStorage.setItem('activeAdminTab', event.target.id);
            })
        })

        var activeTabId = localStorage.getItem('activeAdminTab');
        if(activeTabId) {
            var tabToActivate = document.querySelector('#' + activeTabId);
            if(tabToActivate) {
                var tab = new bootstrap.Tab(tabToActivate);
                tab.show();
            }
        }

        var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
        var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
            return new bootstrap.Popover(popoverTriggerEl)
        })
    });

    function openMuteModal(id, name) {
        document.getElementById('muteUserId').value = id;
        document.getElementById('muteUserName').innerText = name;
        var modal = new bootstrap.Modal(document.getElementById('muteModal'));
        modal.show();
    }

    function openBanModal(id, name) {
        document.getElementById('banUserId').value = id;
        document.getElementById('banUserName').innerText = name;
        var modal = new bootstrap.Modal(document.getElementById('banModal'));
        modal.show();
    }

    function openRejectModal(id, title) {
        document.getElementById('rejectGuideId').value = id;
        document.getElementById('rejectGuideTitle').innerText = title;

        var modal = new bootstrap.Modal(document.getElementById('rejectModal'));
        modal.show();
    }
