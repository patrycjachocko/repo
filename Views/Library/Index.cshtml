@using praca_dyplomowa_zesp.Models.Modules.Libraries.UserLibrary
@model UserLibraryIndexViewModel

@{
    ViewData["Title"] = "Moja Biblioteka";
    bool isResultEmpty = !Model.Games.Any();
    // Sprawdzamy czy cokolwiek jest wpisane w szukajkę LUB czy status jest inny niż 'all'
    bool isSearchOrFilterActive = !string.IsNullOrEmpty(Model.SearchString) || Model.StatusFilter != "all";

    int pageSize = 60;
    if (Context.Request.Query.ContainsKey("pageSize"))
    {
        int.TryParse(Context.Request.Query["pageSize"], out pageSize);
    }

    string GetLibUrl(int p, int? s = null, string f = null, string q = null) =>
        Url.Action("Index", new
        {
            page = p,
            pageSize = s ?? pageSize,
            statusFilter = f ?? Model.StatusFilter,
            searchString = q ?? Model.SearchString
        });

    string currentStatusText = Model.StatusFilter switch
    {
        "completed" => "Ukończone",
        "playing" => "W trakcie",
        "toplay" => "Do zagrania",
        _ => "Wszystkie statusy"
    };

    // --- LOGIKA GUZIKA USUWANIA ---
    string deleteBtnText = isSearchOrFilterActive ? "WYCZYŚĆ WIDOCZNE" : "WYCZYŚĆ BIBLIOTEKĘ";
    string deleteModalTitle = isSearchOrFilterActive ? "Usuwanie wybranych gier" : "Formatowanie biblioteki";
    string deleteModalMsg = isSearchOrFilterActive
        ? "Czy chcesz usunąć <strong>tylko gry pasujące do obecnego filtra/wyszukiwania</strong>?"
        : "Czy na pewno chcesz usunąć <strong>wszystkie gry</strong> z biblioteki?";
}

<div class="container-fluid px-4 pt-4 main-container fade-in-up">

    <div class="mb-4">
        <h1 class="browse-title">@ViewData["Title"]</h1>
        <p class="browse-subtitle">Zarządzaj swoją kolekcją i postępami.</p>
    </div>

    @* --- PANEL FILTRÓW --- *@
    <div class="glass-panel mb-4 filter-container">
        <form id="filterForm" asp-action="Index" method="get" class="row g-3 align-items-center">
            <input type="hidden" name="page" value="1" />
            <input type="hidden" name="pageSize" value="@pageSize" />
            <input type="hidden" name="statusFilter" id="hiddenStatusFilter" value="@Model.StatusFilter" />

            @* 1. SEARCH INPUT *@
            <div class="col-md-5">
                <div class="admin-search-merged mb-0 w-100">
                    <div class="admin-search-merged-inner">
                        <div class="form-floating flex-grow-1 h-100">
                            <input type="text" name="searchString" class="form-control h-100 border-0 bg-transparent text-white"
                                   placeholder="Szukaj gry..." value="@Model.SearchString" style="box-shadow: none;">
                            <label>Szukaj w bibliotece...</label>
                        </div>
                        <button type="submit" class="btn-search-integrated h-100"><i class="bi bi-search"></i></button>
                    </div>
                </div>
            </div>

            @* 2. DROPDOWN *@
            <div class="col-md-3">
                <div class="dropdown w-100">
                    <div class="dropdown-toggle no-arrow" data-bs-toggle="dropdown" style="cursor:pointer; text-decoration: none;">
                        <div class="admin-search-merged mb-0 w-100">
                            <div class="admin-search-merged-inner">
                                <div class="form-floating flex-grow-1 h-100">
                                    @* ZMIANA: ps-3 (padding-start: 1rem) przesuwa tekst konkretnie w prawo *@
                                    <div class="form-control border-0 bg-transparent text-white h-100 text-truncate ps-3"
                                         style="padding-top: 1.625rem; padding-bottom: 0.625rem; line-height: 1.5;">
                                        @currentStatusText
                                    </div>
                                    <label class="text-neon-purple" style="opacity:1; transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);">Filtruj po statusie</label>
                                </div>
                                <div class="btn-search-integrated border-0 bg-transparent h-100 d-flex align-items-center">
                                    <i class="bi bi-chevron-down text-neon-purple"></i>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* LISTA ROZWIJANA (Bez zmian) *@
                    <ul class="dropdown-menu dropdown-menu-dark w-100 custom-drop">
                        <li>
                            <a class="dropdown-item text-neon-purple" href="#" onclick="submitStatus('all')">
                                <i class="bi bi-grid-fill me-2"></i> Wszystkie statusy
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-neon-green" href="#" onclick="submitStatus('completed')">
                                <i class="bi bi-check2-circle me-2"></i> Ukończone
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item text-neon-cyan" href="#" onclick="submitStatus('playing')">
                                <i class="bi bi-controller me-2"></i> W trakcie
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item text-warning" href="#" onclick="submitStatus('toplay')">
                                <i class="bi bi-bookmark-plus me-2"></i> Do zagrania
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            @* 3. GUZIKI *@
            <div class="col-md-4">
                <div class="d-flex gap-3 justify-content-end h-100 w-100">
                    <a asp-controller="Games" asp-action="Index" class="btn btn-neon-primary btn-with-text btn-sq flex-grow-1" style="max-width: 220px;">
                        <i class="bi bi-plus-lg fs-5"></i> <span>DODAJ GRĘ</span>
                    </a>

                    @* GUZIK USUWANIA *@
                    <button type="button" class="btn btn-danger-custom btn-with-text btn-sq flex-grow-1" style="max-width: 240px;" data-bs-toggle="modal" data-bs-target="#clearLibraryModal">
                        <i class="bi bi-trash fs-5"></i> <span>@deleteBtnText</span>
                    </button>
                </div>
            </div>
        </form>
    </div>

    @* --- LISTA GIER --- *@
    <div class="row g-4" style="position: relative; z-index: 1;">
        @if (!isResultEmpty)
        {
            @foreach (var game in Model.Games)
            {
                string statusClass = "rating-mid";
                string titleHoverClass = "title-toplay";
                string cardHoverClass = "lib-card-toplay";
                string badgeText = "Do zagrania";

                if (game.ProgressPercent == 100)
                {
                    statusClass = "rating-high"; titleHoverClass = "title-completed"; cardHoverClass = "lib-card-completed"; badgeText = "Ukończona";
                }
                else if (game.ProgressPercent > 0)
                {
                    statusClass = "rating-playing"; titleHoverClass = "title-playing"; cardHoverClass = "lib-card-playing"; badgeText = $"{game.ProgressPercent}%";
                }

                <div class="col-6 col-md-3 col-xl-2">
                    <a asp-action="Details" asp-route-id="@game.DbId" class="game-link-wrapper d-block h-100 library-card-wrapper">
                        <div class="card-game @cardHoverClass">
                            <div class="cover-container">
                                <img src="@(game.CoverUrl ?? "https://via.placeholder.com/264x352.png?text=Brak+okładki")" class="cover-img" alt="@game.Name">
                                <div class="rating-badge @statusClass">@badgeText</div>
                            </div>
                            <div class="game-card-body p-2 text-center">
                                <div class="game-title-text @titleHoverClass" title="@game.Name">@game.Name</div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="glass-panel text-center py-5">
                    <i class="bi bi-controller display-1 mb-3 d-block text-neon-purple" style="opacity: 0.2;"></i>
                    <h4 class="text-white">Brak gier w bibliotece</h4>
                    <p class="text-muted">@(isSearchOrFilterActive ? "Zmień parametry wyszukiwania." : "Zacznij budować swoją kolekcję!")</p>
                </div>
            </div>
        }
    </div>

    @* --- PAGINACJA --- *@
    <div class="mt-5 mb-5">
        <div class="d-flex justify-content-center align-items-center mb-3 gap-2">
            <span class="text-muted small text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">Na stronie:</span>
            <div class="btn-group" role="group">
                @foreach (int size in new[] { 36, 48, 60 })
                {
                    <a href="@GetLibUrl(1, size)" class="btn btn-sm @(pageSize == size ? "btn-neon-purple" : "btn-low-tier")" style="min-width: 40px;">@size</a>
                }
            </div>
        </div>
        @if (Model.TotalPages > 1)
        {
            <nav>
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")"><a class="page-link" href="@GetLibUrl(Model.CurrentPage - 1)"><i class="bi bi-chevron-left"></i> Poprzednia</a></li>
                    <li class="page-item active"><span class="page-link">@Model.CurrentPage</span></li>
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")"><a class="page-link" href="@GetLibUrl(Model.CurrentPage + 1)">Następna <i class="bi bi-chevron-right"></i></a></li>
                </ul>
            </nav>
        }
    </div>
</div>

@* --- MODAL USUWANIA --- *@
<div class="modal fade" id="clearLibraryModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-neon modal-compact" style="border-color: var(--neon-red);">
            <div class="modal-header border-0 justify-content-center pt-4 pb-0">
                <h5 class="modal-title text-neon-danger text-uppercase fw-bold">@deleteModalTitle</h5>
            </div>
            <div class="modal-body text-center py-4">
                <i class="bi bi-exclamation-octagon text-neon-danger display-3 mb-3 d-block"></i>
                <p class="text-white fs-5 mb-1">@Html.Raw(deleteModalMsg)</p>
                <p class="text-muted small mb-0">Tej operacji nie można cofnąć.</p>
            </div>
            <div class="modal-footer border-0 justify-content-center pb-4 pt-0 gap-3">
                @* 1. GUZIK ANULUJ *@
                <button type="button" class="btn btn-ghost-cancel px-4 btn-modal-action" data-bs-dismiss="modal">ANULUJ</button>

                @* 2. FORMULARZ I GUZIK USUŃ *@
                <form asp-action="ClearLibrary" method="post" style="display: contents;">
                    <input type="hidden" name="statusFilter" value="@Model.StatusFilter" />
                    <input type="hidden" name="searchString" value="@Model.SearchString" />
                    <button type="submit" class="btn btn-danger-custom px-4 fw-bold btn-modal-action">USUŃ</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function submitStatus(val) {
        document.getElementById('hiddenStatusFilter').value = val;
        document.getElementById('filterForm').submit();
    }
</script>