@using Microsoft.AspNetCore.Identity
@using praca_dyplomowa_zesp.Models.Users
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameHub</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    @* --- LEAFLET & LEAFLET DRAW CSS --- *@
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/praca_dyplomowa_zesp.styles.css" asp-append-version="true" />

    <style>
        /* Ciemny pasek nawigacyjny */
        .navbar {
            background-color: #1a1a20 !important;
            border-bottom: 1px solid #333 !important;
        }

        .navbar-brand {
            font-weight: bold;
            color: #fff !important;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .nav-link {
            color: #ddd !important;
            transition: color 0.3s;
        }

            .nav-link:hover {
                color: #fff !important;
                text-shadow: 0 0 10px rgba(255,255,255,0.5);
            }

        /* Stopka */
        footer {
            background-color: #1a1a20;
            color: #aaa;
            border-top: 1px solid #333 !important;
        }

            footer a {
                color: #ccc;
                text-decoration: none;
            }

                footer a:hover {
                    color: #fff;
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GameHub</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Games" asp-action="Index" asp-route-mode="browse">Przeglądaj Gry</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="guidesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               asp-controller="Games" asp-action="Index" asp-route-mode="guides">
                                Guides & Tips
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="guidesDropdown">
                                @await Component.InvokeAsync("PopularGames")
                            </ul>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Library" asp-action="Index">Moja Biblioteka</a>
                            </li>

                            @* --- LOGIKA: Jeśli połączony ze Steam, pokaż link obok biblioteki --- *@
                            var user = await UserManager.GetUserAsync(User);
                            if (user != null && !string.IsNullOrEmpty(user.SteamId))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Profile" asp-action="SteamLibrary" style="color: #66c0f4 !important;">
                                        <i class="bi bi-steam"></i> Biblioteka Steam
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @* --- OBSŁUGA KOMUNIKATÓW TEMPDATA --- *@

            @* 1. Komunikaty sukcesu (zielone) *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @* 2. Komunikaty błędów (czerwone) *@
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @* --------------------------------------------- *@

            @RenderBody()
        </main>
    </div>

    @* --- STOPKA Z LINKIEM DO TICKETÓW --- *@
    <footer class="border-top footer text-muted mt-5 py-3">
        <div class="container text-center">
            &copy; 2025 - GameHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

            @* Link do ticketów *@
            | <a asp-controller="Tickets" asp-action="Index">
                <i class="fas fa-headset"></i> Zgłoś błąd / Kontakt
            </a>
        </div>
    </footer>

    @* --- WAŻNE: Załadowanie Modali Logowania/Rejestracji --- *@
    <partial name="_AuthModals" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* --- LEAFLET & LEAFLET DRAW JS --- *@
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>