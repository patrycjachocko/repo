@{
    ViewData["Title"] = "O Projekcie";
}

<div class="container d-flex align-items-center justify-content-center fade-in-up" style="min-height: 80vh;">

    @* text-center tutaj załatwia centrowanie całej dolnej części *@
    <div class="glass-panel w-100 shadow-lg text-center" style="max-width: 900px; border-width: 2px;">

        @* Nagłówek *@
        <div class="info-label mb-3" style="font-size: 1rem;">
            <i class="bi bi-mortarboard-fill me-2"></i>Praca dyplowmowa inżynierska
        </div>

        @* Tytuł *@
        <h1 class="text-neon-title mb-5" style="font-size: clamp(1.5rem, 4vw, 2.5rem); line-height: 1.3;">
            Aplikacja webowa do zarządzania stanem gier i wspierania rozgrywki
        </h1>

        @* Autorzy - usunięto jakiekolwiek klasy hover, są teraz statyczni *@
        <div class="row g-4 justify-content-center mb-5">
            <div class="col-12 col-md-5">
                <div class="cyber-panel panel-neon-purple py-3 px-4">
                    <span class="info-label mb-1" style="color: var(--neon-purple); text-shadow: 0 0 5px var(--neon-purple);">Autor</span>
                    <span class="h4 fw-bold text-white mb-0">Oliwier Ancutko</span>
                </div>
            </div>

            <div class="col-12 col-md-5">
                <div class="cyber-panel panel-neon-purple py-3 px-4">
                    <span class="info-label mb-1" style="color: var(--neon-purple); text-shadow: 0 0 5px var(--neon-purple);">Autor</span>
                    <span class="h4 fw-bold text-white mb-0">Patrycja Choćko</span>
                </div>
            </div>
        </div>

        @* SEKCJA TECHNICZNA / API *@
        <div class="mt-5 pt-4 border-top border-secondary border-opacity-10">
            <div class="row justify-content-center">
                <div class="col-md-10">
                    <div class="p-3 rounded-3" style="background: rgba(0,0,0,0.15); border: 1px solid rgba(255,255,255,0.05);">
                        <div class="info-label mb-2" style="font-size: 0.7rem; letter-spacing: 1px; opacity: 0.6;">
                            Integracje i Źródła Danych
                        </div>

                        <div class="d-flex justify-content-center gap-4 mb-3 flex-wrap">
                            <span class="text-white-50 small">
                                <i class="fab fa-steam me-1"></i> Powered by <strong>Steam</strong>
                            </span>
                            <span class="text-white-50 small">
                                <i class="fas fa-database me-1"></i> Data by <strong>IGDB</strong>
                            </span>
                        </div>

                        <p class="text-muted mb-0" style="font-size: 0.7rem; line-height: 1.4; max-width: 600px; margin: 0 auto;">
                            Wszystkie dane dotyczące gier oraz logotypy są własnością ich odpowiednich posiadaczy.
                            Steam and the Steam logo are trademarks of Valve Corporation.
                            This project is not associated with Valve Corporation.
                            Game information is provided by IGDB.com.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        @* Stopka *@
        <div class="mt-5 text-muted small text-uppercase fw-bold" style="letter-spacing: 2px; opacity: 0.4;">
            Politechnika Białostocka &copy; 2025-2026
        </div>
    </div>
</div>