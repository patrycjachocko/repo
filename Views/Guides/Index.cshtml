@model praca_dyplomowa_zesp.Models.Modules.Guides.GuidesViewModel
@{
    ViewData["Title"] = $"{Model.GameName} - Poradniki";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom border-secondary">
        <div>
            <h1 class="display-5 fw-bold text-primary">@Model.GameName</h1>
            <p class="text-muted lead">Baza wiedzy i poradników społeczności</p>
        </div>
        <div class="d-flex gap-2">
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-action="Create" asp-route-gameId="@Model.IgdbGameId" class="btn btn-success btn-lg">
                    <i class="fas fa-plus"></i> Napisz poradnik
                </a>
            }

            @if (Model.IsInLibrary)
            {
                <button class="btn btn-outline-success btn-lg disabled"><i class="fas fa-check"></i> W bibliotece</button>
            }
            else if (User.Identity.IsAuthenticated)
            {
                <form asp-controller="Library" asp-action="Create" method="post">
                    <input type="hidden" name="IgdbGameId" value="@Model.IgdbGameId" />
                    <input type="hidden" name="returnUrl" value="@(Context.Request.Path + Context.Request.QueryString)" />
                    <button type="submit" class="btn btn-outline-primary btn-lg">Dodaj do biblioteki</button>
                </form>
            }
        </div>
    </div>

    @if (Model.Guides.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var guide in Model.Guides)
            {
                <div class="col">
                    <div class="card h-100 bg-dark text-white border-secondary shadow-lg hover-effect">
                        <div style="height: 200px; overflow: hidden; background-color: #2c2c35; display: flex; align-items: center; justify-content: center;">
                            @if (guide.CoverImage != null)
                            {
                                <img src="data:@guide.CoverImageContentType;base64,@Convert.ToBase64String(guide.CoverImage)"
                                     class="card-img-top" style="width: 100%; height: 100%; object-fit: cover;" alt="@guide.Title">
                            }
                            else
                            {
                                <i class="fas fa-book-open fa-4x text-secondary"></i>
                            }
                        </div>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-primary fw-bold">@guide.Title</h5>
                            <p class="card-text text-muted small mb-3">
                                Autor: <span class="text-white">@guide.User?.UserName</span> | @guide.CreatedAt.ToString("dd.MM.yyyy")
                            </p>
                            <p class="card-text flex-grow-1">@guide.Description</p>

                            <div class="mt-3">
                                <a asp-action="Details" asp-route-id="@guide.Id" class="btn btn-outline-light w-100 stretched-link">Czytaj dalej</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-3"><i class="fas fa-ghost fa-3x text-muted"></i></div>
            <h3 class="text-muted">Pusto tu...</h3>
            <p class="text-secondary">Nikt jeszcze nie napisał poradnika do tej gry.</p>
        </div>
    }
</div>

<style>
    .hover-effect {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.5) !important;
            border-color: var(--bs-primary) !important;
        }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
}