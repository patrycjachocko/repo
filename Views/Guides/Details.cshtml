@using praca_dyplomowa_zesp.Models.Interactions.Reactions
@using System.Security.Claims
@model praca_dyplomowa_zesp.Models.Modules.Guides.GuideDetailsViewModel

@{
    ViewData["Title"] = Model.Guide.Title;

    // --- POPRAWKA: POBIERAMY ID AKTUALNIE ZALOGOWANEGO UŻYTKOWNIKA ---
    Guid currentUserId = Guid.Empty;
    if (User.Identity.IsAuthenticated)
    {
        var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (userIdClaim != null)
        {
            Guid.TryParse(userIdClaim, out currentUserId);
        }
    }
    // ------------------------------------------------------------------
}

<div class="container mt-4">

    @* --- ALERT O STATUSIE (Jeśli niezatwierdzony i NIE usunięty) --- *@
    @if (!Model.Guide.IsApproved && !Model.Guide.IsDeleted)
    {
        <div class="alert alert-warning border-warning d-flex align-items-center mb-4" role="alert">
            <i class="fas fa-lock fa-2x me-3"></i>
            <div>
                <h5 class="alert-heading fw-bold mb-1">Poradnik oczekuje na akceptację</h5>
            </div>
        </div>
    }

    @* --- ALERT O STATUSIE (Jeśli w koszu) --- *@
    @if (Model.Guide.IsDeleted)
    {
        <div class="alert alert-danger border-danger mb-4 shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-trash-alt fa-2x me-3"></i>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">Ten poradnik znajduje się w KOSZU</h5>
                    <p class="mb-0 small">Został usunięty lub odrzucony. Jest widoczny tylko dla administracji.</p>
                </div>
            </div>

            @* --- PRZYCISKI ADMINISTRACYJNE DLA KOSZA --- *@
            @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
            {
                <hr class="border-danger my-3">
                <div class="d-flex gap-3 justify-content-end">
                    @* Formularz Przywracania *@
                    <form asp-controller="Admin" asp-action="RestoreGuide" method="post">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-warning btn-sm">
                            <i class="fas fa-trash-restore"></i> Przywróć z kosza
                        </button>
                    </form>

                    @* Formularz Usuwania Permanentnego *@
                    <form asp-controller="Admin" asp-action="DeletePermanently" method="post" onsubmit="return confirm('Czy na pewno chcesz trwale usunąć ten poradnik? Ta operacja jest NIEODWRACALNA.');">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-dark btn-sm text-danger border-danger">
                            <i class="fas fa-times"></i> Usuń na zawsze
                        </button>
                    </form>
                </div>
            }
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Index" asp-route-gameId="@Model.Guide.IgdbGameId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Wróć do listy
        </a>

        @* Przycisk PDF *@
        <a asp-action="DownloadPdf" asp-route-id="@Model.Guide.Id" class="btn btn-outline-danger" target="_blank">
            <i class="fas fa-file-pdf"></i> Pobierz jako PDF
        </a>
    </div>

    @* --- NAGŁÓWEK PORADNIKA --- *@
    <div class="card bg-dark text-white border-secondary shadow-lg mb-4">
        <div class="card-header border-secondary p-4 text-center" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.9)), url('@(Model.Guide.CoverImage != null ? $"data:{Model.Guide.CoverImageContentType};base64,{Convert.ToBase64String(Model.Guide.CoverImage)}" : "")') center/cover no-repeat;">
            <h1 class="display-4 fw-bold mt-3">@Model.Guide.Title</h1>
            <p class="lead text-light mb-4">@Model.Guide.Description</p>
            <div class="d-flex justify-content-center align-items-center gap-3 text-muted">
                <span><i class="fas fa-user"></i> @Model.Guide.User?.UserName</span>
                <span><i class="fas fa-calendar"></i> @Model.Guide.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                <span><i class="fas fa-star text-warning"></i> Średnia: @Model.AverageRating.ToString("0.0")/5.0</span>
            </div>
        </div>

        <div class="card-body p-4 p-md-5 guide-content">
            @if (!string.IsNullOrEmpty(Model.Guide.Content))
            {
                @Html.Raw(Model.Guide.Content)
            }
            else
            {
                <p class="text-muted text-center">Ten poradnik nie ma jeszcze treści.</p>
            }
        </div>

        @* Przyciski Edycji/Usuwania dla autora/admina (Ukryte jeśli jest w koszu) *@
        @if (!Model.Guide.IsDeleted && User.Identity.IsAuthenticated && (User.Identity.Name == Model.Guide.User?.UserName || User.IsInRole("Admin") || User.IsInRole("Moderator")))
        {
            <div class="card-footer border-secondary p-3 d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Guide.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edytuj</a>
                <a asp-action="Delete" asp-route-id="@Model.Guide.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Usuń</a>
            </div>
        }
    </div>

    @* --- PANEL DECYZYJNY (Tylko dla Admina/Moderatora) --- *@
    @if (!Model.Guide.IsApproved && !Model.Guide.IsDeleted && (User.IsInRole("Admin") || User.IsInRole("Moderator")))
    {
        <div class="card bg-dark border-warning mb-5 shadow">
            <div class="card-header border-warning bg-transparent text-warning">
                <h4 class="mb-0"><i class="fas fa-user-shield"></i> Decyzja Moderatora</h4>
            </div>
            <div class="card-body text-center">
                <p class="lead mb-4">Ten poradnik oczekuje na akceptację. Zapoznałeś się z treścią - jaka jest Twoja decyzja?</p>

                <div class="d-flex justify-content-center gap-3">
                    @* Formularz Akceptacji *@
                    <form asp-controller="Admin" asp-action="ApproveGuide" method="post">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-success btn-lg px-4">
                            <i class="fas fa-check me-2"></i> Zatwierdź i Opublikuj
                        </button>
                    </form>

                    @* Formularz Odrzucenia (TERAZ DO KOSZA) *@
                    <form asp-controller="Admin" asp-action="RejectGuide" method="post" onsubmit="return confirm('Czy na pewno chcesz odrzucić ten poradnik? Trafi on do KOSZA, skąd będzie można go później usunąć permanentnie.');">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-danger btn-lg px-4">
                            <i class="fas fa-trash me-2"></i> Odrzuć (do kosza)
                        </button>
                    </form>
                </div>
            </div>
            <div class="card-footer border-warning text-muted small text-center">
                Zatwierdzenie sprawi, że poradnik stanie się widoczny dla wszystkich. Odrzucenie przeniesie go do kosza.
            </div>
        </div>
    }

    @* --- SEKCJA OCENY (Tylko jeśli zatwierdzony i nie usunięty) --- *@
    @if (Model.Guide.IsApproved && !Model.Guide.IsDeleted)
    {
        <div class="card bg-dark text-white border-secondary mb-5">
            <div class="card-body text-center">
                <h4 class="mb-3">Oceń ten poradnik</h4>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.AntiForgeryToken()

                    <input type="hidden" id="guideId" value="@Model.Guide.Id" />
                    <input type="hidden" id="currentRating" value="@Model.UserRating" />

                    <div class="d-flex flex-column justify-content-center align-items-center gap-2 mb-2">
                        <div id="star-container" style="cursor: pointer; font-size: 2rem; color: #ccc;">
                            @* Gwiazdki *@
                            <i class="far fa-star star-icon" data-value="1"></i>
                            <i class="far fa-star star-icon" data-value="2"></i>
                            <i class="far fa-star star-icon" data-value="3"></i>
                            <i class="far fa-star star-icon" data-value="4"></i>
                            <i class="far fa-star star-icon" data-value="5"></i>
                        </div>

                        <div class="d-flex align-items-center gap-2">
                            <span class="text-muted small">Twoja ocena:</span>
                            <span id="rating-display" class="fs-4 fw-bold text-warning">
                                @(Model.UserRating > 0 ? Model.UserRating.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture) : "0.0")
                            </span>
                        </div>

                        <span id="save-message" class="text-success fw-bold" style="opacity: 0; transition: opacity 0.5s;">
                            <i class="fas fa-check"></i> Zapisano!
                        </span>
                    </div>
                }
                else
                {
                    <p class="text-muted"><a asp-controller="Account" asp-action="Login">Zaloguj się</a>, aby ocenić poradnik.</p>
                }
            </div>
        </div>

        @* --- SEKCJA KOMENTARZY --- *@
        <div class="comments-section mb-5" id="comments">
            <h3 class="text-white border-bottom border-secondary pb-2 mb-4">Komentarze (@Model.Comments.Count)</h3>

            @* Formularz dodawania komentarza *@
            @if (User.Identity.IsAuthenticated)
            {
                <div class="card bg-dark border-secondary mb-4">
                    <div class="card-body">
                        <form asp-action="AddComment" method="post">
                            <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                            <div class="mb-3">
                                <textarea name="content" class="form-control bg-dark text-white border-secondary" rows="3" placeholder="Napisz komentarz..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary float-end">Dodaj komentarz</button>
                        </form>
                    </div>
                </div>
            }

            @* Lista komentarzy *@
            @foreach (var comment in Model.Comments)
            {
                var isCommentAuthor = User.Identity.IsAuthenticated && comment.Author.UserName == User.Identity.Name;
                var canManageComment = isCommentAuthor || User.IsInRole("Admin") || User.IsInRole("Moderator");

                // SPRAWDZAMY CZY OBECNY UŻYTKOWNIK (currentUserId) POLUBIŁ
                var userLikedComment = comment.Reactions.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Like);
                var userDislikedComment = comment.Reactions.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Dislike);

                <div class="card bg-dark border-secondary mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <strong class="text-primary me-2">@comment.Author.UserName</strong>
                                <small class="text-muted">@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>

                            @* MENU ZARZĄDZANIA KOMENTARZEM *@
                            @if (canManageComment)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                        @if (isCommentAuthor)
                                        {
                                            <li><a class="dropdown-item" href="#" onclick="toggleEditForm('comment-edit-@comment.Id'); return false;"><i class="fas fa-edit me-2"></i> Edytuj</a></li>
                                        }
                                        <li>
                                            <form asp-action="DeleteComment" method="post" onsubmit="return confirm('Czy na pewno chcesz usunąć ten komentarz i wszystkie odpowiedzi?');">
                                                <input type="hidden" name="commentId" value="@comment.Id" />
                                                <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                                <button type="submit" class="dropdown-item text-danger"><i class="fas fa-trash-alt me-2"></i> Usuń</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>

                        @* TREŚĆ KOMENTARZA *@
                        <div id="comment-content-@comment.Id">
                            <p class="card-text text-light">@comment.Content</p>
                        </div>

                        @* FORMULARZ EDYCJI KOMENTARZA *@
                        @if (isCommentAuthor)
                        {
                            <div id="comment-edit-@comment.Id" class="d-none mb-3">
                                <form asp-action="EditComment" method="post">
                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                    <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                    <textarea name="content" class="form-control bg-dark text-white border-secondary mb-2">@comment.Content</textarea>
                                    <button type="submit" class="btn btn-sm btn-success">Zapisz</button>
                                    <button type="button" class="btn btn-sm btn-secondary" onclick="toggleEditForm('comment-edit-@comment.Id')">Anuluj</button>
                                </form>
                            </div>
                        }

                        @* PASEK AKCJI (Lajki, Odpowiedz) *@
                        <div class="d-flex align-items-center gap-3 mt-3">
                            <form asp-action="ToggleReaction" method="post" class="d-inline">
                                <input type="hidden" name="commentId" value="@comment.Id" />
                                <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                <input type="hidden" name="isUpvote" value="true" />
                                <button class="btn btn-link p-0 text-decoration-none action-btn @(userLikedComment ? "text-success" : "text-muted")">
                                    <i class="fas fa-thumbs-up"></i> @comment.Reactions.Count(r => r.Type == ReactionType.Like)
                                </button>
                            </form>

                            <form asp-action="ToggleReaction" method="post" class="d-inline">
                                <input type="hidden" name="commentId" value="@comment.Id" />
                                <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                <input type="hidden" name="isUpvote" value="false" />
                                <button class="btn btn-link p-0 text-decoration-none action-btn @(userDislikedComment ? "text-danger" : "text-muted")">
                                    <i class="fas fa-thumbs-down"></i> @comment.Reactions.Count(r => r.Type == ReactionType.Dislike)
                                </button>
                            </form>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <button class="btn btn-link p-0 text-decoration-none text-muted action-btn" onclick="document.getElementById('reply-form-@comment.Id').classList.toggle('d-none')">
                                    <i class="fas fa-reply"></i> Odpowiedz
                                </button>
                            }
                        </div>

                        @* Formularz odpowiedzi *@
                        <div id="reply-form-@comment.Id" class="mt-3 d-none border-top border-secondary pt-3">
                            <form asp-action="AddReply" method="post">
                                <input type="hidden" name="commentId" value="@comment.Id" />
                                <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                <div class="input-group">
                                    <input type="text" name="content" class="form-control bg-dark text-white border-secondary" placeholder="Twoja odpowiedź..." required>
                                    <button class="btn btn-primary" type="submit">Wyślij</button>
                                </div>
                            </form>
                        </div>

                        @* ODPOWIEDZI *@
                        @if (comment.Replies != null && comment.Replies.Any())
                        {
                            <div class="mt-3 ps-4 border-start border-secondary">
                                @foreach (var reply in comment.Replies)
                                {
                                    var isReplyAuthor = User.Identity.IsAuthenticated && reply.Author.UserName == User.Identity.Name;
                                    var canManageReply = isReplyAuthor || User.IsInRole("Admin") || User.IsInRole("Moderator");

                                    // Sprawdzamy reakcje dla odpowiedzi względem currentUserId
                                    var replyLikes = reply.Reactions?.Count(r => r.Type == ReactionType.Like) ?? 0;
                                    var replyDislikes = reply.Reactions?.Count(r => r.Type == ReactionType.Dislike) ?? 0;
                                    var userLikedReply = reply.Reactions?.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Like) ?? false;
                                    var userDislikedReply = reply.Reactions?.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Dislike) ?? false;

                                    <div class="mb-3 pb-2 border-bottom border-secondary" style="border-bottom-style: dashed !important; border-color: #444 !important;">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <strong class="text-info small">@reply.Author.UserName</strong>
                                                <small class="text-muted" style="font-size: 0.8rem;">@reply.CreatedAt.ToString("dd.MM HH:mm")</small>
                                            </div>

                                            @* MENU ZARZĄDZANIA ODPOWIEDZIĄ *@
                                            @if (canManageReply)
                                            {
                                                <div class="dropdown">
                                                    <button class="btn btn-link text-muted p-0" style="font-size: 0.8rem;" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="fas fa-ellipsis-h"></i>
                                                    </button>
                                                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                                        @if (isReplyAuthor)
                                                        {
                                                            <li><a class="dropdown-item btn-sm" href="#" onclick="toggleEditForm('reply-edit-@reply.Id'); return false;">Edytuj</a></li>
                                                        }
                                                        <li>
                                                            <form asp-action="DeleteReply" method="post" onsubmit="return confirm('Usunąć odpowiedź?');">
                                                                <input type="hidden" name="replyId" value="@reply.Id" />
                                                                <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                                                <button type="submit" class="dropdown-item text-danger btn-sm">Usuń</button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            }
                                        </div>

                                        @* TREŚĆ ODPOWIEDZI *@
                                        <div id="reply-content-@reply.Id">
                                            <p class="mb-1 text-light small">@reply.Content</p>
                                        </div>

                                        @* FORMULARZ EDYCJI ODPOWIEDZI *@
                                        @if (isReplyAuthor)
                                        {
                                            <div id="reply-edit-@reply.Id" class="d-none mb-2">
                                                <form asp-action="EditReply" method="post">
                                                    <input type="hidden" name="replyId" value="@reply.Id" />
                                                    <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                                    <div class="input-group input-group-sm">
                                                        <input type="text" name="content" class="form-control bg-dark text-white border-secondary" value="@reply.Content">
                                                        <button class="btn btn-success" type="submit">OK</button>
                                                        <button class="btn btn-secondary" type="button" onclick="toggleEditForm('reply-edit-@reply.Id')">X</button>
                                                    </div>
                                                </form>
                                            </div>
                                        }

                                        @* PASEK AKCJI DLA ODPOWIEDZI *@
                                        <div class="d-flex align-items-center gap-2">
                                            <form asp-action="ToggleReaction" method="post" class="d-inline">
                                                <input type="hidden" name="replyId" value="@reply.Id" />
                                                <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                                <input type="hidden" name="isUpvote" value="true" />
                                                <button class="btn btn-link p-0 text-decoration-none action-btn-sm @(userLikedReply ? "text-success" : "text-muted")" style="font-size: 0.8rem;">
                                                    <i class="fas fa-thumbs-up"></i> @replyLikes
                                                </button>
                                            </form>
                                            <form asp-action="ToggleReaction" method="post" class="d-inline">
                                                <input type="hidden" name="replyId" value="@reply.Id" />
                                                <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                                <input type="hidden" name="isUpvote" value="false" />
                                                <button class="btn btn-link p-0 text-decoration-none action-btn-sm @(userDislikedReply ? "text-danger" : "text-muted")" style="font-size: 0.8rem;">
                                                    <i class="fas fa-thumbs-down"></i> @replyDislikes
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .guide-content {
        font-size: 1.1rem;
        line-height: 1.6;
    }

        .guide-content img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin: 15px 0;
        }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <style>
        .action-btn:hover {
            color: #fff !important;
            transform: scale(1.1);
            transition: all 0.2s;
        }

        .action-btn-sm:hover {
            color: #fff !important;
            transition: all 0.2s;
        }
    </style>

    <script>
        function toggleEditForm(id) {
            var form = document.getElementById(id);
            if (form.classList.contains('d-none')) {
                form.classList.remove('d-none');
            } else {
                form.classList.add('d-none');
            }
        }
    </script>

    @if (Model.Guide.IsApproved && !Model.Guide.IsDeleted)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function() {
                const container = document.getElementById('star-container');
                if (!container) return;

                const stars = container.querySelectorAll('.star-icon');
                const display = document.getElementById('rating-display');
                const guideId = document.getElementById('guideId').value;
                const saveMessage = document.getElementById('save-message');
                const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                const token = tokenInput ? tokenInput.value : '';

                let currentRating = parseFloat(document.getElementById('currentRating').value.replace(',', '.'));

                function renderStars(value) {
                    stars.forEach((star, index) => {
                        const starValue = index + 1;
                        star.className = 'star-icon far fa-star';
                        star.style.color = '#ccc';

                        if (value >= starValue) {
                            star.className = 'star-icon fas fa-star';
                            star.style.color = '#ffc107';
                        } else if (value >= starValue - 0.5) {
                            star.className = 'star-icon fas fa-star-half-alt';
                            star.style.color = '#ffc107';
                        }
                    });
                }

                renderStars(currentRating);

                stars.forEach((star, index) => {
                    star.addEventListener('mousemove', (e) => {
                        const rect = star.getBoundingClientRect();
                        const isLeftHalf = (e.clientX - rect.left) < (rect.width / 2);
                        let hoverValue = index + 1;
                        if (isLeftHalf) hoverValue -= 0.5;
                        renderStars(hoverValue);
                    });
                });

                container.addEventListener('mouseleave', () => {
                    renderStars(currentRating);
                });

                stars.forEach((star, index) => {
                    star.addEventListener('click', (e) => {
                        const rect = star.getBoundingClientRect();
                        const isLeftHalf = (e.clientX - rect.left) < (rect.width / 2);
                        let selectedValue = index + 1;
                        if (isLeftHalf) selectedValue -= 0.5;

                        currentRating = selectedValue;
                        display.innerText = selectedValue.toFixed(1);
                        renderStars(currentRating);
                        sendRating(selectedValue);
                    });
                });

                function sendRating(value) {
                    saveMessage.style.opacity = '0';

                    fetch('/Guides/RateGuide', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        },
                        body: JSON.stringify({
                            guideId: parseInt(guideId),
                            ratingValue: value
                        })
                    })
                    .then(response => {
                        if (response.ok) return response.json();
                        throw new Error('Błąd sieci');
                    })
                    .then(data => {
                        if(data.success) {
                            saveMessage.innerText = "Zapisano!";
                            saveMessage.style.opacity = '1';
                            setTimeout(() => { saveMessage.style.opacity = '0'; }, 2000);
