@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>

    <script>
        function toggleEditForm(id) {
            var form = document.getElementById(id);
            if (form.classList.contains('d-none')) { form.classList.remove('d-none'); } else { form.classList.add('d-none'); }
        }

        // --- INTERAKTYWNA MAPA (LEAFLET) ---
        function fixUrl(url) {
            if (!url) return '';
            if (url.startsWith('http') || url.startsWith('data:')) return url;
            if (!url.startsWith('/')) return '/' + url;
            return url;
        }

        document.addEventListener("DOMContentLoaded", function() {
            var mapImages = document.querySelectorAll('img.interactive-map-source');

            mapImages.forEach(function(img) {
                var rawUrl = img.getAttribute('data-origin-src') || img.getAttribute('src');
                var imageUrl = fixUrl(rawUrl);
                var geoJsonRaw = img.getAttribute('data-geojson');

                if (!geoJsonRaw) return; // Jeśli nie ma danych mapy, zostawiamy jako zwykły obrazek

                var mapContainer = document.createElement('div');
                var mapId = 'map-' + Math.floor(Math.random() * 1000000);
                mapContainer.id = mapId;
                mapContainer.style.width = "100%";
                mapContainer.style.height = "500px";
                mapContainer.style.background = "#111"; // Ciemne tło
                mapContainer.style.borderRadius = "8px";
                mapContainer.className = "shadow-lg border border-secondary mb-4";
                mapContainer.style.zIndex = "1";

                img.parentNode.replaceChild(mapContainer, img);

                var map = L.map(mapId, {
                    crs: L.CRS.Simple,
                    minZoom: -5, maxZoom: 4, zoomSnap: 0.25,
                    scrollWheelZoom: false // Wyłączone domyślnie, włącza się po kliknięciu
                });
                map.on('focus', () => { map.scrollWheelZoom.enable(); });
                map.on('blur', () => { map.scrollWheelZoom.disable(); });

                var imageObj = new Image();
                imageObj.src = imageUrl;

                imageObj.onload = function() {
                    var w = this.width;
                    var h = this.height;

                    // Skalowanie kontenera (opcjonalne)
                    // mapContainer.style.height = "600px";

                    var southWest = map.unproject([0, h], map.getMaxZoom() - 1);
                    var northEast = map.unproject([w, 0], map.getMaxZoom() - 1);
                    var bounds = new L.LatLngBounds(southWest, northEast);

                    L.imageOverlay(imageUrl, bounds).addTo(map);
                    map.fitBounds(bounds);

                    // Ustawienie zoomu, by obrazek wypełnił widok
                    map.setZoom(map.getBoundsZoom(bounds));

                    // Rysowanie
                    if (geoJsonRaw) {
                        try {
                            var geoJsonData = JSON.parse(geoJsonRaw);
                            L.geoJSON(geoJsonData, {
                                style: function (feature) {
                                    var color = feature.properties && feature.properties.color ? feature.properties.color : '#00f3ff';
                                    return { color: color, fillColor: color, weight: 4, fillOpacity: 0.4 };
                                },
                                pointToLayer: function (feature, latlng) {
                                    var color = feature.properties && feature.properties.color ? feature.properties.color : '#dc3545';
                                    // Prosta ikonka lub customowa pinezka
                                    return L.circleMarker(latlng, {
                                        radius: 8,
                                        fillColor: color,
                                        color: "#fff",
                                        weight: 2,
                                        opacity: 1,
                                        fillOpacity: 0.8
                                    });
                                },
                                onEachFeature: function (feature, layer) {
                                    if (feature.properties && feature.properties.note) {
                                        layer.bindPopup(feature.properties.note);
                                    }
                                }
                            }).addTo(map);
                        } catch (e) { console.error("Błąd GeoJSON:", e); }
                    }
                };
            });
        });

        // --- OCENIANIE ---
        document.addEventListener("DOMContentLoaded", function() {
            const container = document.getElementById('star-container');
            if (!container) return;
            const stars = container.querySelectorAll('.star-icon');
            const display = document.getElementById('rating-display');
            const guideId = document.getElementById('guideId').value;
            const saveMessage = document.getElementById('save-message');
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : '';
            let currentRating = parseFloat(document.getElementById('currentRating').value.replace(',', '.'));

            function renderStars(value) {
                stars.forEach((star, index) => {
                    const starValue = index + 1;
                    star.className = 'star-icon far fa-star';
                    star.style.color = '#444'; // Ciemny szary domyślnie
                    if (value >= starValue) { star.className = 'star-icon fas fa-star'; star.style.color = '#fcee0a'; } // Neonowy żółty
                    else if (value >= starValue - 0.5) { star.className = 'star-icon fas fa-star-half-alt'; star.style.color = '#fcee0a'; }
                });
            }
            renderStars(currentRating);

            stars.forEach((star, index) => {
                star.addEventListener('mousemove', (e) => {
                    const rect = star.getBoundingClientRect();
                    const isLeftHalf = (e.clientX - rect.left) < (rect.width / 2);
                    let hoverValue = index + 1;
                    if (isLeftHalf) hoverValue -= 0.5;
                    renderStars(hoverValue);
                });
                star.addEventListener('click', (e) => {
                    const rect = star.getBoundingClientRect();
                    const isLeftHalf = (e.clientX - rect.left) < (rect.width / 2);
                    let selectedValue = index + 1;
                    if (isLeftHalf) selectedValue -= 0.5;
                    currentRating = selectedValue;
                    display.innerText = selectedValue.toFixed(1);
                    renderStars(currentRating);
                    sendRating(selectedValue);
                });
            });
            container.addEventListener('mouseleave', () => { renderStars(currentRating); });

            function sendRating(value) {
                saveMessage.style.opacity = '0';
                fetch('/Guides/RateGuide', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token },
                    body: JSON.stringify({ guideId: parseInt(guideId), ratingValue: value })
                }).then(response => { if (response.ok) return response.json(); throw new Error('Błąd'); })
                  .then(data => { if(data.success) { saveMessage.style.opacity = '1'; setTimeout(() => { saveMessage.style.opacity = '0'; }, 2000); } });
            }
        });
    </script>
}