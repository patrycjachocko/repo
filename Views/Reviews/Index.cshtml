@using praca_dyplomowa_zesp.Models.Interactions.Reactions
@using praca_dyplomowa_zesp.Models.ViewModels
@using System.Globalization
@inject praca_dyplomowa.Data.ApplicationDbContext _context
@model List<praca_dyplomowa_zesp.Models.Modules.Games.GameReview>

@{
    ViewData["Title"] = "Recenzje - " + ViewBag.GameName;
    long gameId = ViewBag.GameId;
    string gameName = ViewBag.GameName;
    string currentSort = ViewBag.CurrentSort as string ?? "best";

    var currentUserIdStr = ViewBag.CurrentUserId as string;
    Guid currentUserId = Guid.Empty;
    if (!string.IsNullOrEmpty(currentUserIdStr))
    {
        Guid.TryParse(currentUserIdStr, out currentUserId);
    }

    bool isAdminOrMod = User.IsInRole("Admin") || User.IsInRole("Moderator");
    var ratingsModel = ViewBag.Ratings as GameRatingViewModel;
    double myCurrentRating = ratingsModel?.UserPersonalRating ?? 0;

    var userRatings = _context.GameRates
        .Where(r => r.IgdbGameId == gameId)
        .ToDictionary(r => r.UserId, r => r.Value);

    IEnumerable<praca_dyplomowa_zesp.Models.Modules.Games.GameReview> reviewsToDisplay = Model;

    if (reviewsToDisplay != null)
    {
        if (currentSort == "highest_rating")
        {
            reviewsToDisplay = reviewsToDisplay
                .OrderByDescending(r => userRatings.ContainsKey(r.UserId) ? userRatings[r.UserId] : 0)
                .ThenByDescending(r => r.CreatedAt);
        }
        else if (currentSort == "lowest_rating")
        {
            reviewsToDisplay = reviewsToDisplay
                .OrderBy(r => userRatings.ContainsKey(r.UserId) ? userRatings[r.UserId] : 999)
                .ThenByDescending(r => r.CreatedAt);
        }
    }
}

@* Dodano klasę 'fade-in-up' do głównego kontenera *@
<div class="container mt-3 pb-5 main-container fade-in-up">

    @* --- NAGŁÓWEK --- *@
    <div class="text-center mb-4">
        <h1 class="text-neon-title mb-1" style="font-size: 3.5rem;">
            @gameName
        </h1>
        <h2 class="text-white fw-bold text-uppercase m-0" style="font-size: 1.2rem; letter-spacing: 4px; text-shadow: 0 0 15px rgba(255, 255, 255, 0.5); opacity: 0.9;">
            RECENZJE
        </h2>
    </div>

    @* --- PANEL OCEN --- *@
    <div class="mb-5">
        @if (ratingsModel != null)
        {
            <partial name="_GameRatingPartial" model="ratingsModel" />
        }
    </div>

    @* --- PASEK NARZĘDZI --- *@
    <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom" style="border-color: rgba(255,255,255,0.1) !important; min-height: 60px;">
        <div class="text-start" style="width: 200px;">
            <span class="text-muted text-uppercase small fw-bold letter-spacing-1">
                Liczba opinii: <span class="text-white">@reviewsToDisplay?.Count()</span>
            </span>
        </div>

        <div>
            @if (User.Identity.IsAuthenticated)
            {
                <button type="button" class="btn btn-neon-primary px-4 rounded-pill" data-bs-toggle="modal" data-bs-target="#addReviewModal">
                    <i class="bi bi-pencil-square me-2"></i> Napisz recenzję
                </button>
            }
        </div>

        <div class="text-end" style="width: 200px;">
            <div class="dropdown d-inline-block">
                <button class="btn btn-sm btn-ghost-cancel dropdown-toggle px-3" type="button" id="sortMenu" data-bs-toggle="dropdown">
                    <i class="bi bi-sort-down me-2"></i>
                    @if (currentSort == "newest")
                    {
                        <span>Najnowsze</span>
                    }
                    else if (currentSort == "popular")
                    {

                        <span>Najpopularniejsze</span>
                    }
                    else if (currentSort == "highest_rating")
                    {

                        <span>Najwyższe oceny</span>
                    }
                    else if (currentSort == "lowest_rating")
                    {

                        <span>Najniższe oceny</span>
                    }
                    else
                    {

                        <span>Najlepsze</span>
                    }
                </button>
                <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end shadow">
                    <li><a class="dropdown-item @(currentSort == "best" ? "active" : "")" asp-action="Index" asp-route-gameId="@gameId" asp-route-gameName="@gameName" asp-route-sortOrder="best">Najlepsze</a></li>
                    <li><a class="dropdown-item @(currentSort == "newest" ? "active" : "")" asp-action="Index" asp-route-gameId="@gameId" asp-route-gameName="@gameName" asp-route-sortOrder="newest">Najnowsze</a></li>
                    <li><a class="dropdown-item @(currentSort == "popular" ? "active" : "")" asp-action="Index" asp-route-gameId="@gameId" asp-route-gameName="@gameName" asp-route-sortOrder="popular">Najpopularniejsze</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item @(currentSort == "highest_rating" ? "active" : "")" asp-action="Index" asp-route-gameId="@gameId" asp-route-gameName="@gameName" asp-route-sortOrder="highest_rating">Najwyższe oceny</a></li>
                    <li><a class="dropdown-item @(currentSort == "lowest_rating" ? "active" : "")" asp-action="Index" asp-route-gameId="@gameId" asp-route-gameName="@gameName" asp-route-sortOrder="lowest_rating">Najniższe oceny</a></li>
                </ul>
            </div>
        </div>
    </div>

    @* --- LISTA RECENZJI --- *@
    @if (reviewsToDisplay != null && reviewsToDisplay.Any())
    {
        <div class="row g-4">
            @foreach (var review in reviewsToDisplay)
            {
                var likes = review.Reactions?.Count(r => r.Type == ReactionType.Like) ?? 0;
                var dislikes = review.Reactions?.Count(r => r.Type == ReactionType.Dislike) ?? 0;
                var score = likes - dislikes;
                bool userLiked = currentUserId != Guid.Empty && (review.Reactions?.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Like) ?? false);
                bool userDisliked = currentUserId != Guid.Empty && (review.Reactions?.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Dislike) ?? false);
                string scoreClass = score > 0 ? "text-neon-green fw-bold" : (score < 0 ? "text-neon-danger fw-bold" : "text-muted");
                string sign = score > 0 ? "+" : "";
                string roleBorderColor = "var(--neon-cyan)";
                string roleNameClass = "text-white";
                var userRole = review.User?.Role?.ToLower();
                if (userRole == "admin") { roleBorderColor = "var(--neon-red)"; roleNameClass = "text-danger fw-bold"; }
                else if (userRole == "moderator") { roleBorderColor = "var(--neon-green)"; roleNameClass = "text-success fw-bold"; }
                double authorRating = userRatings.ContainsKey(review.UserId) ? userRatings[review.UserId] : 0;
                bool isAuthor = review.UserId == currentUserId;
                bool canEdit = isAuthor;
                bool canDelete = isAuthor || isAdminOrMod;

                <div class="col-12">
                    <div class="card-review p-4">

                        @* NAGŁÓWEK REVIEWS *@
                        <div class="review-header mb-2 pb-2 border-bottom" style="border-color: rgba(255,255,255,0.05) !important;">
                            <div class="d-flex align-items-center">
                                <img src="@(review.User?.ProfilePicture != null ? Url.Action("GetAvatar", "Profile", new { id = review.UserId }) : "/uploads/avatars/default_avatar.png")"
                                     class="review-avatar me-3"
                                     style="border-color: @roleBorderColor; box-shadow: 0 0 15px @roleBorderColor;"
                                     alt="Avatar">

                                <div>
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="@roleNameClass fs-5" style="text-shadow: 0 0 10px rgba(0,0,0,0.5);">@review.User?.UserName</span>

                                        @if (authorRating > 0)
                                        {
                                            @* ZMIANA: Użycie nowej klasy z site.css *@
                                            <div class="review-rating-badge-neon ms-2" title="Ocena użytkownika">
                                                <i class="bi bi-star-fill"></i>
                                                <span>@authorRating.ToString("0.#", CultureInfo.InvariantCulture)</span>
                                            </div>
                                        }
                                    </div>
                                    <small class="text-muted">@review.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                                </div>
                            </div>

                            @* MENU *@
                            @if (canEdit || canDelete)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-link text-secondary p-0" type="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical fs-5"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                        @if (canEdit)
                                        {
                                            <li>
                                                <a class="dropdown-item" href="#" onclick="openEditModal(@review.Id, 'review-content-@review.Id', '@(authorRating > 0 ? authorRating.ToString(CultureInfo.InvariantCulture) : "0")')">
                                                    <i class="bi bi-pencil me-2"></i> Edytuj
                                                </a>
                                            </li>
                                        }
                                        @if (canDelete)
                                        {
                                            <li>
                                                <a class="dropdown-item text-danger" href="#" onclick="openDeleteModal(@review.Id)">
                                                    <i class="bi bi-trash me-2"></i> Usuń
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>

                        <div class="review-content full-text mb-3 mt-1" id="review-content-@review.Id">@review.Content?.Trim()</div>

                        <div class="d-flex align-items-center gap-3">
                            <form asp-controller="Reviews" asp-action="ToggleReaction" method="post">
                                <input type="hidden" name="reviewId" value="@review.Id" />
                                <input type="hidden" name="isUpvote" value="true" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                <button type="submit" class="btn-vote vote-up @(userLiked ? "active" : "")" title="Pomocne">
                                    <i class="@(userLiked ? "bi bi-hand-thumbs-up-fill" : "bi bi-hand-thumbs-up")"></i>
                                </button>
                            </form>

                            <span class="@scoreClass score-badge-pill">@sign@score</span>

                            <form asp-controller="Reviews" asp-action="ToggleReaction" method="post">
                                <input type="hidden" name="reviewId" value="@review.Id" />
                                <input type="hidden" name="isUpvote" value="false" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                                <button type="submit" class="btn-vote vote-down @(userDisliked ? "active" : "")" title="Niepomocne">
                                    <i class="@(userDisliked ? "bi bi-hand-thumbs-down-fill" : "bi bi-hand-thumbs-down")"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="glass-panel text-center py-5">
            <i class="bi bi-chat-square-quote display-3 mb-3 d-block" style="color: var(--neon-cyan); opacity: 0.3;"></i>
            <h5 class="text-white">Brak recenzji</h5>
            <p class="text-muted">Bądź pierwszą osobą, która podzieli się opinią o tej grze!</p>
        </div>
    }
</div>

@if (User.Identity.IsAuthenticated)
{
    @* MODAL DODAWANIA RECENZJI *@
    <div class="modal fade" id="addReviewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            @* Fioletowy border modala *@
            <div class="modal-content modal-neon" style="border-color: var(--neon-purple);">
                <form asp-action="Create" method="post" id="createReviewForm" class="h-100 d-flex flex-column">

                    <div class="modal-header border-0 position-relative justify-content-center pt-4 pb-0">
                        <h5 class="modal-title text-white text-uppercase fw-bold text-center w-100 m-0">
                            Twoja recenzja:<br />
                            @* Tytuł gry neonowy *@
                            <span class="text-neon-title d-block mt-2" style="font-size: 1.8rem; letter-spacing: 2px;">@gameName</span>
                        </h5>
                        <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body text-white d-flex flex-column justify-content-start py-4" style="overflow: hidden;">
                        <input type="hidden" name="gameId" value="@gameId" />
                        <input type="hidden" name="gameName" value="@gameName" />

                        <div class="mb-3 d-flex flex-column align-items-center justify-content-center gap-2 flex-shrink-0">
                            <span class="text-uppercase small text-muted fw-bold" style="letter-spacing: 1px;">Twoja ocena</span>
                            <div class="d-flex align-items-center gap-3">
                                <div class="star-input-large" id="createRatingStars">
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        <i class="far fa-star game-star" data-value="@i"></i>
                                    }
                                </div>
                                @* Ocena liczbowa w neonowym stylu *@
                                <div class="fw-bold fs-4" id="createRatingText" style="min-width: 40px; color: #fff; text-shadow: 0 0 10px var(--neon-purple);">
                                    @(myCurrentRating > 0 ? myCurrentRating.ToString("0.0", CultureInfo.InvariantCulture) : "-")
                                </div>
                            </div>
                            <input type="hidden" id="createRatingValue" value="@(myCurrentRating.ToString(CultureInfo.InvariantCulture))" />
                        </div>
                        <div id="ratingError" class="text-center text-neon-danger small mb-2 d-none flex-shrink-0">Musisz ocenić grę (min. 0.5 gwiazdki).</div>

                        <div class="flex-grow-1" style="min-height: 200px;">
                            <div class="form-floating h-100">
                                <textarea name="content" id="addReviewContent" class="form-control form-control-tech no-resize h-100" style="overflow-y: auto;" placeholder="Napisz recenzję" required maxlength="3000"></textarea>
                                <label for="addReviewContent" class="text-muted">Napisz, co Ci się podobało...</label>
                            </div>
                        </div>
                        <div class="form-text text-white-50 text-end mt-1 flex-shrink-0">Maks. 3000 znaków.</div>
                    </div>

                    <div class="modal-footer border-0 justify-content-center pb-4 pt-0 gap-3">
                        <button type="button" class="btn btn-ghost-cancel px-4" data-bs-dismiss="modal">Anuluj</button>
                        <button type="button" class="btn btn-neon-primary px-4" onclick="submitCreateReview()">Opublikuj</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @* MODAL EDYCJI RECENZJI *@
    <div class="modal fade" id="editReviewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            @* Fioletowy border modala *@
            <div class="modal-content modal-neon" style="border-color: var(--neon-purple);">
                <form asp-action="Edit" method="post" id="editReviewForm" class="h-100 d-flex flex-column">

                    <div class="modal-header border-0 position-relative justify-content-center pt-4 pb-0">
                        <h5 class="modal-title text-white text-uppercase fw-bold text-center w-100 m-0">
                            Edytuj recenzję:<br />
                            @* Tytuł gry neonowy *@
                            <span class="text-neon-title d-block mt-2" style="font-size: 1.8rem; letter-spacing: 2px;">@gameName</span>
                        </h5>
                        <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body text-white d-flex flex-column justify-content-start py-4" style="overflow: hidden;">
                        <input type="hidden" name="id" id="editReviewId" />
                        <input type="hidden" name="gameName" value="@gameName" />

                        <div class="mb-3 d-flex flex-column align-items-center justify-content-center gap-2 flex-shrink-0">
                            <span class="text-uppercase small text-muted fw-bold" style="letter-spacing: 1px;">Twoja ocena</span>
                            <div class="d-flex align-items-center gap-3">
                                <div class="star-input-large" id="editRatingStars">
                                    @for (int i = 1; i <= 10; i++)
                                    {
                                        <i class="far fa-star game-star" data-value="@i"></i>
                                    }
                                </div>
                                <div class="fw-bold fs-4" id="editRatingText" style="min-width: 40px; color: #fff; text-shadow: 0 0 10px var(--neon-purple);">
                                    @(myCurrentRating > 0 ? myCurrentRating.ToString("0.0", CultureInfo.InvariantCulture) : "-")
                                </div>
                            </div>
                            <input type="hidden" name="rating" id="editRatingValue" value="" />
                        </div>

                        <div class="flex-grow-1" style="min-height: 200px;">
                            <div class="form-floating h-100">
                                <textarea name="content" id="editReviewContentInput" class="form-control form-control-tech no-resize h-100" style="overflow-y: auto;" placeholder="Treść recenzji" required maxlength="3000"></textarea>
                                <label for="editReviewContentInput" class="text-muted">Treść recenzji</label>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer border-0 justify-content-center pb-4 pt-0 gap-3">
                        <button type="button" class="btn btn-ghost-cancel px-4" data-bs-dismiss="modal">Anuluj</button>
                        <button type="button" class="btn btn-neon-primary px-4" onclick="submitEditReview()">Zapisz zmiany</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @* MODAL USUWANIA *@
    <div class="modal fade" id="deleteReviewModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content modal-neon modal-compact" style="border-color: var(--neon-red); box-shadow: 0 0 30px rgba(255, 51, 51, 0.2);">
                <form asp-action="Delete" method="post">

                    <div class="modal-header border-0 position-relative justify-content-center pt-4 pb-0">
                        <h5 class="modal-title text-neon-danger text-uppercase fw-bold text-center w-100 m-0">
                            Usuń recenzję
                        </h5>
                        <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body text-white d-flex flex-column justify-content-center align-items-center text-center py-4">
                        <i class="bi bi-trash-fill display-4 text-neon-danger mb-3 d-block"></i>
                        <p class="fs-5 mb-1">Czy na pewno chcesz usunąć tę recenzję?</p>
                        <p class="text-muted small mb-0">Tej operacji nie można cofnąć.</p>
                        <input type="hidden" name="id" id="deleteReviewId" />
                        <input type="hidden" name="gameName" value="@gameName" />
                    </div>

                    <div class="modal-footer border-0 justify-content-center pb-4 pt-0 gap-3">
                        <button type="button" class="btn btn-ghost-cancel px-4" data-bs-dismiss="modal">Anuluj</button>
                        <button type="submit" class="btn btn-danger-custom px-4">Usuń</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        function getToken() {
            var tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            return tokenInput ? tokenInput.value : '';
        }
        function initStars(containerId, inputId, textId, initialValue) {
            const container = document.getElementById(containerId);
            const input = document.getElementById(inputId);
            const text = document.getElementById(textId);
            const stars = container.querySelectorAll('i');
            function updateStarVisuals(val) {
                var numVal = parseFloat(val);
                if (isNaN(numVal)) numVal = 0;
                stars.forEach(s => {
                    var starIndex = parseInt(s.getAttribute('data-value'));
                    s.className = 'far fa-star game-star';
                    s.style.color = 'rgba(255, 255, 255, 0.1)';
                    s.style.textShadow = 'none';
                    if (numVal >= starIndex) {
                        s.className = 'fas fa-star game-star';
                        s.style.color = '#ffffff';
                        s.style.textShadow = '0 0 10px var(--neon-purple), 0 0 20px var(--neon-purple)';
                    } else if (numVal >= starIndex - 0.5) {
                        s.className = 'fas fa-star-half-alt game-star';
                        s.style.color = '#ffffff';
                        s.style.textShadow = '0 0 10px var(--neon-purple), 0 0 20px var(--neon-purple)';
                    }
                });
                if (text) {
                    text.innerText = numVal > 0 ? numVal.toString().replace('.', ',') : "Brak";
                    if(numVal > 0) {
                        text.style.color = '#ffffff';
                        text.style.textShadow = '0 0 10px var(--neon-purple), 0 0 20px var(--neon-purple)';
                    } else {
                        text.style.color = 'rgba(255,255,255,0.5)';
                        text.style.textShadow = 'none';
                    }
                }
            }
            updateStarVisuals(initialValue);
            stars.forEach(s => {
                s.addEventListener('mousemove', function(e) {
                    var rect = this.getBoundingClientRect();
                    var width = rect.width;
                    var x = e.clientX - rect.left;
                    var starIndex = parseInt(this.getAttribute('data-value'));
                    var previewVal = (x < width / 2) ? (starIndex - 0.5) : starIndex;
                    updateStarVisuals(previewVal);
                });
                s.addEventListener('click', function(e) {
                    var rect = this.getBoundingClientRect();
                    var width = rect.width;
                    var x = e.clientX - rect.left;
                    var starIndex = parseInt(this.getAttribute('data-value'));
                    var finalVal = (x < width / 2) ? (starIndex - 0.5) : starIndex;
                    input.value = finalVal;
                    var err = document.getElementById('ratingError');
                    if(err) err.classList.add('d-none');
                });
            });
            container.addEventListener('mouseleave', function() {
                var savedVal = parseFloat(input.value);
                if (isNaN(savedVal)) savedVal = 0;
                updateStarVisuals(savedVal);
            });
        }
        document.addEventListener("DOMContentLoaded", function() {
            var startVal = document.getElementById('createRatingValue').value;
            initStars('createRatingStars', 'createRatingValue', 'createRatingText', startVal);
        });
        function openEditModal(id, contentId, currentRating) {
            var content = document.getElementById(contentId).innerText.trim();
            document.getElementById('editReviewId').value = id;
            document.getElementById('editReviewContentInput').value = content;
            document.getElementById('editRatingValue').value = currentRating;
            initStars('editRatingStars', 'editRatingValue', 'editRatingText', currentRating);
            var modal = new bootstrap.Modal(document.getElementById('editReviewModal'));
            modal.show();
        }
        function openDeleteModal(id) {
            document.getElementById('deleteReviewId').value = id;
            var modal = new bootstrap.Modal(document.getElementById('deleteReviewModal'));
            modal.show();
        }
        function submitCreateReview() {
            var ratingInput = document.getElementById('createRatingValue');
            var rating = parseFloat(ratingInput.value);
            var gameId = @gameId;
            if (isNaN(rating) || rating < 0.5) {
                document.getElementById('ratingError').classList.remove('d-none');
                return;
            }
            fetch('/Games/RateGame', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': getToken() },
                body: JSON.stringify({ gameId: gameId, ratingValue: rating })
            }).then(() => {
                document.getElementById('createReviewForm').submit();
            });
        }
        function submitEditReview() {
            var ratingInput = document.getElementById('editRatingValue');
            var rating = parseFloat(ratingInput.value);
            var gameId = @gameId;
            if (!isNaN(rating) && rating >= 0.5) {
                fetch('/Games/RateGame', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': getToken() },
                    body: JSON.stringify({ gameId: gameId, ratingValue: rating })
                }).then(() => {
                    document.getElementById('editReviewForm').submit();
                });
            } else {
                document.getElementById('editReviewForm').submit();
            }
        }
    </script>
}