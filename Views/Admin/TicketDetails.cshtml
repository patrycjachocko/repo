@model praca_dyplomowa_zesp.Models.Ticket

@{
    Layout = "_Layout";
    ViewData["Title"] = "Obsługa zgłoszenia #" + Model.Id;
}

<style>
    /* Style dla miniaturek w podglądzie */
    .preview-thumb {
        width: 100px;
        height: 100px;
        object-fit: cover;
        border-radius: 5px;
        border: 1px solid #555;
    }

    .preview-container {
        position: relative;
        display: inline-block;
        margin-right: 10px;
        margin-bottom: 10px;
    }
    /* Usunięto stary styl .btn-remove-img - używamy teraz bootstrapowego btn-close */
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="text-warning">Zgłoszenie #@Model.Id: @Model.Title</h3>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-light">Wróć do Panelu</a>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card bg-dark text-white border-secondary mb-3">
                <div class="card-header border-secondary">Informacje</div>
                <div class="card-body">
                    <p><strong>Użytkownik:</strong> @(Model.User?.UserName ?? "Brak")</p>
                    <p>
                        <strong>Status:</strong>
                        @if (Model.Status == praca_dyplomowa_zesp.Models.TicketStatus.Oczekujące)
                        {
                            <span class="text-danger">Oczekujące</span>
                        }
                        else if (Model.Status == praca_dyplomowa_zesp.Models.TicketStatus.W_trakcie)
                        {
                            <span class="text-warning">W trakcie</span>
                        }
                        else
                        {
                            <span class="text-muted">Zamknięte</span>
                        }
                    </p>

                    @if (Model.Status != praca_dyplomowa_zesp.Models.TicketStatus.Zamknięte)
                    {
                        <hr class="border-secondary" />
                        <form asp-action="CloseTicket" method="post" onsubmit="return confirm('Czy na pewno chcesz zamknąć to zgłoszenie? Ta operacja jest ostateczna.');">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-lock me-2"></i> Zamknij Zgłoszenie
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card bg-dark border-secondary">
                <div class="card-header border-secondary d-flex justify-content-between">
                    <span>Konwersacja</span>
                    <span class="badge @(Model.Status == praca_dyplomowa_zesp.Models.TicketStatus.Zamknięte ? "bg-secondary" : "bg-success")">
                        @Model.Status
                    </span>
                </div>

                <div class="card-body" style="background: #121215; max-height: 500px; overflow-y: auto;" id="adminChatBox">
                    <div class="alert alert-info border-0" style="background-color: #1e2530; color: #fff;">
                        <small class="text-info">OPIS PROBLEMU:</small><br />
                        @Model.Content
                    </div>

                    @foreach (var msg in Model.Messages.OrderBy(m => m.CreatedAt))
                    {
                        bool isStaff = msg.IsStaffReply;
                        <div class="d-flex mb-3 @(isStaff ? "justify-content-end" : "justify-content-start")">
                            <div class="p-3 rounded-3"
                                 style="max-width: 80%; background-color: @(isStaff ? "#4c3f91" : "#2c2c35"); color: white;">
                                <div class="small mb-1 text-white-50">
                                    @(isStaff ? "ADMIN (Ty)" : msg.User?.UserName) • @msg.CreatedAt.ToString("dd.MM HH:mm")
                                </div>

                                @if (!string.IsNullOrEmpty(msg.Message))
                                {
                                    <div>@msg.Message</div>
                                }

                                @if (msg.Attachments != null && msg.Attachments.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                        @foreach (var att in msg.Attachments)
                                        {
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#imgModalAdmin-@att.Id">
                                                <img src="data:@att.ContentType;base64,@Convert.ToBase64String(att.FileContent)"
                                                     class="preview-thumb" />
                                            </a>

                                            <div class="modal fade" id="imgModalAdmin-@att.Id" tabindex="-1">
                                                <div class="modal-dialog modal-lg modal-dialog-centered">
                                                    <div class="modal-content bg-dark">
                                                        <div class="modal-body text-center p-0">
                                                            <img src="data:@att.ContentType;base64,@Convert.ToBase64String(att.FileContent)" class="img-fluid" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                @if (Model.Status != praca_dyplomowa_zesp.Models.TicketStatus.Zamknięte)
                {
                    <div class="card-footer border-secondary">
                        <form asp-action="AdminReply" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="id" value="@Model.Id" />

                            <div id="adminPreviews" class="d-flex flex-wrap gap-2 mb-2"></div>

                            <input type="file" name="attachments" id="adminAttachmentInput" class="d-none" multiple accept="image/*" />

                            <div class="input-group">
                                <textarea name="message" id="adminMessageInput" class="form-control bg-secondary text-white" placeholder="Napisz wiadomość (Ctrl+V = zdjęcia)..." rows="2"></textarea>

                                <button type="button" class="btn btn-outline-light" onclick="document.getElementById('adminAttachmentInput').click()" title="Dodaj załączniki">
                                    <i class="fas fa-paperclip"></i>
                                </button>

                                <button type="submit" class="btn btn-warning">
                                    <i class="fas fa-paper-plane"></i> Wyślij
                                </button>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="card-footer border-secondary text-center text-muted">
                        <i class="fas fa-lock"></i> Zgłoszenie jest zamknięte.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    var box = document.getElementById('adminChatBox');
    if (box) box.scrollTop = box.scrollHeight;

    const dtAdmin = new DataTransfer();
    const adminInput = document.getElementById('adminAttachmentInput');
    const adminPreviewsDiv = document.getElementById('adminPreviews');

    adminInput?.addEventListener('change', function () {
        for (let i = 0; i < this.files.length; i++) {
            dtAdmin.items.add(this.files[i]);
        }
        updateAdminFiles();
    });

    document.getElementById('adminMessageInput')?.addEventListener('paste', function (e) {
        var items = (e.clipboardData || e.originalEvent.clipboardData).items;
        for (var index in items) {
            var item = items[index];
            if (item.kind === 'file' && item.type.startsWith('image/')) {
                dtAdmin.items.add(item.getAsFile());
                updateAdminFiles();
            }
        }
    });

    function updateAdminFiles() {
        adminInput.files = dtAdmin.files;
        renderAdminPreviews();
    }

    function renderAdminPreviews() {
        adminPreviewsDiv.innerHTML = '';
        for (let i = 0; i < dtAdmin.files.length; i++) {
            const file = dtAdmin.files[i];
            const reader = new FileReader();
            reader.onload = function (e) {
                const div = document.createElement('div');
                div.className = 'preview-container';
                // ZMIANA: Używamy btn-close zamiast btn-danger
                div.innerHTML = `
                    <img src="${e.target.result}" class="preview-thumb" />
                    <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-1" aria-label="Close" onclick="removeAdminFile(${i})"></button>
                `;
                adminPreviewsDiv.appendChild(div);
            }
            reader.readAsDataURL(file);
        }
    }

    window.removeAdminFile = function (index) {
        dtAdmin.items.remove(index);
        updateAdminFiles();
    }
</script>