@model List<praca_dyplomowa_zesp.Models.API.SteamGameDto>

@{
    ViewData["Title"] = "Biblioteka Steam";

    // Paginacja logic
    int pageSize = 60;
    int pageNumber = 1;
    if (int.TryParse(Context.Request.Query["page"], out int p)) { pageNumber = p; }
    if (pageNumber < 1) pageNumber = 1;

    int totalItems = Model.Count;
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    if (totalPages < 1) totalPages = 1;
    if (pageNumber > totalPages) pageNumber = totalPages;

    var gamesToDisplay = Model.Skip((pageNumber - 1) * pageSize).Take(pageSize).ToList();
}

<div class="container-fluid px-4 pt-4 main-container fade-in-up">

    @* --- NAGŁÓWEK --- *@
    <div class="mb-4">
        @* Tytuł z cyjanowym cieniem *@
        <h1 class="browse-title" style="text-shadow: 0 0 10px rgba(0, 243, 255, 0.8), 0 0 20px var(--neon-cyan), 0 0 40px var(--neon-cyan) !important;">
            <i class="bi bi-steam me-3" style="color: var(--neon-cyan);"></i>Biblioteka Steam
        </h1>
        <p class="browse-subtitle">Importuj gry ze swojego konta</p>
    </div>

    @* --- PASEK AKCJI --- *@
    <div class="glass-panel mb-4 d-flex flex-column flex-md-row justify-content-between align-items-center gap-3" style="border-color: var(--neon-cyan);">

        @* Lewa: Licznik *@
        <div class="text-white">
            <span class="text-muted text-uppercase small fw-bold me-2" style="letter-spacing: 1px;">Znaleziono:</span>
            <span class="fs-5 fw-bold text-neon-cyan" style="text-shadow: 0 0 10px var(--neon-cyan);">@totalItems</span>
            <span class="text-muted small">gier</span>
        </div>

        @* Prawa: Przycisk Importu - PRZYWRÓCONY STARY STYL *@
        @if (totalItems > 0)
        {
            <form id="importSteamForm" asp-action="ImportSteamGames" method="post" style="display:none;"></form>

            <button type="button" class="btn btn-steam-connect btn-with-text" data-bs-toggle="modal" data-bs-target="#importModal">
                <i class="bi bi-cloud-download fs-5"></i>
                <span>IMPORTUJ WSZYSTKO</span>
            </button>
        }
    </div>

    @* --- KOMUNIKATY --- *@
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-neon alert-neon-success alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-check-circle me-3"></i>
            <strong>Sukces!</strong> @TempData["StatusMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-neon alert-neon-danger alert-dismissible fade show mb-4" role="alert">
            <i class="bi bi-exclamation-triangle me-3"></i>
            <strong>Błąd!</strong> @TempData["ErrorMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @* --- BRAK GIER --- *@
    @if (!gamesToDisplay.Any())
    {
        <div class="glass-panel text-center py-5" style="border-color: var(--neon-cyan);">
            <i class="bi bi-steam display-1 mb-3 d-block" style="color: var(--neon-cyan); opacity: 0.2;"></i>
            <h4 class="text-white">Nie znaleziono gier</h4>
            <p class="text-muted">Upewnij się, że Twój profil Steam jest publiczny i posiada gry.</p>
        </div>
    }

    @* --- GRID GIER --- *@
    <div class="row g-4">
        @foreach (var game in gamesToDisplay)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <a asp-controller="Games" asp-action="SteamRedirect" asp-route-query="@game.Name" class="game-link-wrapper d-block h-100">

                    @* Karta z cyjanowym hoverem *@
                    <div class="card-steam-game h-100">
                        <div class="cover-container" style="border-bottom-color: rgba(0, 243, 255, 0.3);">
                            <img src="@($"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/{game.AppId}/library_600x900.jpg")"
                                 class="cover-img"
                                 alt="@game.Name"
                                 data-appid="@game.AppId"
                                 data-name="@game.Name"
                                 data-attempt="0"
                                 onerror="handleSteamImageError(this)">

                            <div class="loading-spinner position-absolute top-50 start-50 translate-middle" style="display:none;">
                                <div class="spinner-border text-neon-cyan spinner-border-sm" role="status"></div>
                            </div>

                            @* Badge Czasu Gry *@
                            <div class="rating-badge rating-playing" style="color: var(--neon-cyan); border-color: var(--neon-cyan); box-shadow: inset 0 0 10px rgba(0,243,255,0.3);">
                                <i class="bi bi-clock-history me-1"></i>@Math.Round(game.PlaytimeForever / 60.0, 1)h
                            </div>
                        </div>

                        <div class="game-card-body text-center">
                            @* Tytuł z cyjanowym hoverem *@
                            <div class="game-title-text steam-title-hover" title="@game.Name">@game.Name</div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    @* --- PAGINACJA --- *@
    @if (totalPages > 1)
    {
        <div class="mt-5 mb-5">
            <nav aria-label="Paginacja">
                <ul class="pagination justify-content-center">
                    @{
                        var prevDisabled = pageNumber > 1 ? "" : "disabled";
                        var nextDisabled = pageNumber < totalPages ? "" : "disabled";
                        string GetPageUrl(int p) => $"?page={p}";
                    }

                    <li class="page-item @prevDisabled">
                        <a class="page-link" href="@GetPageUrl(pageNumber - 1)" style="color: var(--neon-cyan); border-color: var(--neon-cyan); background: rgba(0,243,255,0.05);"><i class="bi bi-chevron-left"></i></a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= pageNumber - 2 && i <= pageNumber + 2))
                        {
                            bool isActive = i == pageNumber;
                            <li class="page-item @(isActive ? "active" : "")">
                                <a class="page-link" href="@GetPageUrl(i)"
                                   style="@(isActive ? "background: var(--neon-cyan); color: #000; border-color: var(--neon-cyan);" : "color: var(--neon-cyan); border-color: var(--neon-cyan); background: rgba(0,243,255,0.05);")">@i</a>
                            </li>
                        }
                        else if (i == pageNumber - 3 || i == pageNumber + 3)
                        {
                            <li class="page-item disabled"><span class="page-link" style="background: transparent; border: none; color: var(--text-muted);">...</span></li>
                        }
                    }

                    <li class="page-item @nextDisabled">
                        <a class="page-link" href="@GetPageUrl(pageNumber + 1)" style="color: var(--neon-cyan); border-color: var(--neon-cyan); background: rgba(0,243,255,0.05);"><i class="bi bi-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

@* --- MODAL IMPORTU --- *@
<div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        @* Styl modala: cyjanowy border i cień *@
        <div class="modal-content modal-neon modal-compact" style="border-color: var(--neon-cyan); box-shadow: 0 0 30px rgba(0, 243, 255, 0.2);">

            @* HEADER: Tytuł wyśrodkowany, przycisk zamknięcia absolutny *@
            <div class="modal-header border-0 position-relative justify-content-center pt-4 pb-0">
                <h5 class="modal-title text-uppercase fw-bold text-center w-100 m-0" style="color: var(--neon-cyan); text-shadow: 0 0 10px var(--neon-cyan);">
                    <i class="bi bi-steam me-2"></i>Synchronizacja
                </h5>
                @* Przycisk zamknięcia pozycjonowany absolutnie w prawym górnym rogu *@
                <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-3" data-bs-dismiss="modal"></button>
            </div>

            @* BODY: Treść wyśrodkowana *@
            <div class="modal-body d-flex flex-column justify-content-center align-items-center text-center py-4">
                <i class="bi bi-cloud-arrow-down display-3 mb-3 d-block" style="color: var(--neon-cyan); text-shadow: 0 0 20px var(--neon-cyan);"></i>
                <p class="text-white fs-5 mb-1">Zaimportować wszystkie gry?</p>
                <p class="text-muted small mb-0">
                    Proces może chwilę potrwać.<br>
                    Gry zostaną dodane do Twojej głównej biblioteki.
                </p>
            </div>

            @* FOOTER *@
            <div class="modal-footer border-0 justify-content-center pb-4 pt-0 gap-3">
                <button type="button" class="btn btn-ghost-cancel px-4 btn-modal-action" data-bs-dismiss="modal">ANULUJ</button>
                <button type="button" class="btn btn-steam-connect px-4 fw-bold btn-modal-action" onclick="document.getElementById('importSteamForm').submit()">
                    POTWIERDŹ
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function handleSteamImageError(img) {
        // ... (kod JS bez zmian) ...
        const appId = img.getAttribute('data-appid');
        const name = img.getAttribute('data-name');
        let attempt = parseInt(img.getAttribute('data-attempt'));

        const spinner = img.parentElement.querySelector('.loading-spinner');
        if(spinner) spinner.style.display = 'block';

        const steamFallbacks = [
            `https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/${appId}/header.jpg`,
            `https://steamcdn-a.akamaihd.net/steam/apps/${appId}/header.jpg`
        ];

        if (attempt < steamFallbacks.length) {
            img.src = steamFallbacks[attempt];
            img.setAttribute('data-attempt', attempt + 1);
        } else if (attempt === steamFallbacks.length) {
            img.setAttribute('data-attempt', attempt + 1);
            fetch(`/Profile/GetIgdbCover?steamId=${appId}&gameName=${encodeURIComponent(name)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.url) img.src = data.url;
                    else img.src = 'https://via.placeholder.com/600x900?text=NO+IMAGE&bg=0b0b0e&fg=333333';
                })
                .catch(err => img.src = 'https://via.placeholder.com/600x900?text=ERROR&bg=0b0b0e&fg=333333')
                .finally(() => { if(spinner) spinner.style.display = 'none'; });
        } else {
            if(spinner) spinner.style.display = 'none';
            img.onerror = null;
            img.src = 'https://via.placeholder.com/600x900?text=NO+IMAGE&bg=0b0b0e&fg=333333';
        }
    }
</script>