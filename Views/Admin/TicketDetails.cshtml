@model praca_dyplomowa_zesp.Models.Ticket

@{
    Layout = "_Layout";
    ViewData["Title"] = "Obsługa zgłoszenia #" + Model.Id;
}

<style>
    /* --- STYL TICKETÓW DLA ADMINA --- */

    .ticket-header {
        margin-bottom: 20px;
    }

    .ticket-title {
        color: var(--neon-yellow);
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.4);
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Karta Informacyjna (Lewa) */
    .info-card {
        background: rgba(26, 26, 32, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        box-shadow: 0 0 30px rgba(0,0,0,0.5);
    }

    .info-header {
        background-color: rgba(255, 255, 255, 0.05);
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 15px;
        font-weight: 700;
        color: #ddd;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* Karta Czatu (Prawa) */
    .chat-card {
        background: rgba(26, 26, 32, 0.9);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        height: 700px; /* Stała wysokość dla lepszego scrollowania */
    }

    .chat-header {
        background: linear-gradient(90deg, rgba(40,40,50,1) 0%, rgba(20,20,25,1) 100%);
        padding: 15px 20px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-body {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
        background-color: #0b0b0e; /* Bardzo ciemne tło pod wiadomości */
        /* Scrollbar styling */
        scrollbar-width: thin;
        scrollbar-color: var(--deep-purple) #0b0b0e;
    }

        .chat-body::-webkit-scrollbar {
            width: 8px;
        }

        .chat-body::-webkit-scrollbar-thumb {
            background-color: var(--deep-purple);
            border-radius: 4px;
        }

    /* Dymki wiadomości */
    .msg-bubble {
        padding: 12px 18px;
        border-radius: 12px;
        position: relative;
        font-size: 0.95rem;
        box-shadow: 0 2px 5px rgba(0,0,0,0.3);
        max-width: 85%;
    }

    .msg-user {
        background-color: #2c2c35;
        color: #ddd;
        border-bottom-left-radius: 2px;
    }

    .msg-admin {
        background: linear-gradient(135deg, #4c3f91, #6a5acd);
        color: #fff;
        border-bottom-right-radius: 2px;
        box-shadow: 0 0 15px rgba(106, 90, 205, 0.3);
    }

    .msg-meta {
        font-size: 0.75rem;
        opacity: 0.6;
        margin-bottom: 4px;
        display: block;
        font-weight: 600;
    }

    /* Opis problemu */
    .problem-desc {
        background-color: rgba(0, 243, 255, 0.1);
        border: 1px solid rgba(0, 243, 255, 0.2);
        color: #fff;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 25px;
        font-size: 0.95rem;
    }

    .desc-label {
        color: var(--neon-blue);
        font-weight: 700;
        font-size: 0.8rem;
        text-transform: uppercase;
        margin-bottom: 5px;
        display: block;
    }

    /* Input i stopka */
    .chat-footer {
        background-color: #1a1a20;
        padding: 15px;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .input-message {
        background-color: rgba(0,0,0,0.3);
        border: 1px solid rgba(255,255,255,0.2);
        color: #fff;
        resize: none;
    }

        .input-message:focus {
            background-color: rgba(0,0,0,0.5);
            border-color: var(--neon-yellow);
            box-shadow: none;
            color: #fff;
        }

    /* Załączniki */
    .preview-thumb {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 8px;
        border: 2px solid rgba(255,255,255,0.2);
        transition: transform 0.2s;
    }

        .preview-thumb:hover {
            transform: scale(1.05);
            border-color: #fff;
        }

    .preview-container {
        position: relative;
        display: inline-block;
    }

    /* Badge Statusu */
    .badge-status-open {
        background-color: var(--neon-red);
        box-shadow: 0 0 10px var(--neon-red);
    }

    .badge-status-progress {
        background-color: var(--neon-yellow);
        color: #000;
        box-shadow: 0 0 10px var(--neon-yellow);
    }

    .badge-status-closed {
        background-color: #6c757d;
    }

</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center ticket-header">
        <h3 class="ticket-title">Zgłoszenie #@Model.Id: @Model.Title</h3>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-light btn-sm">
            <i class="fas fa-arrow-left me-2"></i>Wróć do Panelu
        </a>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="info-card h-100">
                <div class="info-header">Informacje</div>
                <div class="p-4">
                    <div class="mb-3">
                        <small class="text-muted text-uppercase d-block mb-1">Użytkownik</small>
                        <div class="d-flex align-items-center">
                            @if (Model.User?.ProfilePicture != null)
                            {
                                <img src="@Url.Action("GetAvatar", "Profile", new { id = Model.UserId })" class="rounded-circle me-2" style="width: 30px; height: 30px; border: 1px solid #555;">
                            }
                            <span class="fw-bold fs-5">@(Model.User?.UserName ?? "Nieznany")</span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <small class="text-muted text-uppercase d-block mb-1">Utworzono</small>
                        <span class="text-white">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>

                    <div class="mb-4">
                        <small class="text-muted text-uppercase d-block mb-1">Status</small>
                        @if (Model.Status == praca_dyplomowa_zesp.Models.TicketStatus.Oczekujące)
                        {
                            <span class="badge badge-status-open px-3 py-2">OCZEKUJĄCE</span>
                        }
                        else if (Model.Status == praca_dyplomowa_zesp.Models.TicketStatus.W_trakcie)
                        {
                            <span class="badge badge-status-progress px-3 py-2">W TRAKCIE</span>
                        }
                        else
                        {
                            <span class="badge badge-status-closed px-3 py-2">ZAMKNIĘTE</span>
                        }
                    </div>

                    @if (Model.Status != praca_dyplomowa_zesp.Models.TicketStatus.Zamknięte)
                    {
                        <hr class="border-secondary my-4" />
                        <form asp-action="CloseTicket" method="post" onsubmit="return confirm('Czy na pewno chcesz zamknąć to zgłoszenie? Ta operacja jest ostateczna.');">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-outline-danger w-100 py-2">
                                <i class="fas fa-lock me-2"></i> Zamknij Zgłoszenie
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8 mb-4">
            <div class="chat-card">
                <div class="chat-header">
                    <span class="fw-bold text-white"><i class="fas fa-comments me-2"></i>Konwersacja</span>
                    <small class="text-muted">ID: @Model.Id</small>
                </div>

                <div class="chat-body" id="adminChatBox">
                    <div class="problem-desc">
                        <span class="desc-label">TREŚĆ ZGŁOSZENIA:</span>
                        @Model.Content
                    </div>

                    @foreach (var msg in Model.Messages.OrderBy(m => m.CreatedAt))
                    {
                        bool isStaff = msg.IsStaffReply;
                        <div class="d-flex mb-3 @(isStaff ? "justify-content-end" : "justify-content-start")">

                            @if (!isStaff)
                            {
                                <div class="me-2 mt-auto">
                                    <i class="fas fa-user-circle fa-2x text-secondary"></i>
                                </div>
                            }

                            <div class="msg-bubble @(isStaff ? "msg-admin" : "msg-user")">
                                <span class="msg-meta">
                                    @(isStaff ? "ADMIN (Ty)" : msg.User?.UserName) • @msg.CreatedAt.ToString("dd.MM HH:mm")
                                </span>

                                @if (!string.IsNullOrEmpty(msg.Message))
                                {
                                    <div>@msg.Message</div>
                                }

                                @if (msg.Attachments != null && msg.Attachments.Any())
                                {
                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                        @foreach (var att in msg.Attachments)
                                        {
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#imgModalAdmin-@att.Id">
                                                <img src="data:@att.ContentType;base64,@Convert.ToBase64String(att.FileContent)" class="preview-thumb" />
                                            </a>

                                            <div class="modal fade" id="imgModalAdmin-@att.Id" tabindex="-1">
                                                <div class="modal-dialog modal-lg modal-dialog-centered">
                                                    <div class="modal-content bg-dark border-secondary">
                                                        <div class="modal-body text-center p-1">
                                                            <img src="data:@att.ContentType;base64,@Convert.ToBase64String(att.FileContent)" class="img-fluid rounded" />
                                                        </div>
                                                        <div class="modal-footer border-0 p-1">
                                                            <button type="button" class="btn btn-sm btn-secondary w-100" data-bs-dismiss="modal">Zamknij</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                }
                            </div>

                            @if (isStaff)
                            {
                                <div class="ms-2 mt-auto">
                                    <i class="fas fa-user-shield fa-2x text-warning"></i>
                                </div>
                            }
                        </div>
                    }
                </div>

                @if (Model.Status != praca_dyplomowa_zesp.Models.TicketStatus.Zamknięte)
                {
                    <div class="chat-footer">
                        <form asp-action="AdminReply" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="id" value="@Model.Id" />

                            <div id="adminPreviews" class="d-flex flex-wrap gap-2 mb-2"></div>

                            <input type="file" name="attachments" id="adminAttachmentInput" class="d-none" multiple accept="image/*" />

                            <div class="input-group">
                                <textarea name="message" id="adminMessageInput" class="form-control input-message" placeholder="Napisz odpowiedź (Ctrl+V wkleja obrazki)..." rows="2"></textarea>

                                <button type="button" class="btn btn-secondary" onclick="document.getElementById('adminAttachmentInput').click()" title="Dodaj zdjęcia">
                                    <i class="fas fa-paperclip"></i>
                                </button>

                                <button type="submit" class="btn btn-warning fw-bold px-4">
                                    <i class="fas fa-paper-plane me-1"></i> Wyślij
                                </button>
                            </div>
                        </form>
                    </div>
                }
                else
                {
                    <div class="chat-footer text-center text-muted">
                        <i class="fas fa-lock me-2"></i> To zgłoszenie jest zamknięte. Nie można dodawać nowych odpowiedzi.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    // Automatyczne przewijanie czatu na dół
    var box = document.getElementById('adminChatBox');
    if (box) box.scrollTop = box.scrollHeight;

    // Obsługa wklejania i wybierania plików
    const dtAdmin = new DataTransfer();
    const adminInput = document.getElementById('adminAttachmentInput');
    const adminPreviewsDiv = document.getElementById('adminPreviews');

    adminInput?.addEventListener('change', function () {
        for (let i = 0; i < this.files.length; i++) {
            dtAdmin.items.add(this.files[i]);
        }
        updateAdminFiles();
    });

    document.getElementById('adminMessageInput')?.addEventListener('paste', function (e) {
        var items = (e.clipboardData || e.originalEvent.clipboardData).items;
        for (var index in items) {
            var item = items[index];
            if (item.kind === 'file' && item.type.startsWith('image/')) {
                dtAdmin.items.add(item.getAsFile());
                updateAdminFiles();
            }
        }
    });

    function updateAdminFiles() {
        adminInput.files = dtAdmin.files;
        renderAdminPreviews();
    }

    function renderAdminPreviews() {
        adminPreviewsDiv.innerHTML = '';
        for (let i = 0; i < dtAdmin.files.length; i++) {
            const file = dtAdmin.files[i];
            const reader = new FileReader();
            reader.onload = function (e) {
                const div = document.createElement('div');
                div.className = 'preview-container';
                div.innerHTML = `
                    <img src="${e.target.result}" class="preview-thumb" />
                    <button type="button" class="btn-close btn-close-white position-absolute top-0 end-0 m-1 bg-danger p-1" aria-label="Close" onclick="removeAdminFile(${i})" style="width: 20px; height: 20px;"></button>
                `;
                adminPreviewsDiv.appendChild(div);
            }
            reader.readAsDataURL(file);
        }
    }

    window.removeAdminFile = function (index) {
        dtAdmin.items.remove(index);
        updateAdminFiles();
    }
</script>