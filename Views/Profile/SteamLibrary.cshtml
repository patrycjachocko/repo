@model List<praca_dyplomowa_zesp.Models.API.SteamGameDto>

@{
    ViewData["Title"] = "Biblioteka Steam";

    // Paginacja logic
    int pageSize = 60;
    int pageNumber = 1;
    if (int.TryParse(Context.Request.Query["page"], out int p)) { pageNumber = p; }
    if (pageNumber < 1) pageNumber = 1;

    int totalItems = Model.Count;
    int totalPages = (int)Math.Ceiling(totalItems / (double)pageSize);
    if (totalPages < 1) totalPages = 1;
    if (pageNumber > totalPages) pageNumber = totalPages;

    var gamesToDisplay = Model.Skip((pageNumber - 1) * pageSize).Take(pageSize).ToList();
}

<div class="container-fluid px-4 pt-4 pb-5 main-container">

    @* --- NAGŁÓWEK I PASEK AKCJI --- *@
    <div class="d-flex flex-column flex-lg-row align-items-lg-center mb-5">

        @* Lewa strona: Tytuł *@
        <div class="text-center text-lg-start">
            <h1 class="text-white mb-1" style="text-shadow: 0 0 20px rgba(0, 243, 255, 0.3);">
                Biblioteka Steam
            </h1>
            <p class="text-muted mb-0 small text-uppercase" style="letter-spacing: 2px;">
                Importuj gry ze swojego konta
            </p>
        </div>

        @* Prawa strona: Toolbar (Dzięki CSS width: fit-content jest mały i po prawej) *@
        <div class="panel-toolbar">
            <span class="text-white fw-bold">
                Znaleziono: <span style="color: var(--neon-cyan); text-shadow: 0 0 10px var(--neon-cyan);">@totalItems</span> gier
            </span>

            @if (totalItems > 0)
            {
                <div class="vr-tech d-none d-md-block"></div>

                <form id="importSteamForm" asp-action="ImportSteamGames" method="post" style="display:none;"></form>

                <button type="button" class="btn btn-steam-connect" data-bs-toggle="modal" data-bs-target="#importModal">
                    <i class="bi bi-cloud-download me-2"></i> Importuj Wszystko
                </button>
            }
        </div>
    </div>

    @* ... reszta kodu (Alerty, Grid) bez zmian ... *@

    @* --- KOMUNIKATY --- *@
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-neon alert-neon-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i> @TempData["StatusMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-neon alert-neon-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!gamesToDisplay.Any())
    {
        <div class="text-center py-5">
            <i class="bi bi-steam display-1 mb-4 d-block" style="color: var(--neon-cyan); opacity: 0.2;"></i>
            <h4 class="text-white">Nie znaleziono gier</h4>
            <p class="text-muted">Upewnij się, że Twój profil Steam jest publiczny i posiada gry.</p>
        </div>
    }

    @* --- GRID GIER --- *@
    <div class="row g-3 g-xl-4">
        @foreach (var game in gamesToDisplay)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <a asp-controller="Games" asp-action="SteamRedirect" asp-route-query="@game.Name" class="game-link-wrapper">
                    @* Używamy klasy .card-game (Border Tech -> Hover Pink, Zaokrąglona) *@
                    <div class="card-game">
                        <div class="cover-container" style="position: relative; padding-top: 140%; background: #000; border-bottom: 1px solid var(--border-tech);">
                            <img src="@($"https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/{game.AppId}/library_600x900.jpg")"
                                 class="cover-img"
                                 style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; transition: transform 0.5s ease;"
                                 alt="@game.Name"
                                 data-appid="@game.AppId"
                                 data-name="@game.Name"
                                 data-attempt="0"
                                 onerror="handleSteamImageError(this)">

                            <div class="loading-spinner position-absolute top-50 start-50 translate-middle" style="display:none;">
                                <div class="spinner-border text-light spinner-border-sm" role="status"></div>
                            </div>

                            <span class="playtime-badge">
                                <i class="bi bi-clock me-1"></i>@Math.Round(game.PlaytimeForever / 60.0, 1)h
                            </span>
                        </div>

                        <div class="p-3 text-center bg-transparent">
                            <h6 class="grid-card-title" title="@game.Name">@game.Name</h6>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    @* --- PAGINACJA --- *@
    @if (totalPages > 1)
    {
        <div class="mt-5 mb-4">
            <nav aria-label="Paginacja">
                <ul class="pagination justify-content-center">
                    @{
                        var prevDisabled = pageNumber > 1 ? "" : "disabled";
                        var nextDisabled = pageNumber < totalPages ? "" : "disabled";
                        string GetPageUrl(int p) => $"?page={p}";
                    }

                    <li class="page-item @prevDisabled">
                        <a class="page-link" href="@GetPageUrl(pageNumber - 1)"><i class="bi bi-chevron-left"></i></a>
                    </li>

                    @for (int i = 1; i <= totalPages; i++)
                    {
                        if (i == 1 || i == totalPages || (i >= pageNumber - 2 && i <= pageNumber + 2))
                        {
                            <li class="page-item @(i == pageNumber ? "active" : "")">
                                <a class="page-link" href="@GetPageUrl(i)">@i</a>
                            </li>
                        }
                        else if (i == pageNumber - 3 || i == pageNumber + 3)
                        {
                            <li class="page-item disabled"><span class="page-link">...</span></li>
                        }
                    }

                    <li class="page-item @nextDisabled">
                        <a class="page-link" href="@GetPageUrl(pageNumber + 1)"><i class="bi bi-chevron-right"></i></a>
                    </li>
                </ul>
            </nav>
        </div>
    }
</div>

@* --- MODAL --- *@
<div class="modal fade" id="importModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" style="color: var(--neon-cyan);">
                    <i class="bi bi-steam me-2"></i>SYNCHRONIZACJA STEAM
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center py-4">
                <div class="mb-3">
                    <i class="bi bi-cloud-arrow-down" style="font-size: 3rem; color: var(--neon-cyan); text-shadow: 0 0 15px var(--neon-cyan);"></i>
                </div>
                <p class="mb-2 fs-5 fw-bold text-white">Zaimportować wszystkie gry?</p>
                <p class="text-muted small">
                    Proces może chwilę potrwać.<br>
                    Gry zostaną dodane do Twojej głównej biblioteki.
                </p>
            </div>
            <div class="modal-footer justify-content-center gap-3 border-0 pb-4">
                <button type="button" class="btn btn-ghost-cancel" data-bs-dismiss="modal" style="width: 140px;">ANULUJ</button>
                <button type="button" class="btn btn-steam-connect" onclick="document.getElementById('importSteamForm').submit()" style="width: 140px;">
                    POTWIERDŹ
                </button>
            </div>
        </div>
    </div>
</div>

<script>
    function handleSteamImageError(img) {
        const appId = img.getAttribute('data-appid');
        const name = img.getAttribute('data-name');
        let attempt = parseInt(img.getAttribute('data-attempt'));

        const spinner = img.parentElement.querySelector('.loading-spinner');
        if(spinner) spinner.style.display = 'block';

        const steamFallbacks = [
            `https://shared.akamai.steamstatic.com/store_item_assets/steam/apps/${appId}/header.jpg`,
            `https://steamcdn-a.akamaihd.net/steam/apps/${appId}/header.jpg`
        ];

        if (attempt < steamFallbacks.length) {
            img.src = steamFallbacks[attempt];
            img.setAttribute('data-attempt', attempt + 1);
        } else if (attempt === steamFallbacks.length) {
            img.setAttribute('data-attempt', attempt + 1);
            fetch(`/Profile/GetIgdbCover?steamId=${appId}&gameName=${encodeURIComponent(name)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.url) {
                        img.src = data.url;
                    } else {
                        img.src = 'https://via.placeholder.com/600x900?text=NO+IMAGE&bg=000000&fg=333333';
                    }
                })
                .catch(err => {
                    img.src = 'https://via.placeholder.com/600x900?text=ERROR&bg=000000&fg=333333';
                })
                .finally(() => {
                    if(spinner) spinner.style.display = 'none';
                });
        } else {
            if(spinner) spinner.style.display = 'none';
            img.onerror = null;
            img.src = 'https://via.placeholder.com/600x900?text=NO+IMAGE&bg=000000&fg=333333';
        }
    }
</script>