@model praca_dyplomowa_zesp.Models.Modules.Games.GameBrowserViewModel
@{
    ViewData["Title"] = ViewData["Title"] ?? "Przeglądaj Gry";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
    </div>

    @* Pasek wyszukiwania widoczny tylko w trybie "browse" *@
    @if (Model.Mode == "browse")
    {
        <div class="row mb-4">
            <div class="col-md-6">
                <form asp-action="Index" method="get">
                    <input type="hidden" name="mode" value="browse" />
                    <div class="input-group shadow-sm">
                        <input type="text" name="searchString" class="form-control" placeholder="Wyszukaj grę po nazwie..." value="@Model.SearchString" />
                        <button type="submit" class="btn btn-primary">Szukaj</button>
                        @if (!string.IsNullOrEmpty(Model.SearchString))
                        {
                            <a asp-action="Index" asp-route-mode="browse" class="btn btn-secondary">Wyczyść</a>
                        }
                    </div>
                </form>
            </div>
        </div>
    }

    <div class="row">
        @if (Model.Games.Any())
        {
            @foreach (var game in Model.Games)
            {
                <div class="col-6 col-md-4 col-lg-3 col-xl-2 mb-4">
                    @* Warunek dla linku: Cała karta jest linkiem *@
                    @if (Model.Mode == "guides")
                    {
                        <a asp-controller="Guides" asp-action="Index" asp-route-gameId="@game.Id" class="text-decoration-none text-dark card-link-wrapper">
                            @RenderGameCard(game)
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" class="text-decoration-none text-dark card-link-wrapper">
                            @RenderGameCard(game)
                        </a>
                    }
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    Nie znaleziono gier pasujących do kryteriów.
                </div>
            </div>
        }
    </div>

    <hr />

    <nav aria-label="Paginacja">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-searchString="@Model.SearchString" asp-route-mode="@Model.Mode">Poprzednia</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Poprzednia</span>
                </li>
            }

            <li class="page-item active">
                <span class="page-link">@Model.CurrentPage</span>
            </li>

            @if (Model.Games.Count == 50)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-searchString="@Model.SearchString" asp-route-mode="@Model.Mode">Następna</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">Następna</span>
                </li>
            }
        </ul>
    </nav>
</div>

@* Funkcja pomocnicza do renderowania wnętrza karty (aby nie duplikować kodu HTML) *@
@{
    Microsoft.AspNetCore.Html.IHtmlContent RenderGameCard(dynamic game)
    {
        <div class="card h-100 shadow-sm grow-on-hover" style="transition: transform 0.2s; border: none;">

            @* Kontener obrazka wymuszający proporcje *@
            <div style="position: relative; padding-top: 150%; overflow: hidden; background-color: #1b2838; border-radius: 5px;">
                <img src="@(game.Cover?.Url ?? "https://via.placeholder.com/264x352.png?text=Brak+okładki")"
                     class="card-img-top"
                     style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover;"
                     alt="@game.Name">
            </div>

            <div class="card-body p-2">
                <h6 class="card-title text-truncate font-weight-bold mt-2" title="@game.Name" style="margin-bottom: 0.2rem; font-size: 0.9rem;">
                    @game.Name
                </h6>
            </div>
        </div>
        return Html.Raw(""); // Funkcja Razor zwraca void wewnątrz bloku kodu, ale tu używamy jej jako helpera wewnątrz pętli
    }
}

<style>
    /* Styl zapożyczony z SteamLibrary dla efektu podnoszenia */
    .grow-on-hover:hover {
        transform: scale(1.05);
        cursor: pointer;
        z-index: 10;
        box-shadow: 0 1rem 3rem rgba(0,0,0,.2) !important;
    }

    /* Dodatkowy fix, aby linki nie psuły kolorów tekstu wewnątrz karty */
    .card-link-wrapper:hover {
        text-decoration: none;
        color: inherit;
    }
</style>