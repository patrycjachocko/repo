@model praca_dyplomowa_zesp.Models.Modules.Admin.AdminPanelViewModel
@{
    ViewData["Title"] = "Panel Administratora";
}

<style>
    /* --- GLOBAL ADMIN THEME & LAYOUT FIXES --- */
    :root {
        --light-pink: #ffeaf6;
        --mid-pink: #ff66c4;
        --deep-purple: #8000ff;
        --neon-blue: #00f3ff;
        --neon-green: #00ff9d;
        --neon-red: #ff3366;
        --neon-yellow: #ffc107;
        
        --dark-bg: #0b0b0e;
        --panel-bg: rgba(26, 26, 32, 0.9);
    }

    /* ZABLOKOWANIE PRZEWIJANIA STRONY */
    html, body {
        height: 100vh;
        overflow: hidden !important;
    }

    /* Ukrywamy stopkę, żeby zyskać miejsce na tabelę */
    footer { display: none !important; }

    /* Poprawka dla głównego kontenera w Layout, żeby nie dodawał zbędnych marginesów */
    .main-container {
        padding-bottom: 0 !important;
        height: calc(100vh - 70px); /* Wysokość okna minus navbar */
        display: flex;
        flex-direction: column;
    }
    
    main {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden; /* Ważne! */
    }

    /* --- GŁÓWNY KONTENER PANELU --- */
    .admin-container {
        background-color: var(--panel-bg);
        border-radius: 20px;
        padding: 30px;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(128, 0, 255, 0.2);
        box-shadow: 0 0 40px rgba(128, 0, 255, 0.1);
        
        /* ZMIANA: Flexbox do zarządzania wysokością */
        display: flex;
        flex-direction: column;
        
        /* ZMIANA: Wysokość dopasowana do rodzica (main), z małym marginesem */
        height: 100%; 
        margin-bottom: 20px;
        overflow: hidden; /* Blokujemy wyciekanie treści */
    }

    h2.admin-title {
        text-transform: uppercase;
        font-weight: 900;
        margin-bottom: 20px; /* Nieco mniejszy margines */
        letter-spacing: 2px;
        background: linear-gradient(90deg, #ffffff 0%, var(--light-pink) 30%, var(--mid-pink) 60%, var(--deep-purple) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 25px rgba(255, 102, 196, 0.4);
        flex-shrink: 0; /* Tytuł się nie kurczy */
    }

    /* --- TABS --- */
    .admin-tabs {
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        margin-bottom: 20px;
        flex-shrink: 0; /* Zakładki się nie kurczą */
    }

    .admin-tabs .nav-link {
        color: #888;
        background: transparent !important;
        border: none !important;
        font-size: 1.1rem;
        padding: 10px 20px;
        transition: all 0.3s;
        font-weight: 600;
        letter-spacing: 0.5px;
        position: relative;
    }

    /* Wyłączenie globalnej animacji z layoutu */
    .admin-tabs .nav-link::after {
        content: none !important;
        display: none !important;
    }

    .admin-tabs .nav-link:hover {
        color: #fff;
        text-shadow: 0 0 10px rgba(255,255,255,0.5);
    }

    .admin-tabs .nav-link.active {
        color: #fff !important;
        background-color: rgba(255, 255, 255, 0.05) !important;
        border-radius: 10px 10px 0 0;
        box-shadow: inset 0 -3px 0 var(--deep-purple);
        text-shadow: 0 0 15px var(--deep-purple);
    }

    .admin-tabs .nav-link.active.text-danger {
        box-shadow: inset 0 -3px 0 var(--neon-red);
        text-shadow: 0 0 15px var(--neon-red);
    }
    .admin-tabs .nav-link.active.text-warning {
        box-shadow: inset 0 -3px 0 var(--neon-yellow);
        text-shadow: 0 0 15px var(--neon-yellow);
    }

    /* --- CONTENT AREA (SCROLLABLE) --- */
    .tab-content {
        /* ZMIANA: Content zajmuje resztę dostępnego miejsca */
        flex: 1;
        overflow: hidden; /* Blokujemy scroll na kontenerze nadrzędnym */
        display: flex;
        flex-direction: column;
    }

    .tab-pane {
        /* ZMIANA: Tab-pane też musi być elastyczny */
        height: 100%;
        display: none; /* Domyślnie ukryte przez Bootstrap */
        flex-direction: column;
    }
    
    .tab-pane.active {
        display: flex; /* Tylko aktywny jest flexem */
    }

    /* ZMIANA: Formularz wyszukiwania nie może się kurczyć */
    .search-form-container {
        flex-shrink: 0;
        margin-bottom: 1rem;
    }
    
    .header-actions-container {
        flex-shrink: 0;
        margin-bottom: 1rem;
    }

    /* --- TABELE (SCROLLABLE WEWNĄTRZ) --- */
    .table-container {
        border-radius: 15px;
        border: 1px solid rgba(255,255,255,0.05);
        
        /* ZMIANA: To tutaj dzieje się magia scrollowania */
        flex: 1; /* Rozciągnij się na maksymalną dostępną wysokość */
        overflow-y: auto; /* Pokaż scrollbar tylko tutaj */
        
        /* Styl paska przewijania (opcjonalny, dla Chrome/Edge) */
        scrollbar-width: thin;
        scrollbar-color: var(--deep-purple) #1a1a20;
    }

    /* Stylowanie scrollbara Webkit */
    .table-container::-webkit-scrollbar {
        width: 8px;
    }
    .table-container::-webkit-scrollbar-track {
        background: #1a1a20;
        border-radius: 4px;
    }
    .table-container::-webkit-scrollbar-thumb {
        background-color: var(--deep-purple);
        border-radius: 4px;
        border: 2px solid #1a1a20;
    }

    .table-dark {
        --bs-table-bg: transparent;
        margin-bottom: 0;
    }

    .table-dark th {
        /* Przyklejony nagłówek tabeli */
        position: sticky;
        top: 0;
        z-index: 10;
        
        background-color: #1f1f26; /* Nieprzezroczyste tło nagłówka */
        color: var(--mid-pink);
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 1px;
        border-bottom: 2px solid rgba(255, 102, 196, 0.3);
        padding: 18px 15px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.5);
    }

    .table-dark td {
        vertical-align: middle;
        border-color: rgba(255, 255, 255, 0.05);
        padding: 15px 15px;
        color: #ddd;
    }

    .table-dark tbody tr:hover td {
        background-color: rgba(128, 0, 255, 0.1);
        color: #fff;
    }

    /* Pozostałe style (avatary, badge, przyciski) bez zmian */
    .user-avatar {
        width: 45px;
        height: 45px;
        border-radius: 12px;
        object-fit: cover;
        border: 2px solid rgba(255, 255, 255, 0.1);
        margin-right: 15px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.5);
    }

    .badge-role-admin { background: linear-gradient(45deg, #ff3366, #ff0040); box-shadow: 0 0 10px rgba(255, 51, 102, 0.5); border: 1px solid rgba(255, 255, 255, 0.2); }
    .badge-role-mod { background: linear-gradient(45deg, #00ff9d, #00cc7a); color: #000; box-shadow: 0 0 10px rgba(0, 255, 157, 0.4); }
    .badge-role-user { background-color: rgba(255, 255, 255, 0.1); border: 1px solid rgba(255, 255, 255, 0.2); }

    .status-dot { height: 8px; width: 8px; border-radius: 50%; display: inline-block; margin-right: 6px; }
    .status-active { background-color: var(--neon-green); box-shadow: 0 0 8px var(--neon-green); }
    .status-banned { background-color: var(--neon-red); box-shadow: 0 0 8px var(--neon-red); }
    .status-muted { background-color: var(--neon-yellow); box-shadow: 0 0 8px var(--neon-yellow); }

    .search-box input {
        background-color: rgba(0, 0, 0, 0.3);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff;
        border-radius: 30px 0 0 30px;
        padding-left: 20px;
    }
    .search-box input:focus {
        background-color: rgba(0, 0, 0, 0.5);
        border-color: var(--deep-purple);
        box-shadow: none;
        color: #fff;
    }
    .search-box button {
        border-radius: 0 30px 30px 0;
        background: linear-gradient(45deg, var(--deep-purple), var(--mid-pink));
        color: white;
        border: none;
        padding: 0 25px;
        font-weight: 600;
    }
    .search-box button:hover { filter: brightness(1.2); }
    
    .dropdown-menu-dark { background-color: #1a1a20; border: 1px solid rgba(255, 255, 255, 0.1); box-shadow: 0 10px 30px rgba(0,0,0,0.8); }
    .trash-warning td { color: var(--neon-red) !important; text-shadow: 0 0 5px rgba(255, 51, 102, 0.3); }
    @("@keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }")
    .animate-pulse { animation: pulse 1.5s infinite; }
</style>

<div class="container admin-container">
    <h2 class="admin-title">Panel Administratora</h2>

    @{
        bool isAdmin = User.IsInRole("Admin");
        int openTicketsCount = Model.Tickets != null ? Model.Tickets.Count(t => t.Status == praca_dyplomowa_zesp.Models.TicketStatus.Oczekujące) : 0;
    }

    <ul class="nav nav-tabs admin-tabs" id="adminTabs" role="tablist">
        @if (isAdmin)
        {
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab">
                    Zarządzanie Użytkownikami
                </button>
            </li>
        }

        <li class="nav-item" role="presentation">
            <button class="nav-link @(!isAdmin ? "active" : "")" id="posts-tab" data-bs-toggle="tab" data-bs-target="#posts" type="button" role="tab">
                Akceptacja Postów
                @if (Model.PendingGuides.Count > 0)
                {
                    <span class="badge bg-danger rounded-pill ms-2 shadow-sm">@Model.PendingGuides.Count</span>
                }
            </button>
        </li>

        <li class="nav-item" role="presentation">
            <button class="nav-link text-danger" id="trash-tab" data-bs-toggle="tab" data-bs-target="#trash" type="button" role="tab">
                <i class="fas fa-trash-alt me-2"></i> Kosz
                @if (Model.DeletedGuides != null && Model.DeletedGuides.Count > 0)
                {
                    <span class="badge bg-danger rounded-pill ms-2 shadow-sm">@Model.DeletedGuides.Count</span>
                }
            </button>
        </li>

        <li class="nav-item" role="presentation">
            <button class="nav-link text-warning" id="tickets-tab" data-bs-toggle="tab" data-bs-target="#tickets" type="button" role="tab">
                <i class="fas fa-envelope-open-text me-2"></i> Zgłoszenia
                @if (openTicketsCount > 0)
                {
                    <span class="badge bg-danger rounded-pill ms-2 shadow-sm">@openTicketsCount</span>
                }
            </button>
        </li>
    </ul>

    <div class="tab-content" id="adminTabsContent">

        @* 1. UŻYTKOWNICY *@
        @if (isAdmin)
        {
            <div class="tab-pane fade show active" id="users" role="tabpanel">
                <div class="search-form-container">
                    <form asp-action="Index" method="get">
                        <div class="input-group search-box" style="max-width: 450px;">
                            <input type="text" name="searchString" class="form-control" placeholder="Szukaj użytkownika..." value="@Model.SearchString">
                            <button type="submit"><i class="fas fa-search me-2"></i>Szukaj</button>
                        </div>
                    </form>
                </div>

                <div class="table-responsive table-container">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Użytkownik</th>
                                <th>Login</th>
                                <th>Rola</th>
                                <th>Status</th>
                                <th class="text-end">Opcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <img src="@user.AvatarUrl" class="user-avatar" alt="Avatar">
                                            <span class="fw-bold text-white">@user.UserName</span>
                                        </div>
                                    </td>
                                    <td>@user.Login</td>
                                    <td>
                                        @{
                                            if (user.Roles.Contains("Admin")) 
                                            { 
                                                <span class="badge badge-role-admin">Admin</span> 
                                            }
                                            if (user.Roles.Contains("Moderator")) 
                                            { 
                                                <span class="badge badge-role-mod ms-1">Mod</span> 
                                            }
                                            if (!user.Roles.Contains("Admin") && !user.Roles.Contains("Moderator"))
                                            {
                                                <span class="badge badge-role-user">User</span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsLockedOut) { <span class="text-danger fw-bold" title="Do: @user.LockoutEnd"><span class="status-dot status-banned"></span> BAN</span> }
                                        else if (user.IsMuted) { <span class="text-warning fw-bold" title="Do: @user.MuteEnd"><span class="status-dot status-muted"></span> MUTE</span> }
                                        else { <span class="text-success"><span class="status-dot status-active"></span> Aktywny</span> }
                                    </td>
                                    <td class="text-end">
                                        @if (!user.Roles.Contains("Admin"))
                                        {
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown">Zarządzaj</button>
                                                <ul class="dropdown-menu dropdown-menu-dark">
                                                    <li>
                                                        <form asp-action="ToggleModerator" method="post">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            @if (user.Roles.Contains("Moderator"))
                                                            {
                                                                <button type="submit" class="dropdown-item text-warning"><i class="fas fa-user-minus me-2"></i>Odbierz Moda</button>
                                                            }
                                                            else
                                                            {
                                                                <button type="submit" class="dropdown-item text-success"><i class="fas fa-user-shield me-2"></i>Mianuj Modem</button>
                                                            }
                                                        </form>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><button class="dropdown-item text-info" onclick="openMuteModal('@user.Id', '@user.UserName')"><i class="fas fa-volume-mute me-2"></i>@(user.IsMuted ? "Zmień Wyciszenie" : "Wycisz (Mute)")</button></li>
                                                    <li><button class="dropdown-item text-danger" onclick="openBanModal('@user.Id', '@user.UserName')"><i class="fas fa-ban me-2"></i>@(user.IsLockedOut ? "Zmień / Odbanuj" : "Zbanuj (Ban)")</button></li>
                                                </ul>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @* 2. POSTY *@
        <div class="tab-pane fade @(!isAdmin ? "show active" : "")" id="posts" role="tabpanel">
            @if (Model.PendingGuides.Any())
            {
                <div class="table-responsive table-container">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Tytuł</th>
                                <th>Autor</th>
                                <th>Data dodania</th>
                                <th class="text-end">Decyzja</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var guide in Model.PendingGuides)
                            {
                                <tr>
                                    <td class="fw-bold">
                                        <a asp-controller="Guides" asp-action="Details" asp-route-id="@guide.Id" target="_blank" class="text-white text-decoration-none hover-link">
                                            <i class="fas fa-external-link-alt text-muted small me-2"></i>@guide.Title
                                        </a>
                                    </td>
                                    <td>@guide.User?.UserName</td>
                                    <td class="text-muted">@guide.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td class="text-end">
                                        <form asp-action="ApproveGuide" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@guide.Id" />
                                            <button type="submit" class="btn btn-sm btn-outline-success me-1" title="Zatwierdź"><i class="fas fa-check"></i></button>
                                        </form>
                                        <button type="button" class="btn btn-sm btn-outline-danger" 
                                                title="Odrzuć" 
                                                onclick="openRejectModal('@guide.Id', '@guide.Title')">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted">
                    <i class="fas fa-check-circle fa-4x mb-3" style="color: var(--neon-green); opacity: 0.3; text-shadow: 0 0 20px var(--neon-green);"></i>
                    <h4>Wszystko wyczyszczone!</h4>
                    <p>Brak oczekujących poradników.</p>
                </div>
            }
        </div>

        @* 3. KOSZ *@
        <div class="tab-pane fade" id="trash" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center header-actions-container">
                <h4 class="text-white" style="text-shadow: 0 0 10px var(--neon-red);"><i class="fas fa-trash-alt me-2 text-danger"></i>Usunięte</h4>
                @if (Model.DeletedGuides != null && Model.DeletedGuides.Any())
                {
                    <form asp-action="EmptyTrash" method="post" onsubmit="return confirm('UWAGA: Czy na pewno chcesz OPRÓŻNIĆ cały kosz?');">
                        <button type="submit" class="btn btn-outline-danger btn-sm"><i class="fas fa-fire me-1"></i> Opróżnij Kosz</button>
                    </form>
                }
            </div>

            @if (Model.DeletedGuides != null && Model.DeletedGuides.Any())
            {
                <div class="table-responsive table-container">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Tytuł</th>
                                <th>Autor</th>
                                <th>Data usunięcia</th>
                                <th>W koszu</th>
                                <th class="text-end">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DeletedGuides)
                            {
                                var daysInTrash = (DateTime.Now - (item.DeletedAt ?? DateTime.Now)).TotalDays;
                                bool isOld = daysInTrash > 25;
                                <tr class="@(isOld ? "trash-warning" : "")">
                                    <td class="fw-bold">
                                        <span class="@(isOld ? "text-danger" : "text-secondary")">@item.Title</span>
                                    </td>
                                    <td>@item.User?.UserName</td>
                                    <td>@item.DeletedAt?.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        @if(isOld) { <span class="badge bg-danger animate-pulse">> 25 dni</span> } 
                                        else { <span class="text-muted">@Math.Floor(daysInTrash) dni</span> }
                                    </td>
                                    <td class="text-end">
                                        <form asp-action="RestoreGuide" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-outline-success btn-sm me-1" title="Przywróć"><i class="fas fa-undo"></i></button>
                                        </form>
                                        <form asp-action="DeletePermanently" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('Usunąć PERMANENTNIE?');">
                                            <button type="submit" class="btn btn-outline-danger btn-sm" title="Usuń na zawsze"><i class="fas fa-times"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted">
                    <i class="fas fa-trash-restore fa-4x mb-3" style="opacity: 0.2"></i>
                    <h4>Kosz jest pusty</h4>
                </div>
            }
        </div>

        @* 4. ZGŁOSZENIA *@
        <div class="tab-pane fade" id="tickets" role="tabpanel">
            <div class="d-flex justify-content-between align-items-center header-actions-container">
                <h4 class="text-white" style="text-shadow: 0 0 10px var(--neon-yellow);"><i class="fas fa-envelope-open-text me-2 text-warning"></i>Zgłoszenia</h4>
            </div>

            @if (Model.Tickets != null && Model.Tickets.Any())
            {
                <div class="table-responsive table-container">
                    <table class="table table-dark table-hover text-nowrap">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>Data</th>
                                <th>Użytkownik</th>
                                <th>Temat</th>
                                <th class="text-end">Podgląd</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Tickets)
                            {
                                <tr>
                                    <td>
                                        @if (item.Status == praca_dyplomowa_zesp.Models.TicketStatus.Oczekujące)
                                        {
                                            <span class="badge bg-danger shadow-sm">Oczekujące</span>
                                        }
                                        else if (item.Status == praca_dyplomowa_zesp.Models.TicketStatus.W_trakcie)
                                        {
                                            <span class="badge bg-warning text-dark shadow-sm">W trakcie</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Zamknięte</span>
                                        }
                                    </td>
                                    <td class="small text-muted">@item.CreatedAt.ToString("dd.MM HH:mm")</td>
                                    <td>
                                        <span class="fw-bold text-white">@(item.User?.UserName ?? "Nieznany")</span>
                                        @if (item.HasUnreadMessage && item.Status != praca_dyplomowa_zesp.Models.TicketStatus.Zamknięte)
                                        {
                                            <i class="fas fa-exclamation-circle text-warning ms-2 animate-pulse" title="Nowa wiadomość!"></i>
                                        }
                                    </td>
                                    <td class="text-white">@item.Title</td>
                                    <td class="text-end">
                                        <a asp-controller="Admin" asp-action="TicketDetails" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-comments me-1"></i> Otwórz
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted">
                    <i class="fas fa-check-double fa-4x mb-3" style="color: var(--neon-yellow); opacity: 0.2;"></i>
                    <h4>Brak zgłoszeń</h4>
                    <p>Wszystko pod kontrolą.</p>
                </div>
            }
        </div>

    </div>
</div>

@* Modale bez zmian w logice, tylko kolory *@
<div class="modal fade" id="muteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: #1a1a20; color: #fff; border: 1px solid var(--neon-yellow); box-shadow: 0 0 20px rgba(255, 193, 7, 0.2);">
            <form asp-action="MuteUser" method="post">
                <div class="modal-header border-secondary">
