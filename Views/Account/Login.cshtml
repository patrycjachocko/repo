@using praca_dyplomowa_zesp.Models.Users
@model LoginViewModel
@{
    ViewData["Title"] = "Zaloguj się";
}

<style>
    /* --- STYL HEAVY NEON PAGE (LOGIN) --- */
    :root {
        --neon-purple: #d900ff;
        --neon-cyan: #00f3ff;
        --bg-panel: #0a0a0f;
    }

    .login-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .neon-card {
        background-color: var(--bg-panel);
        border: 2px solid var(--neon-purple);
        box-shadow: 0 0 30px rgba(217, 0, 255, 0.2), inset 0 0 30px rgba(217, 0, 255, 0.05);
        border-radius: 0;
    }

    .neon-title-page {
        font-family: sans-serif;
        font-weight: 900;
        text-transform: uppercase;
        letter-spacing: 3px;
        text-align: center;
        margin-bottom: 2rem;
        color: #fff;
        text-shadow: 0 0 15px var(--neon-purple), 0 0 30px var(--neon-purple);
    }

    /* INPUTY */
    .form-floating > .form-control {
        background-color: #000 !important;
        border: none;
        border-bottom: 2px solid #333;
        color: #fff !important;
        border-radius: 0;
        font-family: monospace;
    }

    .form-floating > label {
        color: #666 !important;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 2px;
    }

    .form-floating > .form-control:focus {
        border-color: var(--neon-purple);
        box-shadow: 0 10px 20px -10px rgba(217, 0, 255, 0.3);
    }

        .form-floating > .form-control:focus ~ label {
            color: var(--neon-purple) !important;
            text-shadow: 0 0 5px var(--neon-purple);
        }

    /* GUZIKI */
    .btn-neon-solid {
        border: 2px solid;
        color: #fff;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        padding: 15px;
        transition: 0.2s ease-in-out;
        background: transparent;
    }

    .btn-solid-purple {
        border-color: var(--neon-purple);
        color: var(--neon-purple);
        box-shadow: 0 0 10px rgba(217, 0, 255, 0.3);
    }

        .btn-solid-purple:hover {
            background-color: var(--neon-purple);
            color: #000;
            box-shadow: 0 0 30px var(--neon-purple);
        }

    .btn-solid-cyan {
        border-color: var(--neon-cyan);
        color: var(--neon-cyan);
        box-shadow: 0 0 10px rgba(0, 243, 255, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .btn-solid-cyan:hover {
            background-color: var(--neon-cyan);
            color: #000;
            box-shadow: 0 0 30px var(--neon-cyan);
        }

    .link-glow {
        text-decoration: none;
        transition: 0.3s;
        border-bottom: 1px solid transparent;
        cursor: pointer;
        color: #fff;
    }

        .link-glow:hover {
            border-color: currentColor;
            text-shadow: 0 0 10px currentColor;
        }

    /* Checkbox */
    .form-check-input {
        background-color: #000;
        border: 1px solid #555;
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: var(--neon-purple);
            border-color: var(--neon-purple);
            box-shadow: 0 0 10px var(--neon-purple);
        }
</style>

<div class="container login-wrapper">
    <div class="row justify-content-center w-100">
        <div class="col-md-6 col-lg-5 col-xl-4">

            <div class="card neon-card">
                <div class="card-body p-4 p-sm-5">

                    <h2 class="neon-title-page">Logowanie</h2>

                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger bg-transparent border-danger text-danger py-2 small mb-3"></div>

                        <div class="form-floating mb-4">
                            <input asp-for="Login" class="form-control" placeholder="Login" required />
                            <label asp-for="Login">Login</label>
                            <span asp-validation-for="Login" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Password" class="form-control" type="password" placeholder="Hasło" required />
                            <label asp-for="Password">Hasło</label>
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="form-check mb-4">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label text-muted small pt-1" asp-for="RememberMe">
                                Zapamiętaj mnie
                            </label>
                        </div>

                        <div class="d-grid mb-4">
                            <button type="submit" class="btn btn-neon-solid btn-solid-purple">
                                Zaloguj się
                            </button>
                        </div>
                    </form>

                    <div class="text-center text-muted small mb-3" style="letter-spacing: 2px;">LUB</div>

                    <form asp-controller="Account" asp-action="LoginWithSteam" method="post" class="d-grid mb-4">
                        <button type="submit" class="btn btn-neon-solid btn-solid-cyan">
                            <i class="bi bi-steam fs-4"></i>
                            <span>Zaloguj przez Steam</span>
                        </button>
                    </form>

                    <div class="text-center mt-3">
                        <p class="text-muted small mb-1">Brak konta?</p>
                        <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="link-glow fw-bold" style="color: #fff;">
                            ZAREJESTRUJ SIĘ TERAZ
                        </a>
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}