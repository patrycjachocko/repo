@{
    ViewData["Title"] = "Panel Administratora";
}

<div class="container mt-5">
    <div class="card bg-dark text-white border-secondary">
        <div class="card-header border-secondary">
            <h2 class="mb-0">Panel Administratora</h2>
        </div>
        <div class="card-body">
            <h4 class="card-title text-info">Witaj w centrum zarządzania!</h4>
            <p class="card-text">
                Tutaj będzie znajdować się panel administratora. W przyszłości pojawią się tu opcje zarządzania użytkownikami, moderowania treści i statystyki.
            </p>
            <hr class="border-secondary" />
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-cone-striped"></i> Sekcja w budowie.
            </div>

            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-light mt-3">Powrót na stronę główną</a>
        </div>
    </div>
</div>