@model ErrorViewModel
@{
    ViewData["Title"] = "System Failure";
}

<style>
    .error-container {
        min-height: 70vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        position: relative;
    }

    .glitch-text {
        font-size: 5rem;
        font-weight: 900;
        color: #ff3366;
        text-transform: uppercase;
        position: relative;
        text-shadow: 2px 2px 0px #00f3ff;
        letter-spacing: 5px;
        animation: glitch 1s infinite;
    }

    /* Prosta animacja glitchu */
    @@keyframes glitch {
        0% {
            transform: translate(0);
        }

        20% {
            transform: translate(-2px, 2px);
        }

        40% {
            transform: translate(-2px, -2px);
        }

        60% {
            transform: translate(2px, 2px);
        }

        80% {
            transform: translate(2px, -2px);
        }

        100% {
            transform: translate(0);
        }
    }

    .error-message {
        font-size: 1.5rem;
        color: #ddd;
        margin-bottom: 2rem;
        max-width: 600px;
    }

    .request-id-box {
        background: rgba(255, 51, 102, 0.1);
        border: 1px solid #ff3366;
        padding: 15px 30px;
        border-radius: 5px;
        font-family: 'Consolas', monospace;
        color: #ff3366;
        margin-bottom: 30px;
    }

    .btn-home {
        background: transparent;
        border: 2px solid #00f3ff;
        color: #00f3ff;
        padding: 10px 40px;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        transition: all 0.3s;
        text-decoration: none;
    }

        .btn-home:hover {
            background: #00f3ff;
            color: #000;
            box-shadow: 0 0 20px #00f3ff;
        }
</style>

<div class="container error-container">
    <h1 class="glitch-text">ERROR</h1>

    <h2 class="text-white mb-4">Wystąpił błąd krytyczny systemu.</h2>

    <p class="error-message">
        Coś poszło nie tak w macierzy. Nasze netrunnery już pracują nad rozwiązaniem problemu.
        Spróbuj odświeżyć stronę lub wróć później.
    </p>

    @if (Model.ShowRequestId)
    {
        <div class="request-id-box">
            <small class="text-uppercase d-block mb-1 opacity-75">Tracking ID:</small>
            <strong>@Model.RequestId</strong>
        </div>
    }

    <a asp-controller="Home" asp-action="Index" class="btn-home">
        <i class="bi bi-house-door me-2"></i> Powrót do bazy
    </a>
</div>