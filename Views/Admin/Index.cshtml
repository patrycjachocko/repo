@model praca_dyplomowa_zesp.Models.Modules.Admin.AdminPanelViewModel
@{
    ViewData["Title"] = "Panel Administratora";
}

<div class="container-fluid admin-container">
    <div class="admin-header">
        <h2 class="admin-title">Panel Administratora</h2>
    </div>

    @{
        bool isAdmin = User.IsInRole("Admin");
        int openTicketsCount = Model.Tickets != null ? Model.Tickets.Count(t => t.Status == praca_dyplomowa_zesp.Models.TicketStatus.Oczekujące) : 0;
    }

    @* --- ZAKŁADKI --- *@
    <ul class="nav nav-tabs admin-tabs" id="adminTabs" role="tablist">
        @if (isAdmin)
        {
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="users-tab" data-bs-toggle="tab" data-bs-target="#users" type="button" role="tab">
                    <i class="bi bi-people-fill me-2"></i> Użytkownicy
                </button>
            </li>
        }

        <li class="nav-item" role="presentation">
            <button class="nav-link @(!isAdmin ? "active" : "")" id="posts-tab" data-bs-toggle="tab" data-bs-target="#posts" type="button" role="tab">
                <i class="bi bi-shield-check me-2"></i> Akceptacja
                @if (Model.PendingGuides.Count > 0)
                {
                    <span class="badge rounded-pill ms-2">@Model.PendingGuides.Count</span>
                }
            </button>
        </li>

        <li class="nav-item" role="presentation">
            <button class="nav-link" id="trash-tab" data-bs-toggle="tab" data-bs-target="#trash" type="button" role="tab">
                <i class="bi bi-trash-fill me-2"></i> Kosz
                @if (Model.DeletedGuides != null && Model.DeletedGuides.Count > 0)
                {
                    <span class="badge rounded-pill ms-2">@Model.DeletedGuides.Count</span>
                }
            </button>
        </li>

        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tickets-tab" data-bs-toggle="tab" data-bs-target="#tickets" type="button" role="tab">
                <i class="bi bi-envelope-open-fill me-2"></i> Zgłoszenia
                @if (openTicketsCount > 0)
                {
                    <span class="badge rounded-pill ms-2">@openTicketsCount</span>
                }
            </button>
        </li>
    </ul>

    <div class="tab-content" id="adminTabsContent">

        @* --- 1. UŻYTKOWNICY --- *@
        @if (isAdmin)
        {
            <div class="tab-pane fade show active" id="users" role="tabpanel">
                <div class="search-form-container">
                    <form asp-action="Index" method="get" class="admin-search-merged">
                        <div class="form-floating">
                            <input type="text" name="searchString" class="form-control" placeholder="Szukaj..." value="@Model.SearchString">
                            <label>Szukaj użytkownika...</label>
                        </div>
                        <button type="submit" class="btn-search-integrated">
                            <i class="bi bi-search fs-5"></i>
                        </button>
                    </form>
                </div>

                <div class="table-container">
                    <table class="table-admin">
                        <thead>
                            <tr>
                                <th>Użytkownik</th>
                                <th>Login</th>
                                <th class="text-center">Rola</th>
                                <th>Status</th>
                                <th class="text-end">Opcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td>
                                        <div class="user-cell-wrapper">
                                            <img src="@user.AvatarUrl" class="table-avatar" alt="Avatar">
                                            <div>
                                                <div class="user-name-text">@user.UserName</div>
                                                <small class="text-muted" style="font-size: 0.70rem;">ID: @user.Id.ToString()</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-muted">@user.Login</td>
                                    <td class="text-center">
                                        @{
                                            if (user.Roles.Contains("Admin"))
                                            {
                                                <span class="role-badge role-admin">Admin</span>
                                            }
                                            else if (user.Roles.Contains("Moderator"))
                                            {

                                                <span class="role-badge role-mod">MOD</span>
                                            }
                                            else
                                            {

                                                <span class="role-badge role-user">User</span>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsLockedOut)
                                        {
                                            <div class="status-indicator status-banned" title="Do: @user.LockoutEnd">
                                                <div class="status-dot"></div> BAN
                                            </div>
                                        }
                                        else if (user.IsMuted)
                                        {
                                            <div class="status-indicator status-muted" title="Do: @user.MuteEnd">
                                                <div class="status-dot"></div> MUTE
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="status-indicator status-active">
                                                <div class="status-dot"></div> Aktywny
                                            </div>
                                        }
                                    </td>
                                    <td class="text-end">
                                        @if (!user.Roles.Contains("Admin"))
                                        {
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-icon-square" type="button" data-bs-toggle="dropdown">
                                                    <i class="bi bi-three-dots-vertical"></i>
                                                </button>
                                                <ul class="dropdown-menu dropdown-menu-dark">
                                                    <li>
                                                        <form asp-action="ToggleModerator" method="post">
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" class="dropdown-item @(user.Roles.Contains("Moderator") ? "text-neon-cyan" : "text-neon-green")">
                                                                <i class="bi bi-shield-shaded me-2"></i>
                                                                @(user.Roles.Contains("Moderator") ? "Odbierz Moda" : "Mianuj Modem")
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><button class="dropdown-item text-warning" onclick="openMuteModal('@user.Id', '@user.UserName')"><i class="bi bi-mic-mute-fill me-2"></i>Wycisz</button></li>
                                                    <li><button class="dropdown-item text-danger" onclick="openBanModal('@user.Id', '@user.UserName')"><i class="bi bi-slash-circle me-2"></i>Zbanuj</button></li>
                                                </ul>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @* --- 2. POSTY (AKCEPTACJA) --- *@
        <div class="tab-pane fade @(!isAdmin ? "show active" : "")" id="posts" role="tabpanel">
            @if (Model.PendingGuides.Any())
            {
                <div class="table-container">
                    <table class="table-admin">
                        <thead>
                            <tr>
                                <th>Tytuł Poradnika</th>
                                <th>Autor</th>
                                <th>Data dodania</th>
                                <th class="text-end">Decyzja</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var guide in Model.PendingGuides)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-earmark-text me-3 text-muted fs-4"></i>
                                            <span class="fw-bold text-white">@guide.Title</span>
                                        </div>
                                    </td>
                                    @* Czysty tekst bez ikony *@
                                    <td class="text-muted">@guide.User?.UserName</td>

                                    <td class="text-muted">@guide.CreatedAt.ToString("dd.MM.yyyy")</td>
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            @* 1. FIOLET (Podgląd) *@
                                            <a asp-controller="Guides" asp-action="Details" asp-route-id="@guide.Id" target="_blank" class="btn-action btn-action-purple" title="Podgląd">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @* 2. ZIELONY (Akceptuj) *@
                                            <form asp-action="ApproveGuide" method="post" style="display:inline;">
                                                <input type="hidden" name="id" value="@guide.Id" />
                                                <button type="submit" class="btn-action btn-action-green" title="Zatwierdź">
                                                    <i class="bi bi-check-lg"></i>
                                                </button>
                                            </form>
                                            @* 3. CZERWONY (Odrzuć) *@
                                            <button type="button" class="btn-action btn-action-red" onclick="openRejectModal('@guide.Id', '@guide.Title')" title="Odrzuć">
                                                <i class="bi bi-x-lg"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted d-flex flex-column align-items-center justify-content-center h-100">
                    <i class="bi bi-check-circle-fill display-4 mb-3" style="color: var(--neon-green); opacity: 0.3;"></i>
                    <h4>Brak oczekujących postów</h4>
                </div>
            }
        </div>

        @* --- 3. KOSZ (ZAKTUALIZOWANY) --- *@
        <div class="tab-pane fade" id="trash" role="tabpanel">
            <div class="d-flex justify-content-center mb-3">
                @if (Model.DeletedGuides != null && Model.DeletedGuides.Any())
                {
                    @* ZMIANA: Przycisk teraz otwiera modal zamiast submitować formularz od razu *@
                    <button type="button" class="btn btn-danger-custom btn-sm" data-bs-toggle="modal" data-bs-target="#emptyTrashModal">
                        <i class="bi bi-radioactive me-2"></i> OPRÓŻNIJ KOSZ
                    </button>
                }
            </div>
            @if (Model.DeletedGuides != null && Model.DeletedGuides.Any())
            {
                <div class="table-container">
                    <table class="table-admin">
                        <thead>
                            <tr>
                                <th>Tytuł</th>
                                <th>Autor</th>
                                <th>Data usunięcia</th>
                                <th class="text-end">Akcje</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.DeletedGuides)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="bi bi-file-earmark-text me-3 text-muted fs-4"></i>
                                            <span class="fw-bold text-white">@item.Title</span>
                                        </div>
                                    </td>
                                    <td class="text-muted">@item.User?.UserName</td>
                                    <td class="text-muted">@item.DeletedAt?.ToString("dd.MM.yyyy")</td>
                                    <td class="text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            @* 1. Podgląd *@
                                            <a asp-controller="Guides" asp-action="Details" asp-route-id="@item.Id" target="_blank" class="btn-action btn-action-purple" title="Podgląd">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @* 2. Przywróć *@
                                            <form asp-action="RestoreGuide" asp-route-id="@item.Id" method="post" style="display:inline;">
                                                <button type="submit" class="btn-action btn-action-green" title="Przywróć">
                                                    <i class="bi bi-arrow-counterclockwise"></i>
                                                </button>
                                            </form>
                                            @* 3. Zniszcz (ZMIANA: Wywołanie funkcji JS) *@
                                            <button type="button" class="btn-action btn-action-red" onclick="openDeleteGuideModal('@item.Id', '@item.Title')" title="Zniszcz">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted d-flex flex-column align-items-center justify-content-center h-100">
                    <i class="bi bi-trash display-4 mb-3" style="opacity: 0.2"></i>
                    <h4>Kosz jest pusty</h4>
                </div>
            }
        </div>

        @* --- 4. ZGŁOSZENIA --- *@
        <div class="tab-pane fade" id="tickets" role="tabpanel">
            @if (Model.Tickets != null && Model.Tickets.Any())
            {
                <div class="table-container">
                    <table class="table-admin">
                        <thead>
                            <tr>
                                <th>Status</th>
                                <th>Temat</th>
                                <th>Zgłaszający</th>
                                <th>Data</th>
                                <th class="text-end">Akcja</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Tickets)
                            {
                                <tr>
                                    <td>
                                        @if (item.Status == praca_dyplomowa_zesp.Models.TicketStatus.Oczekujące)
                                        {
                                            <span class="status-badge status-badge-red">OCZEKUJĄCE</span>
                                        }
                                        else if (item.Status == praca_dyplomowa_zesp.Models.TicketStatus.W_trakcie)
                                        {
                                            <span class="status-badge status-badge-yellow">W TRAKCIE</span>
                                        }
                                        else
                                        {
                                            <span class="status-badge status-badge-grey">ZAMKNIĘTE</span>
                                        }
                                    </td>
                                    <td class="fw-bold text-white">@item.Title</td>
                                    @* Czysty tekst bez ikony *@
                                    <td class="text-muted">@(item.User?.UserName ?? "Anonim")</td>

                                    <td class="text-muted">@item.CreatedAt.ToString("dd.MM HH:mm")</td>
                                    <td class="text-end">
                                        <a asp-controller="Admin" asp-action="TicketDetails" asp-route-id="@item.Id" class="btn btn-sm btn-neon-primary px-3">
                                            OTWÓRZ <i class="bi bi-box-arrow-in-up-right ms-2"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center p-5 text-muted d-flex flex-column align-items-center justify-content-center h-100">
                    <i class="bi bi-envelope-check display-4 mb-3" style="color: var(--neon-yellow); opacity: 0.2;"></i>
                    <h4>Brak zgłoszeń</h4>
                </div>
            }
        </div>

    </div>
</div>

@* --- MODALE --- *@

@* --- 1. WYCISZANIE (MUTE) --- *@
<div class="modal fade" id="muteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        @* DODANO: modal-compact, żeby usunąć puste miejsce *@
        <div class="modal-content modal-neon modal-compact">
            <form asp-action="MuteUser" method="post">
                <div class="modal-header border-secondary justify-content-center">
                    <h5 class="modal-title text-neon-warning">Wycisz Użytkownika</h5>
                    <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <input type="hidden" name="userId" id="muteUserId" />

                    <div class="form-floating mb-3">
                        <select name="hours" class="form-select form-control-tech" id="muteSelect">
                            <option value="0">Odcisz (Anuluj karę)</option>
                            <option value="1">1 Godzina</option>
                            <option value="24">24 Godziny</option>
                            <option value="168">7 Dni</option>
                        </select>
                        <label for="muteSelect">Wybierz czas trwania</label>
                    </div>
                </div>
                <div class="modal-footer border-secondary justify-content-center">
                    <button type="button" class="btn btn-low-tier" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-neon-primary px-4">Zatwierdź</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* --- 2. BANOWANIE (BAN) --- *@
<div class="modal fade" id="banModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        @* DODANO: modal-compact *@
        <div class="modal-content modal-neon modal-compact">
            <form asp-action="BanUser" method="post">
                <div class="modal-header border-secondary justify-content-center">
                    <h5 class="modal-title text-neon-danger">Zbanuj Użytkownika</h5>
                    <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <input type="hidden" name="userId" id="banUserId" />

                    <div class="form-floating mb-3">
                        <select name="days" class="form-select form-control-tech" id="banTimeSelect">
                            <option value="0">Odbanuj (Czysta karta)</option>
                            <option value="7">7 Dni</option>
                            <option value="30">30 Dni</option>
                            <option value="3650">Permaban (Na zawsze)</option>
                        </select>
                        <label for="banTimeSelect">Czas blokady</label>
                    </div>

                    <div class="form-floating">
                        <input type="text" name="reason" class="form-control form-control-tech" id="banReasonInput" placeholder="Powód bana" autocomplete="off" />
                        <label for="banReasonInput">Powód bana</label>
                    </div>
                </div>
                <div class="modal-footer border-secondary justify-content-center">
                    <button type="button" class="btn btn-low-tier" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-danger-custom px-4">Wykonaj wyrok</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* --- 3. ODRZUCANIE POSTA (REJECT) - ZMIANA: Dodałem modal-compact --- *@
<div class="modal fade" id="rejectModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        @* DODANO: modal-compact *@
        <div class="modal-content modal-neon modal-compact">
            <form asp-action="RejectGuide" method="post">
                <div class="modal-header border-secondary justify-content-center">
                    <h5 class="modal-title text-neon-danger">Odrzuć Poradnik</h5>
                    <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <input type="hidden" name="id" id="rejectGuideId" />
                    <div class="form-floating form-floating-left">
                        <textarea name="reason" class="form-control form-control-tech no-resize" id="rejectReasonArea" placeholder="Powód odrzucenia" style="height: 100px"></textarea>
                        <label for="rejectReasonArea">Powód odrzucenia (widoczny dla autora)</label>
                    </div>
                </div>
                <div class="modal-footer border-secondary justify-content-center">
                    <button type="button" class="btn btn-low-tier" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-danger-custom px-4">Odrzuć definitywnie</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* --- 4. OPRÓŻNIANIE KOSZA - ZMIANA: Dodałem modal-compact --- *@
<div class="modal fade" id="emptyTrashModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        @* DODANO: modal-compact *@
        <div class="modal-content modal-neon modal-compact">
            <form asp-action="EmptyTrash" method="post">
                <div class="modal-header border-secondary justify-content-center">
                    <h5 class="modal-title text-neon-danger">OSTRZEŻENIE</h5>
                    <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <i class="bi bi-radioactive display-1 text-neon-red mb-3 d-block" style="opacity: 0.8; text-shadow: 0 0 20px red;"></i>
                    <h5 class="mb-3">Czy na pewno chcesz opróżnić kosz?</h5>
                    <p class="text-muted small">
                        Tej operacji nie można cofnąć. Wszystkie poradniki znajdujące się w koszu zostaną trwale usunięte z bazy danych.
                    </p>
                </div>
                <div class="modal-footer border-secondary justify-content-center">
                    <button type="button" class="btn btn-low-tier" data-bs-dismiss="modal">Anuluj</button>
                    <button type="submit" class="btn btn-danger-custom px-4">
                        <i class="bi bi-trash-fill me-2"></i> POTWIERDZAM USUNIĘCIE
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@* --- 5. USUWANIE JEDNEGO - ZMIANA: Dodałem modal-compact --- *@
<div class="modal fade" id="deleteGuideModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        @* DODANO: modal-compact *@
        <div class="modal-content modal-neon modal-compact">
            <form asp-action="DeletePermanently" method="post">
                <div class="modal-header border-secondary justify-content-center">
                    <h5 class="modal-title text-neon-danger">Usuń trwale</h5>
                    <button type="button" class="btn-close btn-close-white position-absolute end-0 me-3" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center p-4">
                    <input type="hidden" name="id" id="deleteGuideId" />
                    <i class="bi bi-exclamation-triangle display-4 text-neon-yellow mb-3 d-block"></i>
                    <p>Czy na pewno chcesz bezpowrotnie usunąć poradnik:</p>
                    <h5 class="text-white fw-bold my-3" id="deleteGuideTitleDisplay"></h5>
                    <p class="text-muted small">Tego pliku nie będzie można już przywrócić.</p>
                </div>
                <div class="modal-footer border-secondary justify-content-center">
                    <button type="button" class="btn btn-low-tier" data-bs-dismiss="modal">Nie, zostaw</button>
                    <button type="submit" class="btn btn-danger-custom px-4">Usuń na zawsze</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.body.classList.add('admin-page');

    document.addEventListener("DOMContentLoaded", function() {
        // Obsługa zakładek (Tabs) i pamiętanie aktywnej zakładki po odświeżeniu
        var triggerTabList = [].slice.call(document.querySelectorAll('#adminTabs button'))
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl)
            triggerEl.addEventListener('click', function (event) {
                localStorage.setItem('activeAdminTab', event.target.id);
            })
        })

        var activeTabId = localStorage.getItem('activeAdminTab');
        if(activeTabId) {
            var tabToActivate = document.querySelector('#' + activeTabId);
            if(tabToActivate) { new bootstrap.Tab(tabToActivate).show(); }
        }
    });

    // Istniejące funkcje
    function openMuteModal(id, name) {
        document.getElementById('muteUserId').value = id;
        new bootstrap.Modal(document.getElementById('muteModal')).show();
    }
    function openBanModal(id, name) {
        document.getElementById('banUserId').value = id;
        new bootstrap.Modal(document.getElementById('banModal')).show();
    }
    function openRejectModal(id, title) {
        document.getElementById('rejectGuideId').value = id;
        new bootstrap.Modal(document.getElementById('rejectModal')).show();
    }

    // --- NOWA FUNKCJA: Obsługa usuwania pojedynczego pliku ---
    function openDeleteGuideModal(id, title) {
        // Ustawiamy ID w ukrytym polu formularza
        document.getElementById('deleteGuideId').value = id;
        // Ustawiamy Tytuł w treści modala (żeby admin wiedział, co usuwa)
        document.getElementById('deleteGuideTitleDisplay').textContent = title;
        // Otwieramy modal
        new bootstrap.Modal(document.getElementById('deleteGuideModal')).show();
    }
</script>