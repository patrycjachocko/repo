@model praca_dyplomowa_zesp.Models.Ticket

@{
    ViewData["Title"] = "Nowe Zgłoszenie";
}

<style>
    /* --- STYL FORMULARZA (Cyberpunk Terminal) --- */

    /* Główny kontener */
    .ticket-panel {
        background: rgba(22, 22, 28, 0.95);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 0 50px rgba(0, 0, 0, 0.5);
        padding: 40px;
        position: relative;
        overflow: hidden;
    }

        /* Dekoracyjna linia na górze */
        .ticket-panel::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 2px;
            background: linear-gradient(90deg, var(--deep-purple), var(--mid-pink));
            box-shadow: 0 0 15px var(--mid-pink);
        }

    /* Nagłówek */
    .panel-title {
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 30px;
        background: linear-gradient(90deg, #fff, #ff66c4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 0 0 20px rgba(255, 102, 196, 0.3);
    }

    /* Inputy */
    .form-label {
        color: #aaa;
        font-size: 0.9rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .form-control-cyber {
        background-color: #0b0b0e !important;
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: #fff !important;
        border-radius: 10px;
        padding: 12px 15px;
        transition: all 0.3s ease;
    }

        .form-control-cyber:focus {
            border-color: var(--mid-pink);
            box-shadow: 0 0 15px rgba(255, 102, 196, 0.2);
        }

        .form-control-cyber::placeholder {
            color: #555;
        }

    /* Podgląd załączników */
    .preview-container {
        position: relative;
        display: inline-block;
        margin-right: 15px;
        margin-bottom: 15px;
        border-radius: 10px;
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
        transition: transform 0.2s;
    }

        .preview-container:hover {
            transform: scale(1.05);
            border-color: var(--mid-pink);
        }

    .preview-thumb {
        width: 120px;
        height: 120px;
        object-fit: cover;
    }

    .btn-remove-file {
        position: absolute;
        top: 5px;
        right: 5px;
        background: rgba(0,0,0,0.7);
        border-radius: 50%;
        padding: 5px;
        width: 24px;
        height: 24px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        border: none;
        transition: background 0.2s;
    }

        .btn-remove-file:hover {
            background: #ff3366;
        }

    /* Przyciski */
    .btn-send {
        background: linear-gradient(45deg, var(--deep-purple), var(--mid-pink));
        border: none;
        color: white;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
        padding: 12px;
        border-radius: 10px;
        transition: all 0.3s;
        box-shadow: 0 5px 15px rgba(188, 19, 254, 0.3);
    }

        .btn-send:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 25px rgba(255, 102, 196, 0.6);
            color: white;
        }

    .btn-back {
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #aaa;
        border-radius: 10px;
        padding: 12px;
        transition: all 0.3s;
    }

        .btn-back:hover {
            background: rgba(255, 255, 255, 0.1);
            color: #fff;
            border-color: #fff;
        }

    /* Strefa upuszczania plików (wizualna) */
    .drop-zone-info {
        border: 2px dashed rgba(255,255,255,0.1);
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        color: #666;
        font-size: 0.85rem;
        margin-bottom: 10px;
        background: rgba(0,0,0,0.2);
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="ticket-panel">

                <h2 class="panel-title text-center">
                    <i class="fas fa-headset me-3 text-white-50"></i>Centrum Wsparcia
                </h2>

                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    @* TEMAT *@
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">Temat zgłoszenia</label>
                        <input asp-for="Title" class="form-control form-control-cyber" placeholder="Np. Problem z logowaniem / Błąd w grze" />
                        <span asp-validation-for="Title" class="text-danger small mt-1 d-block"></span>
                    </div>

                    @* OPIS *@
                    <div class="mb-4">
                        <label asp-for="Content" class="form-label">Opis problemu</label>
                        <div class="small text-muted mb-2 opacity-75">
                            <i class="bi bi-info-circle me-1"></i> Możesz wklejać zrzuty ekranu bezpośrednio (Ctrl+V) w pole tekstowe.
                        </div>
                        <textarea asp-for="Content" id="contentInput" class="form-control form-control-cyber" rows="6" placeholder="Opisz szczegółowo, co się stało..."></textarea>
                        <span asp-validation-for="Content" class="text-danger small mt-1 d-block"></span>
                    </div>

                    @* ZAŁĄCZNIKI *@
                    <div class="mb-4">
                        <label class="form-label">Załączniki (Opcjonalnie)</label>

                        <div class="drop-zone-info">
                            Obsługiwane formaty: JPG, PNG. Maksymalnie 5 plików.
                        </div>

                        <div id="previews" class="d-flex flex-wrap mb-3"></div>

                        <input type="file" name="attachments" id="attachmentInput" class="form-control form-control-cyber" multiple accept="image/*" />
                    </div>

                    @* PRZYCISKI *@
                    <div class="d-grid gap-3 d-md-flex mt-5">
                        <button type="submit" class="btn btn-send flex-grow-1">
                            <i class="fas fa-paper-plane me-2"></i> Wyślij zgłoszenie
                        </button>
                        <a asp-action="Index" class="btn btn-back px-4">
                            Anuluj
                        </a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const dt = new DataTransfer();
        const attachmentInput = document.getElementById('attachmentInput');
        const previewsDiv = document.getElementById('previews');

        // Obsługa wyboru plików z dysku
        attachmentInput.addEventListener('change', function(){
            for(let i = 0; i < this.files.length; i++){
                // Dodajemy tylko jeśli jeszcze nie ma (opcjonalnie)
                dt.items.add(this.files[i]);
            }
            updateFiles();
        });

        // Obsługa wklejania (Paste)
        document.getElementById('contentInput').addEventListener('paste', function (e) {
            var items = (e.clipboardData || e.originalEvent.clipboardData).items;
            for (var index in items) {
                var item = items[index];
                if (item.kind === 'file' && item.type.startsWith('image/')) {
                    var blob = item.getAsFile();
                    dt.items.add(blob);
                    updateFiles();
                }
            }
        });

        function updateFiles(){
            attachmentInput.files = dt.files;
            renderPreviews();
        }

        function renderPreviews(){
            previewsDiv.innerHTML = '';
            for(let i = 0; i < dt.files.length; i++){
                const file = dt.files[i];
                const reader = new FileReader();

                reader.onload = function(e){
                    const div = document.createElement('div');
                    div.className = 'preview-container';

                    // Template miniatury
                    div.innerHTML = `
                        <img src="${e.target.result}" class="preview-thumb" />
                        <button type="button" class="btn-remove-file text-white" onclick="removeFile(${i})" title="Usuń">
                            <i class="fas fa-times" style="font-size: 0.8rem;"></i>
                        </button>
                    `;
                    previewsDiv.appendChild(div);
                }
                reader.readAsDataURL(file);
            }
        }

        // Musimy przypisać funkcję do window, żeby była widoczna w onclick="" wewnątrz HTML generowanego przez JS
        window.removeFile = function(index){
            dt.items.remove(index);
            updateFiles();
        }
    </script>
}