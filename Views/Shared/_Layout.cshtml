@using Microsoft.AspNetCore.Identity
@using praca_dyplomowa_zesp.Models.Users
@inject UserManager<User> UserManager
@inject SignInManager<User> SignInManager

@{
    // --- GLOBALNA LOGIKA KOLORÓW RANGI (NEON) ---
    // Domyślny kolor (Użytkownik / Gość)
    string globalRoleColor = "var(--neon-cyan)";

    if (User.IsInRole("Admin"))
    {
        // Admin -> Czerwony
        globalRoleColor = "var(--neon-red)";
    }
    else if (User.IsInRole("Moderator"))
    {
        // Moderator -> Zielony
        globalRoleColor = "var(--neon-green)";
    }
}

<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GameHub</title>

    @* --- BIBLIOTEKI ZEWNĘTRZNE --- *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

    @* LEAFLET (Mapy) *@
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.css" />

    @* --- GŁÓWNY STYL APLIKACJI (High-Tech Cyberpunk) --- *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/praca_dyplomowa_zesp.styles.css" asp-append-version="true" />
</head>

@* --- TU DZIEJE SIĘ MAGIA: WSTRZYKUJEMY KOLOR RANGI DO ZMIENNEJ CSS --- *@
<body style="--role-color: @globalRoleColor;">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark mb-3">
            <div class="container-fluid">

                @* LOGO - STYLIZOWANE W CSS (navbar-brand) *@
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GAMEHUB</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">

                        @* PRZEGLĄDAJ GRY *@
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Games" asp-action="Index" asp-route-mode="browse">
                                <i class="fas fa-gamepad me-1"></i> Przeglądaj Gry
                            </a>
                        </li>

                        @* GUIDES & TIPS (Dropdown) *@
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="guidesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"
                               asp-controller="Games" asp-action="Index" asp-route-mode="guides">
                                <i class="fas fa-book-open me-1"></i> Guides & Tips
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="guidesDropdown">
                                @await Component.InvokeAsync("PopularGames")
                            </ul>
                        </li>

                        @* MOJA BIBLIOTEKA (Dla zalogowanych) *@
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Library" asp-action="Index">
                                    <i class="fas fa-layer-group me-1"></i> Moja Biblioteka
                                </a>
                            </li>

                            @* BIBLIOTEKA STEAM (Jeśli połączono) *@
                            {
                                var user = await UserManager.GetUserAsync(User);
                                if (user != null && !string.IsNullOrEmpty(user.SteamId))
                                {
                                    <li class="nav-item">
                                        @* ZMIANA: Używamy var(--role-color) zamiast sztywnego cyjanu *@
                                        <a class="nav-link" asp-controller="Profile" asp-action="SteamLibrary" style="color: var(--role-color) !important;">
                                            <i class="fab fa-steam me-1"></i> Biblioteka Steam
                                        </a>
                                    </li>
                                }
                            }
                        }
                    </ul>

                    @* PANEL LOGOWANIA (Z NEONOWYMI GUZIKAMI) *@
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-container">
        <main role="main" class="pb-3">
            @* POWIADOMIENIA (ALERTY) *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - @DateTime.Now.Year GameHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
            <span class="mx-2 text-secondary">|</span>
            <a asp-controller="Tickets" asp-action="Index">
                <i class="fas fa-headset me-1"></i> Support / Kontakt
            </a>
        </div>
    </footer>

    @* MODALE LOGOWANIA/REJESTRACJI *@
    <partial name="_AuthModals" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @* SKRYPTY MAP *@
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet.draw/1.0.4/leaflet.draw.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>