@using praca_dyplomowa_zesp.Models.Users
@model LoginViewModel
@{
    ViewData["Title"] = "Zaloguj się";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 col-xl-4">

            <div class="card border-0 shadow-lg rounded-3">
                <div class="card-body p-4 p-sm-5">

                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary">Witaj ponownie!</h2>
                        <p class="text-muted">Zaloguj się, aby kontynuować.</p>
                    </div>

                    <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                        @* Wyświetlanie błędów *@
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small mb-3" role="alert"></div>

                        @* LOGIN *@
                        <div class="form-floating mb-3">
                            <input asp-for="Login" class="form-control" placeholder="Twój login" required />
                            <label asp-for="Login"><i class="bi bi-person me-2"></i>Login</label>
                            <span asp-validation-for="Login" class="text-danger small"></span>
                        </div>

                        @* HASŁO *@
                        <div class="form-floating mb-3">
                            <input asp-for="Password" class="form-control" placeholder="Hasło" required />
                            <label asp-for="Password"><i class="bi bi-lock me-2"></i>Hasło</label>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        @* CHECKBOX *@
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="RememberMe" />
                            <label class="form-check-label text-muted" asp-for="RememberMe">
                                Zapamiętaj mnie
                            </label>
                        </div>

                        @* PRZYCISK LOGOWANIA *@
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold py-2">
                                Zaloguj się
                            </button>
                        </div>

                        <hr class="my-4">

                        <div class="text-center">
                            <p class="text-muted mb-0">Nie masz jeszcze konta?</p>
                            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="text-decoration-none fw-bold">
                                Zarejestruj się teraz
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}