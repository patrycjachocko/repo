@using praca_dyplomowa_zesp.Models.Interactions.Reactions
@using System.Security.Claims
@model praca_dyplomowa_zesp.Models.Modules.Guides.GuideDetailsViewModel

@{
    ViewData["Title"] = Model.Guide.Title;

    Guid currentUserId = Guid.Empty;
    if (User.Identity.IsAuthenticated)
    {
        var userIdClaim = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
        if (userIdClaim != null)
        {
            Guid.TryParse(userIdClaim, out currentUserId);
        }
    }

    bool isAuthor = User.Identity.IsAuthenticated && Model.Guide.User?.UserName == User.Identity.Name;
    bool isAdminOrMod = User.IsInRole("Admin") || User.IsInRole("Moderator");
    bool isRejected = Model.Guide.IsRejected;
    bool isPending = !Model.Guide.IsApproved && !Model.Guide.IsDeleted && !Model.Guide.IsDraft && !isRejected;
}

<div class="container mt-4">

    @* --- KOMUNIKATY --- *@
    @if (TempData["StatusMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["StatusMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* --- STATUSY --- *@
    @if (isRejected)
    {
        <div class="alert alert-danger border-danger border-3 shadow-sm mb-4" role="alert" style="background-color: #2c0b0e; border-color: #842029;">
            <div class="d-flex align-items-start">
                <i class="fas fa-times-circle fa-2x me-3 text-danger"></i>
                <div class="w-100">
                    <h4 class="alert-heading text-danger fw-bold">Poradnik wymaga poprawek</h4>
                    <p class="text-white">Twój poradnik został odrzucony przez administrację. Zapoznaj się z powodem poniżej, wprowadź poprawki i prześlij go ponownie do akceptacji.</p>
                    <hr class="border-danger">
                    <p class="mb-0 text-white"><strong>Powód odrzucenia:</strong> <span class="fst-italic text-light">@Model.Guide.RejectionReason</span></p>
                </div>
            </div>
        </div>
    }
    else if (Model.Guide.IsDraft)
    {
        <div class="alert alert-secondary border-secondary d-flex align-items-center mb-4" role="alert" style="background-color: #e2e3e5; color: #383d41;">
            <i class="fas fa-pencil-ruler fa-2x me-3"></i>
            <div>
                <h5 class="alert-heading fw-bold mb-1">To jest SZKIC poradnika</h5>
                <p class="mb-0 small">Ten poradnik jest widoczny tylko dla Ciebie (i administracji). Aby go upublicznić, musisz go edytować i kliknąć "Opublikuj".</p>
            </div>
        </div>
    }
    else if (isPending)
    {
        <div class="alert alert-warning border-warning d-flex align-items-center mb-4" role="alert">
            <i class="fas fa-lock fa-2x me-3"></i>
            <div>
                <h5 class="alert-heading fw-bold mb-1">Poradnik oczekuje na akceptację</h5>
                <p class="mb-0 small">Treść jest obecnie weryfikowana przez moderatorów. Jest widoczna tylko dla Ciebie i administracji.</p>
            </div>
        </div>
    }

    @if (Model.Guide.IsDeleted)
    {
        <div class="alert alert-danger border-danger mb-4 shadow-sm" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-trash-alt fa-2x me-3"></i>
                <div>
                    <h5 class="alert-heading fw-bold mb-1">Ten poradnik znajduje się w KOSZU</h5>
                    <p class="mb-0 small">Został usunięty lub przeniesiony do archiwum. Jest widoczny tylko dla administracji.</p>
                </div>
            </div>
        </div>
    }

    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Index" asp-route-gameId="@Model.Guide.IgdbGameId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Wróć do listy
        </a>

        @if (!Model.Guide.IsDraft)
        {
            <a asp-action="DownloadPdf" asp-route-id="@Model.Guide.Id" class="btn btn-outline-danger" target="_blank">
                <i class="fas fa-file-pdf"></i> Pobierz jako PDF
            </a>
        }
    </div>

    @* --- KARTA PORADNIKA --- *@
    <div class="card bg-dark text-white border-secondary shadow-lg mb-4">
        <div class="card-header border-secondary p-4 text-center" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.9)), url('@(Model.Guide.CoverImage != null ? $"data:{Model.Guide.CoverImageContentType};base64,{Convert.ToBase64String(Model.Guide.CoverImage)}" : "")') center/cover no-repeat;">

            @if (Model.Guide.IsDraft)
            {
                <span class="badge bg-secondary mb-2">SZKIC</span>
            }
            @if (isRejected)
            {
                <span class="badge bg-danger mb-2">ODRZUCONY</span>
            }

            <h1 class="display-4 fw-bold mt-3">@Model.Guide.Title</h1>
            <p class="lead text-light mb-4">@Model.Guide.Description</p>
            <div class="d-flex justify-content-center align-items-center gap-3 text-muted">
                <span><i class="fas fa-user"></i> @Model.Guide.User?.UserName</span>
                <span><i class="fas fa-calendar"></i> @Model.Guide.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                <span><i class="fas fa-star text-warning"></i> Średnia: @Model.AverageRating.ToString("0.0")/5.0</span>
            </div>
        </div>

        <div class="card-body p-4 p-md-5 guide-content">
            @if (!string.IsNullOrEmpty(Model.Guide.Content))
            {
                @Html.Raw(Model.Guide.Content)
            }
            else
            {
                <p class="text-muted text-center">Ten poradnik nie ma jeszcze treści.</p>
            }
        </div>

        @if ((!Model.Guide.IsDeleted && (isAuthor || isAdminOrMod)) || (Model.Guide.IsDeleted && isAdminOrMod))
        {
            <div class="card-footer border-secondary p-3 d-flex justify-content-end gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Guide.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edytuj
                </a>

                @if (Model.Guide.IsDeleted)
                {
                    <form asp-controller="Admin" asp-action="RestoreGuide" method="post">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-trash-restore"></i> Przywróć
                        </button>
                    </form>
                    <form asp-controller="Guides" asp-action="DeletePermanently" method="post" onsubmit="return confirm('To usunięcie będzie PERMANENTNE i nieodwracalne. Kontynuować?');">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-times"></i> Usuń na zawsze
                        </button>
                    </form>
                }
                else
                {
                    <form asp-action="Delete" method="post" asp-route-id="@Model.Guide.Id" onsubmit="return confirm('@(Model.Guide.IsApproved ? "Czy przenieść do kosza?" : "Czy usunąć?")');">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Usuń
                        </button>
                    </form>
                }
            </div>
        }
    </div>

    @if (isPending && isAdminOrMod)
    {
        <div class="card bg-dark border-warning mb-5 shadow">
            <div class="card-header border-warning bg-transparent text-warning">
                <h4 class="mb-0"><i class="fas fa-user-shield"></i> Decyzja Moderatora</h4>
            </div>
            <div class="card-body text-center">
                <p class="lead mb-4 text-white">Ten poradnik oczekuje na akceptację. Jaka jest Twoja decyzja?</p>
                <div class="d-flex justify-content-center gap-3">
                    <form asp-controller="Guides" asp-action="ApproveGuide" method="post">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <button type="submit" class="btn btn-success btn-lg px-4">
                            <i class="fas fa-check me-2"></i> Zatwierdź
                        </button>
                    </form>
                    <button type="button" class="btn btn-danger btn-lg px-4" data-bs-toggle="modal" data-bs-target="#rejectModal">
                        <i class="fas fa-ban me-2"></i> Odrzuć
                    </button>
                </div>
            </div>
            <div class="card-footer border-warning text-muted small text-center">
                Zatwierdzenie opublikuje poradnik. Odrzucenie zwróci go autorowi do poprawy.
            </div>
        </div>
    }

    @if (Model.Guide.IsApproved && !Model.Guide.IsDeleted && !Model.Guide.IsDraft)
    {
        <div class="card bg-dark text-white border-secondary mb-5">
            <div class="card-body text-center">
                <h4 class="mb-3">Oceń ten poradnik</h4>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="guideId" value="@Model.Guide.Id" />
                    <input type="hidden" id="currentRating" value="@Model.UserRating" />

                    <div class="d-flex flex-column justify-content-center align-items-center gap-2 mb-2">
                        <div id="star-container" style="cursor: pointer; font-size: 2rem; color: #ccc;">
                            <i class="far fa-star star-icon" data-value="1"></i>
                            <i class="far fa-star star-icon" data-value="2"></i>
                            <i class="far fa-star star-icon" data-value="3"></i>
                            <i class="far fa-star star-icon" data-value="4"></i>
                            <i class="far fa-star star-icon" data-value="5"></i>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="text-muted small">Twoja ocena:</span>
                            <span id="rating-display" class="fs-4 fw-bold text-warning">
                                @(Model.UserRating > 0 ? Model.UserRating.ToString("0.0", System.Globalization.CultureInfo.InvariantCulture) : "0.0")
                            </span>
                        </div>
                        <span id="save-message" class="text-success fw-bold" style="opacity: 0; transition: opacity 0.5s;">
                            <i class="fas fa-check"></i> Zapisano!
                        </span>
                    </div>
                }
                else
                {
                    <p class="text-muted"><a asp-controller="Account" asp-action="Login">Zaloguj się</a>, aby ocenić poradnik.</p>
                }
            </div>
        </div>

        <div class="comments-section mb-5" id="comments">
            <h3 class="text-white border-bottom border-secondary pb-2 mb-4">Komentarze (@Model.Comments.Count)</h3>

            @if (User.Identity.IsAuthenticated)
            {
                <div class="card bg-dark border-secondary mb-4">
                    <div class="card-body">
                        <form asp-action="AddComment" method="post">
                            <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                            <div class="mb-3">
                                <textarea name="content" class="form-control bg-dark text-white border-secondary" rows="3" placeholder="Napisz komentarz..."></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary float-end">Dodaj komentarz</button>
                        </form>
                    </div>
                </div>
            }

            @foreach (var comment in Model.Comments)
            {
                var isCommentAuthor = User.Identity.IsAuthenticated && comment.Author.UserName == User.Identity.Name;
                var canManageComment = isCommentAuthor || isAdminOrMod;
                var userLikedComment = comment.Reactions.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Like);
                var userDislikedComment = comment.Reactions.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Dislike);

                <div class="card bg-dark border-secondary mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <strong class="text-primary me-2">@comment.Author.UserName</strong>
                                <small class="text-muted">@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</small>
                            </div>
                            @if (canManageComment)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-link text-muted p-0" type="button" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-v"></i></button>
                                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                        @if (isCommentAuthor)
                                        {
                                            <li><a class="dropdown-item" href="#" onclick="toggleEditForm('comment-edit-@comment.Id'); return false;">Edytuj</a></li>
                                        }
                                        <li>
                                            <form asp-action="DeleteComment" method="post" onsubmit="return confirm('Usunąć komentarz?');">
                                                <input type="hidden" name="commentId" value="@comment.Id" />
                                                <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                                <button type="submit" class="dropdown-item text-danger">Usuń</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            }
                        </div>
                        <div id="comment-content-@comment.Id"><p class="card-text text-light">@comment.Content</p></div>
                        @if (isCommentAuthor)
                        {
                            <div id="comment-edit-@comment.Id" class="d-none mb-3">
                                <form asp-action="EditComment" method="post">
                                    <input type="hidden" name="commentId" value="@comment.Id" />
                                    <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                    <textarea name="content" class="form-control bg-dark text-white border-secondary mb-2">@comment.Content</textarea>
                                    <button type="submit" class="btn btn-sm btn-success">Zapisz</button>
                                    <button type="button" class="btn btn-sm btn-secondary" onclick="toggleEditForm('comment-edit-@comment.Id')">Anuluj</button>
                                </form>
                            </div>
                        }
                        <div class="d-flex align-items-center gap-3 mt-3">
                            <form asp-action="ToggleReaction" method="post" class="d-inline">
                                <input type="hidden" name="commentId" value="@comment.Id" /> <input type="hidden" name="guideId" value="@Model.Guide.Id" /> <input type="hidden" name="isUpvote" value="true" />
                                <button class="btn btn-link p-0 text-decoration-none action-btn @(userLikedComment ? "text-success" : "text-muted")"><i class="fas fa-thumbs-up"></i> @comment.Reactions.Count(r => r.Type == ReactionType.Like)</button>
                            </form>
                            <form asp-action="ToggleReaction" method="post" class="d-inline">
                                <input type="hidden" name="commentId" value="@comment.Id" /> <input type="hidden" name="guideId" value="@Model.Guide.Id" /> <input type="hidden" name="isUpvote" value="false" />
                                <button class="btn btn-link p-0 text-decoration-none action-btn @(userDislikedComment ? "text-danger" : "text-muted")"><i class="fas fa-thumbs-down"></i> @comment.Reactions.Count(r => r.Type == ReactionType.Dislike)</button>
                            </form>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <button class="btn btn-link p-0 text-decoration-none text-muted action-btn" onclick="document.getElementById('reply-form-@comment.Id').classList.toggle('d-none')"><i class="fas fa-reply"></i> Odpowiedz</button>
                            }
                        </div>
                        <div id="reply-form-@comment.Id" class="mt-3 d-none border-top border-secondary pt-3">
                            <form asp-action="AddReply" method="post">
                                <input type="hidden" name="commentId" value="@comment.Id" /> <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                <div class="input-group"> <input type="text" name="content" class="form-control bg-dark text-white border-secondary" placeholder="Twoja odpowiedź..." required> <button class="btn btn-primary" type="submit">Wyślij</button> </div>
                            </form>
                        </div>
                        @if (comment.Replies != null && comment.Replies.Any())
                        {
                            <div class="mt-3 ps-4 border-start border-secondary">
                                @foreach (var reply in comment.Replies)
                                {
                                    var isReplyAuthor = User.Identity.IsAuthenticated && reply.Author.UserName == User.Identity.Name;
                                    var canManageReply = isReplyAuthor || isAdminOrMod;
                                    var replyLikes = reply.Reactions?.Count(r => r.Type == ReactionType.Like) ?? 0;
                                    var replyDislikes = reply.Reactions?.Count(r => r.Type == ReactionType.Dislike) ?? 0;
                                    var userLikedReply = reply.Reactions?.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Like) ?? false;
                                    var userDislikedReply = reply.Reactions?.Any(r => r.UserId == currentUserId && r.Type == ReactionType.Dislike) ?? false;

                                    <div class="mb-3 pb-2 border-bottom border-secondary" style="border-bottom-style: dashed !important; border-color: #444 !important;">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div><strong class="text-info small">@reply.Author.UserName</strong> <small class="text-muted" style="font-size: 0.8rem;">@reply.CreatedAt.ToString("dd.MM HH:mm")</small></div>
                                            @if (canManageReply)
                                            {
                                                <div class="dropdown">
                                                    <button class="btn btn-link text-muted p-0" style="font-size: 0.8rem;" type="button" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-h"></i></button>
                                                    <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                                        @if (isReplyAuthor)
                                                        {
                                                            <li><a class="dropdown-item btn-sm" href="#" onclick="toggleEditForm('reply-edit-@reply.Id'); return false;">Edytuj</a></li>
                                                        }
                                                        <li><form asp-action="DeleteReply" method="post" onsubmit="return confirm('Usunąć odpowiedź?');"><input type="hidden" name="replyId" value="@reply.Id" /><input type="hidden" name="guideId" value="@Model.Guide.Id" /><button type="submit" class="dropdown-item text-danger btn-sm">Usuń</button></form></li>
                                                    </ul>
                                                </div>
                                            }
                                        </div>
                                        <div id="reply-content-@reply.Id"><p class="mb-1 text-light small">@reply.Content</p></div>
                                        @if (isReplyAuthor)
                                        {
                                            <div id="reply-edit-@reply.Id" class="d-none mb-2">
                                                <form asp-action="EditReply" method="post">
                                                    <input type="hidden" name="replyId" value="@reply.Id" /> <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                                    <div class="input-group input-group-sm"> <input type="text" name="content" class="form-control bg-dark text-white border-secondary" value="@reply.Content"> <button class="btn btn-success" type="submit">OK</button> <button class="btn btn-secondary" type="button" onclick="toggleEditForm('reply-edit-@reply.Id')">X</button> </div>
                                                </form>
                                            </div>
                                        }
                                        <div class="d-flex align-items-center gap-2">
                                            <form asp-action="ToggleReaction" method="post" class="d-inline"><input type="hidden" name="replyId" value="@reply.Id" /><input type="hidden" name="guideId" value="@Model.Guide.Id" /><input type="hidden" name="isUpvote" value="true" /><button class="btn btn-link p-0 text-decoration-none action-btn-sm @(userLikedReply ? "text-success" : "text-muted")" style="font-size: 0.8rem;"><i class="fas fa-thumbs-up"></i> @replyLikes</button></form>
                                            <form asp-action="ToggleReaction" method="post" class="d-inline"><input type="hidden" name="replyId" value="@reply.Id" /><input type="hidden" name="guideId" value="@Model.Guide.Id" /><input type="hidden" name="isUpvote" value="false" /><button class="btn btn-link p-0 text-decoration-none action-btn-sm @(userDislikedReply ? "text-danger" : "text-muted")" style="font-size: 0.8rem;"><i class="fas fa-thumbs-down"></i> @replyDislikes</button></form>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@if (isAdminOrMod)
{
    <div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content bg-dark text-white border-secondary">
                <form asp-controller="Guides" asp-action="RejectGuide" method="post">
                    <div class="modal-header border-secondary">
                        <h5 class="modal-title text-danger" id="rejectModalLabel"><i class="fas fa-ban"></i> Odrzuć poradnik</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" value="@Model.Guide.Id" />
                        <div class="mb-3">
                            <label for="reason" class="form-label">Powód odrzucenia:</label>
                            <textarea class="form-control bg-secondary text-white border-0" id="reason" name="reason" rows="4" required placeholder="Napisz, co autor musi poprawić..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                        <button type="submit" class="btn btn-danger">Potwierdź odrzucenie</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<style>
    .guide-content {
        font-size: 1.1rem;
        line-height: 1.6;
    }

        .guide-content img {
            max-width: 100%;
            height: auto;
            border-radius: 8px;
            margin: 15px 0;
        }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" crossorigin=""></script>

    <style>
        .action-btn:hover {
            color: #fff !important;
            transform: scale(1.1);
            transition: all 0.2s;
        }

        .action-btn-sm:hover {
            color: #fff !important;
            transition: all 0.2s;
        }

        .leaflet-popup-content-wrapper {
            background: #333;
            color: #fff;
        }

        .leaflet-popup-tip {
            background: #333;
        }

        /* CSS FIX: Poprawa wyrównania pinezki */
        .custom-pin-icon {
            background: transparent !important;
            border: none !important;
            text-align: center;
            line-height: 42px; /* Wysokość ikony */
            width: 30px !important; /* Szerokość */
            margin-left: -15px !important; /* Centrowanie w poziomie (połowa szerokości) */
            margin-top: -42px !important; /* Zakotwiczenie na dole (wysokość) */
        }
    </style>

    <script>
        function toggleEditForm(id) {
            var form = document.getElementById(id);
            if (form.classList.contains('d-none')) { form.classList.remove('d-none'); } else { form.classList.add('d-none'); }
        }

        // Pomocnik do naprawy URL
        function fixUrl(url) {
            if (!url) return '';
            if (url.startsWith('http') || url.startsWith('data:')) return url;
            if (!url.startsWith('/')) return '/' + url;
            return url;
        }

        document.addEventListener("DOMContentLoaded", function() {
            var mapImages = document.querySelectorAll('img.interactive-map-source');

            mapImages.forEach(function(img) {
                // Pobieramy dane mapy
                var rawUrl = img.getAttribute('data-origin-src') || img.getAttribute('src');
                var imageUrl = fixUrl(rawUrl);
                var geoJsonRaw = img.getAttribute('data-geojson');

                if (!geoJsonRaw) return;

                // 1. Tworzymy kontener DIV
                var mapContainer = document.createElement('div');
                var mapId = 'map-' + Math.floor(Math.random() * 1000000);
                mapContainer.id = mapId;
                mapContainer.style.width = "100%";
                mapContainer.style.height = "500px";
                mapContainer.style.background = "#222";
                mapContainer.style.borderRadius = "8px";
                mapContainer.className = "shadow-lg border border-secondary mb-3";
                mapContainer.style.zIndex = "1";

                img.parentNode.replaceChild(mapContainer, img);

                // 2. Inicjalizacja Leaflet
                var map = L.map(mapId, {
                    crs: L.CRS.Simple,
                    minZoom: -5, maxZoom: 4, zoomSnap: 0.25,
                    scrollWheelZoom: false
                });
                map.on('focus', () => { map.scrollWheelZoom.enable(); });
                map.on('blur', () => { map.scrollWheelZoom.disable(); });

                // 3. Ładowanie obrazka
                var imageObj = new Image();
                imageObj.src = imageUrl;

                imageObj.onerror = function() {
                    console.error("Nie udało się załadować obrazka mapy: " + imageUrl);
                    mapContainer.innerHTML = '<div class="text-center text-danger p-5">Błąd ładowania mapy.<br>Sprawdź ścieżkę do pliku.</div>';
                };

                imageObj.onload = function() {
                    var w = this.width;
                    var h = this.height;

                    var containerWidth = mapContainer.clientWidth;
                    if(w > 0) {
                        var ratio = h / w;
                        var newHeight = containerWidth * ratio;
                        mapContainer.style.height = newHeight + "px";
                        map.invalidateSize();
                    }

                    var southWest = map.unproject([0, h], map.getMaxZoom() - 1);
                    var northEast = map.unproject([w, 0], map.getMaxZoom() - 1);
                    var bounds = new L.LatLngBounds(southWest, northEast);

                    L.imageOverlay(imageUrl, bounds).addTo(map);
                    map.fitBounds(bounds);

                    var fitZoom = map.getBoundsZoom(bounds);
                    map.setMinZoom(fitZoom);
                    map.setMaxBounds(bounds);

                    // 4. Rysowanie elementów z GeoJSON
                    if (geoJsonRaw) {
                        try {
                            var geoJsonData = JSON.parse(geoJsonRaw);
                            L.geoJSON(geoJsonData, {
                                style: function (feature) {
                                    var color = feature.properties && feature.properties.color ? feature.properties.color : '#ffcc00';
                                    return {
                                        color: color,
                                        fillColor: color,
                                        weight: 4,
                                        fillOpacity: 0.5
                                    };
                                },
                                pointToLayer: function (feature, latlng) {
                                    var color = feature.properties && feature.properties.color ? feature.properties.color : '#dc3545';

                                    // Używamy naszej Customowej Pinezki
                                    return L.marker(latlng, {
                                        icon: L.divIcon({
                                            className: 'custom-pin-icon',
                                            html: `<i class="fas fa-map-marker-alt fa-3x" style="color: ${color}; text-shadow: 0px 2px 4px rgba(0,0,0,0.5);"></i>`,
                                            iconSize: [30, 42],
                                            iconAnchor: [15, 42],
                                            popupAnchor: [0, -45]
                                        })
                                    });
                                },
                                onEachFeature: function (feature, layer) {
                                    // Tooltip (dymek) po najechaniu, jeśli jest opis
                                    if (feature.properties && feature.properties.note) {
                                        layer.bindTooltip(feature.properties.note, {
                                            permanent: false,
                                            direction: 'top',
                                            className: 'bg-dark text-white border-0 shadow px-2 py-1'
                                        });
                                    }
                                }
                            }).addTo(map);
                        } catch (e) {
                            console.error("Błąd GeoJSON:", e);
                        }
                    }
                };
            });
        });

        // --- OCENIANIE ---
        document.addEventListener("DOMContentLoaded", function() {
            const container = document.getElementById('star-container');
            if (!container) return;
            const stars = container.querySelectorAll('.star-icon');
            const display = document.getElementById('rating-display');
            const guideId = document.getElementById('guideId').value;
            const saveMessage = document.getElementById('save-message');
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : '';
            let currentRating = parseFloat(document.getElementById('currentRating').value.replace(',', '.'));

            function renderStars(value) {
                stars.forEach((star, index) => {
                    const starValue = index + 1;
                    star.className = 'star-icon far fa-star';
                    star.style.color = '#ccc';
                    if (value >= starValue) { star.className = 'star-icon fas fa-star'; star.style.color = '#ffc107'; }
                    else if (value >= starValue - 0.5) { star.className = 'star-icon fas fa-star-half-alt'; star.style.color = '#ffc107'; }
                });
            }
            renderStars(currentRating);

            stars.forEach((star, index) => {
                star.addEventListener('mousemove', (e) => {
                    const rect = star.getBoundingClientRect();
                    const isLeftHalf = (e.clientX - rect.left) < (rect.width / 2);
                    let hoverValue = index + 1;
                    if (isLeftHalf) hoverValue -= 0.5;
                    renderStars(hoverValue);
                });
                star.addEventListener('click', (e) => {
                    const rect = star.getBoundingClientRect();
                    const isLeftHalf = (e.clientX - rect.left) < (rect.width / 2);
                    let selectedValue = index + 1;
                    if (isLeftHalf) selectedValue -= 0.5;
                    currentRating = selectedValue;
                    display.innerText = selectedValue.toFixed(1);
                    renderStars(currentRating);
                    sendRating(selectedValue);
                });
            });
            container.addEventListener('mouseleave', () => { renderStars(currentRating); });

            function sendRating(value) {
                saveMessage.style.opacity = '0';
                fetch('/Guides/RateGuide', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token },
                    body: JSON.stringify({ guideId: parseInt(guideId), ratingValue: value })
                }).then(response => { if (response.ok) return response.json(); throw new Error('Błąd'); })
                  .then(data => { if(data.success) { saveMessage.style.opacity = '1'; setTimeout(() => { saveMessage.style.opacity = '0'; }, 2000); } });
            }
        });
    </script>
}