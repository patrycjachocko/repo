@model praca_dyplomowa_zesp.Models.ViewModels.GameRatingViewModel

@* --- STYLE LOKALNE DLA PARTIALA (CYBERPUNK DATA PANELS) --- *@
<style>
    .cyber-panel {
        background: rgba(20, 20, 25, 0.7); /* Ciemne półprzezroczyste tło */
        backdrop-filter: blur(5px);
        border-radius: 12px;
        border: 1px solid rgba(255, 255, 255, 0.1);
        transition: all 0.3s ease-in-out;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 10px;
        position: relative;
        overflow: hidden;
    }

        .cyber-panel:hover {
            transform: translateY(-3px);
            background: rgba(30, 30, 35, 0.8);
        }

    /* Warianty kolorystyczne neonów */
    .panel-blue {
        border-color: rgba(0, 243, 255, 0.5);
        box-shadow: inset 0 0 20px rgba(0, 243, 255, 0.1);
    }

    .text-neon-blue {
        color: #00f3ff;
        text-shadow: 0 0 10px rgba(0, 243, 255, 0.5);
    }

    .panel-green {
        border-color: rgba(0, 255, 157, 0.5);
        box-shadow: inset 0 0 20px rgba(0, 255, 157, 0.1);
    }

    .text-neon-green {
        color: #00ff9d;
        text-shadow: 0 0 10px rgba(0, 255, 157, 0.5);
    }

    .panel-purple {
        border-color: rgba(188, 19, 254, 0.5);
        box-shadow: inset 0 0 20px rgba(188, 19, 254, 0.1);
    }

    .text-neon-purple {
        color: #bc13fe;
        text-shadow: 0 0 10px rgba(188, 19, 254, 0.5);
    }

    .panel-gold {
        border-color: rgba(255, 193, 7, 0.6);
        box-shadow: inset 0 0 25px rgba(255, 193, 7, 0.15);
        background: rgba(255, 193, 7, 0.05); /* Lekki złoty tint */
    }

    .text-neon-gold {
        color: #ffc107;
        text-shadow: 0 0 10px rgba(255, 193, 7, 0.6);
    }

    /* Nagłówki paneli */
    .cyber-header-sm {
        font-size: 0.7rem;
        text-transform: uppercase;
        letter-spacing: 1px;
        opacity: 0.8;
        margin-bottom: 5px;
        font-weight: 600;
    }

    /* Duże liczby */
    .cyber-score-lg {
        font-family: 'Segoe UI', sans-serif; /* Można podmienić na bardziej "cyfrowy" font */
        font-weight: 800;
        font-size: 1.8rem;
        line-height: 1;
    }

    /* --- Kontener interaktywny gwiazdek --- */
    .star-input-module {
        background: rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        padding: 8px 15px;
        border: 1px solid rgba(255, 193, 7, 0.2);
        transition: border-color 0.3s;
    }

        .star-input-module:hover {
            border-color: rgba(255, 193, 7, 0.5);
            box-shadow: 0 0 15px rgba(255, 193, 7, 0.2);
        }

    .game-star {
        transition: transform 0.2s, filter 0.2s;
    }
    /* Efekt hover na samej gwiazdce */
    #game-star-container:hover .game-star:hover {
        transform: scale(1.15);
        filter: drop-shadow(0 0 5px #ffc107);
    }

</style>

@* --- RZĄD 1: Oceny Zewnętrzne (3 kafelki w jednej linii) --- *@
<div class="row g-3 mb-3">
    @* KRYTYCY (Niebieski Neon) *@
    <div class="col-4">
        <div class="cyber-panel panel-blue text-center">
            <h6 class="cyber-header-sm text-neon-blue">Krytycy (IGDB)</h6>
            <div class="cyber-score-lg text-neon-blue">
                @(Model.IgdbCriticRating > 0 ? Model.IgdbCriticRating.ToString("0") : "-")
            </div>
        </div>
    </div>

    @* GRACZE (Zielony Neon) *@
    <div class="col-4">
        <div class="cyber-panel panel-green text-center">
            <h6 class="cyber-header-sm text-neon-green">Gracze (IGDB)</h6>
            <div class="cyber-score-lg text-neon-green">
                @(Model.IgdbUserRating > 0 ? Model.IgdbUserRating.ToString("0") : "-")
            </div>
        </div>
    </div>

    @* TOTAL (Fioletowy Neon) *@
    <div class="col-4">
        <div class="cyber-panel panel-purple text-center">
            <h6 class="cyber-header-sm text-neon-purple">Średnia Total</h6>
            <div class="cyber-score-lg text-neon-purple">
                @(Model.HybridTotalRating > 0 ? Model.HybridTotalRating.ToString("0") : "-")
            </div>
        </div>
    </div>
</div>

@* --- RZĄD 2: Społeczność GameHub (Interaktywny panel) --- *@
<div class="row">
    <div class="col-12">
        <div class="cyber-panel panel-gold p-3">
            <div class="d-flex align-items-center justify-content-between">

                @* LEWA STRONA: Etykieta GameHub i Wynik *@
                <div class="d-flex align-items-center gap-4">
                    <div class="d-flex flex-column">
                        <h6 class="cyber-header-sm text-neon-gold mb-1" style="font-size: 0.85rem;">Społeczność GameHub</h6>
                        <small class="text-muted" style="font-size: 0.75rem; letter-spacing: 0.5px;">
                            Na podstawie <span id="local-count-display" class="text-white fw-bold">@Model.LocalRatingCount</span> głosów
                        </small>
                    </div>

                    <div class="cyber-score-lg text-neon-gold" style="font-size: 2.2rem;" id="local-avg-display">
                        @((Model.LocalAverageRating * 10) > 0 ? (Model.LocalAverageRating * 10).ToString("0") : "-")
                    </div>
                </div>

                @* PRAWA STRONA: Moduł Głosowania *@
                <div class="star-input-module d-flex align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="d-flex flex-column align-items-end">
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="partialGameId" value="@Model.IgdbGameId" />

                            @* Kontener Gwiazdek *@
                            <div id="game-star-container" style="cursor: pointer; font-size: 1.5rem; color: #333; white-space: nowrap; line-height: 1; letter-spacing: 3px;">
                                @for (int i = 1; i <= 10; i++)
                                {
                                    <i class="far fa-star game-star" data-value="@i"></i>
                                }
                            </div>

                            @* Tekst podpowiedzi *@
                            <div class="d-flex align-items-center mt-2 w-100 justify-content-between">
                                <span id="game-rate-msg" class="text-neon-green fw-bold me-2" style="opacity:0; font-size: 0.7rem; text-transform: uppercase; letter-spacing: 1px;">Zapisano!</span>
                                <div id="current-hover-rating" class="text-neon-gold fw-bold small" style="font-size: 0.85rem; min-width: 50px; text-align: right;">
                                    @(Model.UserPersonalRating > 0 ? Model.UserPersonalRating.ToString("0.0") + "/10" : "Oceń")
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-end">
                            <small class="text-muted d-block mb-2 text-uppercase" style="font-size: 0.7rem; letter-spacing: 1px;">Zaloguj się, aby ocenić</small>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-warning rounded-pill px-3 fw-bold" style="font-size: 0.8rem; box-shadow: 0 0 10px rgba(255, 193, 7, 0.3);">
                                <i class="fas fa-sign-in-alt me-1"></i> Logowanie
                            </a>
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <script>
        (function() {
            const container = document.getElementById('game-star-container');
            if (!container) return;

            const stars = container.querySelectorAll('.game-star');
            const gameId = document.getElementById('partialGameId').value;
            const msg = document.getElementById('game-rate-msg');
            const avgDisplay = document.getElementById('local-avg-display');
            const countDisplay = document.getElementById('local-count-display');
            const ratingTextDisplay = document.getElementById('current-hover-rating');
            const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
            const token = tokenInput ? tokenInput.value : '';

            let currentRating = @Model.UserPersonalRating.ToString(System.Globalization.CultureInfo.InvariantCulture);

            function renderStars(value) {
                stars.forEach((star, index) => {
                    const starValue = index + 1;
                    star.className = 'game-star far fa-star';
                    // Kolor pustej gwiazdki - ciemniejszy, bardziej metaliczny
                    star.style.color = 'rgba(255, 255, 255, 0.2)';

                    // Pełna gwiazdka
                    if (value >= starValue) {
                        star.className = 'game-star fas fa-star';
                        star.style.color = '#ffc107'; // Złoty
                    }
                    // Pół gwiazdki
                    else if (value >= starValue - 0.5) {
                        star.className = 'game-star fas fa-star-half-alt';
                        star.style.color = '#ffc107';
                    }
                });
            }

            renderStars(currentRating);

            // Hover
            stars.forEach((star, index) => {
                star.addEventListener('mousemove', (e) => {
                    const rect = star.getBoundingClientRect();
                    const isLeftHalf = (e.clientX - rect.left) < (rect.width / 2);
                    let val = index + 1;
                    if (isLeftHalf) val -= 0.5;

                    renderStars(val);
                    if(ratingTextDisplay) ratingTextDisplay.innerText = val.toFixed(1) + "/10";
                });
            });

            // Mouse leave
            container.addEventListener('mouseleave', () => {
                renderStars(currentRating);
                if(ratingTextDisplay) {
                    ratingTextDisplay.innerText = currentRating > 0 ? currentRating.toFixed(1) + "/10" : "Oceń";
                }
            });

            // Click
            stars.forEach((star, index) => {
                star.addEventListener('click', (e) => {
                    const rect = star.getBoundingClientRect();
                    const isLeftHalf = (e.clientX - rect.left) < (rect.width / 2);
                    let val = index + 1;
                    if (isLeftHalf) val -= 0.5;

                    currentRating = val;
                    renderStars(currentRating);

                    if(ratingTextDisplay) ratingTextDisplay.innerText = val.toFixed(1) + "/10";

                    fetch('/Games/RateGame', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json', 'RequestVerificationToken': token },
                        body: JSON.stringify({ gameId: parseInt(gameId), ratingValue: val })
                    })
                    .then(res => res.json())
                    .then(data => {
                        if (data.success) {
                            msg.style.opacity = 1;
                            setTimeout(() => msg.style.opacity = 0, 2000);

                            // Aktualizacja średniej (mnożymy x10, żeby wyświetlać w skali 100)
                            let avgScale100 = data.newAverage * 10;
                            avgDisplay.innerText = avgScale100.toFixed(0);
                            countDisplay.innerText = data.newCount;
                        }
                    });
                });
            });
        })();
    </script>
}