@model IEnumerable<MainLibraryViewModel>

@{
    ViewData["Title"] = "Moja Biblioteka Gier";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-controller="Games" asp-action="Index" class="btn btn-primary">Dodaj nową grę</a>
</p>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var game in Model)
        {
            <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                <div class="card h-100">
                    <a asp-action="Details" asp-route-id="@game.DbId">
                        <img src="@(game.CoverUrl ?? "https://via.placeholder.com/264x352.png?text=Brak+okładki")" class="card-img-top" alt="@game.Name">
                    </a>
                    <div class="card-body p-2">
                        <h6 class="card-title" style="font-size: 0.9rem;">
                            <a asp-action="Details" asp-route-id="@game.DbId" class="text-decoration-none text-dark">@game.Name</a>
                        </h6>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p>Twoja biblioteka jest pusta. Zacznij dodawać gry!</p>
    }
</div>