@model IEnumerable<praca_dyplomowa_zesp.Models.API.ApiGame>

@if (Model != null && Model.Any())
{
    <li>
        <h6 class="dropdown-header text-uppercase text-muted small fw-bold" style="letter-spacing: 1px; padding-left: 20px;">
            Na Topie
        </h6>
    </li>

    @* Licznik do zmiany kolorów *@
    int i = 0;

    @foreach (var game in Model.Take(5))
    {
        // Jeśli parzyste (0, 2, 4) -> Zielony, w przeciwnym razie -> Cyan
        string colorClass = (i % 2 == 0) ? "text-neon-green" : "text-neon-cyan";

        <li>
            <a class="dropdown-item @colorClass"
               asp-controller="Guides"
               asp-action="Index"
               asp-route-gameId="@game.Id"
               title="@game.Name">

                <i class="bi bi-controller"></i>
                <span class="text-truncate" style="max-width: 220px;">@game.Name</span>
            </a>
        </li>

        // Zwiększamy licznik
        i++;
    }
}
else
{
    <li>
        <span class="dropdown-item-text text-muted small text-center d-block py-3">
            <i class="bi bi-wifi-off me-1"></i> Nie udało się wczytać.
        </span>
    </li>
}

<li><hr class="dropdown-divider"></li>

<li>
    @* Ten guzik zostaje fioletowy (text-neon-purple) *@
    <a class="dropdown-item text-neon-purple fw-bold justify-content-center"
       asp-controller="Games"
       asp-action="Index"
       asp-route-mode="guides">
        Pokaż wszystkie <i class="bi bi-arrow-right ms-2"></i>
    </a>
</li>