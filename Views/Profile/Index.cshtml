@model praca_dyplomowa_zesp.Models.Users.ProfileViewModel
@using praca_dyplomowa_zesp.Models.Users

@{
    ViewData["Title"] = "Mój Profil";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    @if (ViewData["StatusMessage"] != null)
    {
        <div class="alert alert-success">@ViewData["StatusMessage"]</div>
    }
    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
    }

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header">Twoje dane</div>
                <div class="card-body">

                    <div class="mb-3">
                        <img src="@Url.Action("GetBanner", "Profile", new { id = Model.UserId })"
                             alt="Baner"
                             class="img-fluid rounded"
                             style="max-height: 100px; width: 100%; object-fit: cover;" />
                    </div>

                    <div class="text-center mb-3">
                        <img src="@Url.Action("GetAvatar", "Profile", new { id = Model.UserId })"
                             alt="Avatar"
                             class="img-thumbnail"
                             style="max-width: 150px;" />
                    </div>

                    <p><strong>Nazwa:</strong> @Model.Username</p>

                    <hr />
                    <h5>Zmień Awatar</h5>
                    <form asp-action="ChangeAvatar" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="file" name="avatarFile" class="form-control-file" />
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary mt-2">Zmień awatar</button>
                    </form>

                    <hr />
                    <h5>Zmień Baner</h5>
                    <form asp-action="ChangeBanner" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="file" name="bannerFile" class="form-control-file" />
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary mt-2">Zmień baner</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-8">

            <div class="card mb-3">
                <div class="card-header">O mnie</div>
                <div class="card-body">
                    <form asp-action="UpdateDescription" method="post">
                        <div class="form-group">
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mt-2">Zaktualizuj opis</button>
                    </form>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header">Integracja Steam</div>
                <div class="card-body">
                    @if (string.IsNullOrEmpty(Model.SteamId))
                    {
                        <p>Nie połączono z kontem Steam.</p>
                        <form asp-action="LinkSteam" method="post">
                            <button type="submit" class="btn btn-dark" style="background-color: #171a21; border-color: #171a21;">
                                <i class="bi bi-steam"></i> <span style="color:white; font-weight:bold;">Połącz konto STEAM</span>
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            Konto połączone! (SteamID: @Model.SteamId)
                        </div>

                        <a asp-action="SteamLibrary" class="btn btn-success mb-2">Zobacz moją bibliotekę Steam</a>

                        @* ZMIANA: Ukrywamy odłączanie, jeśli konto stworzone przez Steam *@
                        @if (!Model.IsCreatedBySteam)
                        {
                            <form asp-action="UnlinkSteam" method="post" class="mt-2">
                                <button type="submit" class="btn btn-outline-danger btn-sm">Odłącz konto Steam</button>
                            </form>
                        }
                        else
                        {
                            <div class="text-muted mt-2 border-top pt-2">
                                <small><i class="bi bi-info-circle"></i> To konto zostało utworzone za pomocą Steam i nie można go odłączyć.</small>
                            </div>
                        }
                    }
                </div>
            </div>

            @if (!Model.IsCreatedBySteam)
            {
                <div class="card mb-3">
                    <div class="card-header">Zmiana Hasła</div>
                    <div class="card-body">
                        <form asp-action="ChangePassword" method="post">
                            <div class="form-group">
                                <label for="changePasswordModel_OldPassword">Obecne hasło</label>
                                <input type="password" id="changePasswordModel_OldPassword" name="changePasswordModel.OldPassword" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="changePasswordModel_NewPassword">Nowe hasło</label>
                                <input type="password" id="changePasswordModel_NewPassword" name="changePasswordModel.NewPassword" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label for="changePasswordModel_ConfirmPassword">Potwierdź nowe hasło</label>
                                <input type="password" id="changePasswordModel_ConfirmPassword" name="changePasswordModel.ConfirmPassword" class="form-control" />
                            </div>
                            <button type="submit" class="btn btn-warning mt-2">Zmień hasło</button>
                        </form>
                    </div>
                </div>
            }

            <div class="card mb-3 border-danger">
                <div class="card-header bg-danger text-white">
                    <i class="bi bi-exclamation-triangle-fill"></i> Strefa Niebezpieczna
                </div>
                <div class="card-body">
                    <p class="card-text">Usunięcie konta jest nieodwracalne. Utracisz dostęp do swojej biblioteki i wszystkich postępów.</p>

                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                        Usuń konto
                    </button>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Potwierdź usunięcie konta</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Czy na pewno chcesz usunąć swoje konto?</p>
                <p class="text-danger fw-bold">Tej operacji nie można cofnąć!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Anuluj</button>
                <form asp-action="DeleteAccount" method="post">
                    <button type="submit" class="btn btn-danger">Tak, usuń trwale</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}