                                            <button class="btn btn-link text-muted p-0" style="font-size: 0.8rem;" type="button" data-bs-toggle="dropdown"><i class="fas fa-ellipsis-h"></i></button>
                                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                                @if (isReplyAuthor)
                                                {
                                                    <li><a class="dropdown-item btn-sm" href="#" onclick="toggleEditForm('reply-edit-@reply.Id'); return false;">Edytuj</a></li>
                                                }
                                                <li><form asp-action="DeleteReply" method="post" onsubmit="return confirm('Usunąć odpowiedź?');"><input type="hidden" name="replyId" value="@reply.Id" /><input type="hidden" name="guideId" value="@Model.Guide.Id" /><button type="submit" class="dropdown-item text-danger btn-sm">Usuń</button></form></li>
                                            </ul>
                                        </div>
                                    }
                                </div>

                                <div id="reply-content-@reply.Id"><p class="mb-1 text-light small opacity-75">@reply.Content</p></div>

                                @if (isReplyAuthor)
                                {
                                    <div id="reply-edit-@reply.Id" class="d-none mb-2">
                                        <form asp-action="EditReply" method="post">
                                            <input type="hidden" name="replyId" value="@reply.Id" /> <input type="hidden" name="guideId" value="@Model.Guide.Id" />
                                            <div class="input-group input-group-sm"> <input type="text" name="content" class="form-control bg-dark text-white border-secondary" value="@reply.Content"> <button class="btn btn-success" type="submit"><i class="fas fa-check"></i></button> <button class="btn btn-secondary" type="button" onclick="toggleEditForm('reply-edit-@reply.Id')"><i class="fas fa-times"></i></button> </div>
                                        </form>
                                    </div>
                                }

                                <div class="d-flex align-items-center gap-2">
                                    <form asp-action="ToggleReaction" method="post" class="d-inline"><input type="hidden" name="replyId" value="@reply.Id" /><input type="hidden" name="guideId" value="@Model.Guide.Id" /><input type="hidden" name="isUpvote" value="true" /><button class="btn btn-link p-0 text-decoration-none action-btn-sm @(userLikedReply ? "text-success" : "text-muted")" style="font-size: 0.8rem;"><i class="fas fa-thumbs-up"></i></button></form>
                                    <span class="@replyScoreColor small fw-bold">@replyScore</span>
                                    <form asp-action="ToggleReaction" method="post" class="d-inline"><input type="hidden" name="replyId" value="@reply.Id" /><input type="hidden" name="guideId" value="@Model.Guide.Id" /><input type="hidden" name="isUpvote" value="false" /><button class="btn btn-link p-0 text-decoration-none action-btn-sm @(userDislikedReply ? "text-danger" : "text-muted")" style="font-size: 0.8rem;"><i class="fas fa-thumbs-down"></i></button></form>
                                </div>
                            </div>
