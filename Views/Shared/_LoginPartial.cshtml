@using Microsoft.AspNetCore.Identity
@using praca_dyplomowa_zesp.Models.Users

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            @* --- UŻYTKOWNIK ISTNIEJE W BAZIE - POPRAWNE LOGOWANIE --- *@

            @* 1. SEKCJA STEAM (TYLKO PRZYCISK POŁĄCZENIA) *@
            <li class="nav-item d-flex align-items-center me-3">
                @if (string.IsNullOrEmpty(user.SteamId))
                {
                    @* Wyświetlamy tylko jeśli NIE MA Steama *@
                    <a asp-controller="Profile" asp-action="Index" class="btn btn-sm btn-outline-secondary text-light" title="Połącz konto Steam">
                        <i class="bi bi-steam"></i> Połącz Steam
                    </a>
                }
                @* Usunięto 'else' z linkiem do biblioteki - jest teraz w _Layout *@
            </li>

            @* --- PRZYCISK PANELU (Dla Admina i Moderatora) --- *@
    @if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
    {
        <li class="nav-item">
            <a class="nav-link text-white btn btn-outline-secondary border-0 me-2" asp-controller="Admin" asp-action="Index" title="Panel zarządzania">
                @if (User.IsInRole("Admin"))
                {
                    <i class="fas fa-user-shield text-danger"></i> <span class="d-none d-lg-inline">Panel Admina</span>
                }
                else
                {
                    <i class="fas fa-user-check text-info"></i> <span class="d-none d-lg-inline">Panel Moderatora</span>
                }
            </a>
        </li>
    }

            @* --- 2. SEKCJA AWATARA I PROFILU --- *@
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link text-light d-flex align-items-center" asp-controller="Profile" asp-action="Index" title="Mój profil">
                    @if (user.ProfilePicture != null)
                    {
                        @* Awatar z bazy danych *@
                        <img src="@Url.Action("GetAvatar", "Profile", new { id = user.Id })" alt="Awatar" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover; border: 1px solid #555;" />
                    }
                    else
                    {
                        @* Domyślny awatar z pliku *@
                        <img src="~/uploads/avatars/default_avatar.png" alt="Domyślny awatar" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover; border: 1px solid #555;" />
                    }
                    Cześć @(user.UserName)!
                </a>
            </li>

            @* 3. WYLOGOWANIE *@
            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-light" style="text-decoration: none;">Wyloguj</button>
                </form>
            </li>
        }
        else
        {
            @* --- AWARYJNE WYLOGOWANIE (Gdy masz ciasteczko, ale nie ma Cię w bazie) --- *@
            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-danger fw-bold" style="text-decoration: none;">
                        <i class="fas fa-exclamation-triangle"></i> Błąd sesji - Kliknij, aby naprawić
                    </button>
                </form>
            </li>
        }
    }
    else
    {
        @* --- 4. DLA NIEZALOGOWANYCH --- *@
        <li class="nav-item d-flex align-items-center me-2">
            <form asp-controller="Account" asp-action="LoginWithSteam" method="post">
                <button type="submit" class="btn btn-sm btn-dark d-flex align-items-center border-secondary">
                    <i class="bi bi-steam me-2"></i> Zaloguj przez Steam
                </button>
            </form>
        </li>

        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Register">Rejestracja</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Zaloguj</a>
        </li>
    }
</ul>