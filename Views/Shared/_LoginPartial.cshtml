@using Microsoft.AspNetCore.Identity
@using praca_dyplomowa_zesp.Models.Users

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        // Pobieramy pełny obiekt użytkownika, aby mieć dostęp do SteamId
        var user = await UserManager.GetUserAsync(User);

        if (user != null)
        {
            // --- 1. SEKCJA STEAM (ZALOGOWANY) ---
            <li class="nav-item d-flex align-items-center me-3">
                @if (string.IsNullOrEmpty(user.SteamId))
                {
                    // Jeśli brak SteamId -> Pokaż guzik łączenia (skrót do profilu)
                    <a asp-controller="Profile" asp-action="Index" class="btn btn-sm btn-outline-secondary" title="Połącz konto Steam">
                        <i class="bi bi-steam"></i> Połącz Steam
                    </a>
                }
                else
                {
                    // Jeśli jest SteamId -> Pokaż guzik do biblioteki
                    <a asp-controller="Profile" asp-action="SteamLibrary" class="btn btn-sm btn-outline-success" title="Twoja Biblioteka Steam">
                        <i class="bi bi-controller"></i> Biblioteka Steam
                    </a>
                }
            </li>

            // --- 1.5. SEKCJA ADMINA (DODANE) ---
            @if (User.IsInRole("Admin"))
            {
                <li class="nav-item d-flex align-items-center me-3">
                    <a class="btn btn-sm btn-danger fw-bold" asp-controller="Admin" asp-action="Index" title="Panel Administratora">
                        PANEL ADMINA
                    </a>
                </li>
            }

                    // --- 2. SEKCJA AWATARA I PROFILU ---
            <li class="nav-item d-flex align-items-center">
                <a class="nav-link text-dark d-flex align-items-center" asp-controller="Profile" asp-action="Index" title="Mój profil">
                    <img src="@Url.Action("GetAvatar", "Profile", new { id = user.Id })" alt="Awatar" class="rounded-circle me-2" style="width: 32px; height: 32px; object-fit: cover;" />
                    Cześć @User.Identity?.Name!
                </a>
            </li>

            // --- 3. WYLOGOWANIE ---
            <li class="nav-item">
                <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-dark">Wyloguj</button>
                </form>
            </li>
        }
    }
    else
    {
        // --- 4. SEKCJA DLA NIEZALOGOWANYCH ---
        <li class="nav-item d-flex align-items-center me-2">
            <form asp-controller="Account" asp-action="LoginWithSteam" method="post">
                <button type="submit" class="btn btn-sm btn-dark d-flex align-items-center" style="background-color: #171a21; border-color: #171a21;">
                    <i class="bi bi-steam me-2"></i> Zaloguj przez Steam
                </button>
            </form>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Rejestracja</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Zaloguj</a>
        </li>
    }
</ul>