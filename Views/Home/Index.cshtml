@model praca_dyplomowa_zesp.Models.Modules.Home.HomeViewModel
@{
    ViewData["Title"] = "Strona Główna";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />

<style>
    :root {
        --light-pink: #ffeaf6;
        --mid-pink: #ff66c4;
        --deep-purple: #8000ff;
        --dark-bg: #0b0b0e;
        --purple-glow-bg: #1a0524;
    }

    /* --- GLOBAL LOCK --- */
    html, body {
        height: 100vh !important;
        overflow: hidden !important;
        margin: 0 !important;
        background-color: var(--dark-bg);
        color: #fff;
    }

    footer {
        display: none !important;
    }

    .navbar {
        margin-bottom: 0 !important;
        background-color: rgba(11, 11, 14, 0.95) !important;
        border-bottom: 1px solid #333;
        z-index: 100;
        height: 60px;
    }

    .container {
        max-width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
    }

    main {
        padding-bottom: 0 !important;
        height: calc(100vh - 60px);
    }

    /* --- HERO SECTION --- */
    .hero-section {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: radial-gradient(circle at center, var(--purple-glow-bg) 0%, var(--dark-bg) 90%);
        overflow: hidden;
    }

    .hero-content {
        margin-bottom: 0;
        text-align: center;
        z-index: 20;
        /* Przesuwamy treść do góry */
        transform: translateY(-5vh);
    }

    /* STATYCZNE NEONOWE LOGO */
    .neon-logo {
        font-size: clamp(4rem, 10vh, 8rem);
        font-weight: 900;
        text-transform: uppercase;
        color: #fff;
        margin-bottom: 0;
        letter-spacing: 5px;
        line-height: 1;
        /* Statyczny efekt neonu (bez mrugania) */
        text-shadow: 0 0 10px rgba(255, 255, 255, 0.8), 0 0 20px rgba(255, 102, 196, 0.5), 0 0 40px rgba(255, 102, 196, 0.5), 0 0 80px rgba(255, 102, 196, 0.8), 0 0 120px rgba(128, 0, 255, 0.8);
    }

    .hero-subtitle {
        font-size: clamp(0.9rem, 2vh, 1.3rem);
        color: #ccc;
        font-weight: 300;
        letter-spacing: 2px;
        margin-top: 20px;
        text-transform: uppercase;
        text-shadow: 0 2px 5px rgba(0,0,0,0.8);
    }

    /* --- SWIPER --- */
    .swiper {
        width: 100%;
        /* --- ZMIANA: NAPRAWA UCINANIA POŚWIATY --- */
        /* Zwiększamy padding-top (było 40px), żeby zrobić miejsce na poświatę wewnątrz kontenera */
        padding-top: 100px;
        /* Podciągamy cały slider do góry marginesem, żeby optycznie był w tym samym miejscu */
        margin-top: -60px;
        padding-bottom: 60px;
        -webkit-mask-image: linear-gradient(to right, transparent 0%, black 30%, black 70%, transparent 100%);
        mask-image: linear-gradient(to right, transparent 0%, black 30%, black 70%, transparent 100%);
        overflow: visible !important;
    }

    .swiper-slide {
        background-position: center;
        background-size: cover;
        height: 50vh;
        aspect-ratio: 2/3;
        width: auto;
        margin: 0;
        border-radius: 20px;
        position: relative;
        background-color: #1a1a20;
        border: 2px solid rgba(160, 60, 255, 0.8);
        box-shadow: 0 5px 20px rgba(0,0,0,0.8);
        filter: brightness(0.7);
        overflow: hidden;
        -webkit-backface-visibility: hidden;
        backface-visibility: hidden;
        transition: transform 0.5s ease, border-color 0.5s ease, box-shadow 0.5s ease, filter 0.5s ease;
    }

    @@media (max-width: 576px) {
        .swiper-slide {
            height: 45vh;
            aspect-ratio: 2/3;
            margin: 0;
        }

        .neon-logo {
            font-size: clamp(3rem, 7vh, 5rem);
        }

        .swiper {
            /* Na telefonie też poprawiamy */
            padding-top: 80px;
            margin-top: -40px;
            padding-bottom: 50px;
            -webkit-mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
            mask-image: linear-gradient(to right, transparent 0%, black 10%, black 90%, transparent 100%);
        }

        .hero-content {
            transform: translateY(-2vh);
        }
    }

    .swiper-slide img {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s ease;
    }

    /* --- EFEKT ŚWIETLNY DLA AKTYWNEJ KARTY --- */
    .swiper-slide-active {
        filter: brightness(1.0);
        border: 3px solid var(--mid-pink);
        /* Ta poświata była ucinana, teraz ma miejsce w paddingu */
        box-shadow: -80px 0 90px -40px rgba(255, 102, 196, 0.6), 80px 0 90px -40px rgba(255, 102, 196, 0.6), 0 0 20px var(--mid-pink);
        z-index: 100;
    }

        .swiper-slide-active::after {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 100%;
            background: linear-gradient( to bottom, rgba(255, 255, 255, 0.3) 0%, rgba(255, 255, 255, 0.05) 40%, transparent 100% );
            pointer-events: none;
            z-index: 5;
        }

        .swiper-slide-active img {
            transform: scale(1.05);
        }

    /* --- GAME INFO --- */
    .game-info {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 20px 10px;
        background: linear-gradient(to top, rgba(0,0,0,1) 0%, rgba(0,0,0,0.6) 80%, transparent 100%);
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px);
        transition: all 0.4s ease-in-out;
        text-align: center;
        z-index: 20;
    }

    .swiper-slide-active .game-info {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
    }

    .swiper-slide:not(.swiper-slide-active) .game-info {
        opacity: 0 !important;
        visibility: hidden !important;
    }

    .game-title {
        font-size: clamp(1rem, 2.5vh, 1.4rem);
        font-weight: 800;
        color: white;
        margin-bottom: 8px;
        text-shadow: 0 2px 5px rgba(0,0,0,1);
    }

    .badge-library {
        background: linear-gradient(90deg, var(--deep-purple), var(--mid-pink));
        color: #fff;
        font-size: 0.7rem;
        padding: 4px 10px;
        border-radius: 10px;
        font-weight: 700;
        text-transform: uppercase;
        display: inline-block;
        margin-bottom: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.5);
    }

    .btn-details {
        display: inline-block;
        padding: 8px 25px;
        background: linear-gradient(45deg, var(--mid-pink), var(--deep-purple));
        border: none;
        border-radius: 30px;
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-size: 0.9rem;
        transition: all 0.3s;
        box-shadow: 0 5px 15px rgba(0,0,0,0.5);
    }

        .btn-details:hover {
            filter: brightness(1.15);
            transform: scale(1.05);
            color: white;
        }
</style>

<div class="hero-section">
    <div class="hero-content">
        <h1 class="neon-logo">GAMEHUB</h1>
        @if (User.Identity.IsAuthenticated)
        {
            <p class="hero-subtitle">Witaj ponownie w centrum rozgrywki</p>
        }
        else
        {
            <p class="hero-subtitle">Zaloguj się, aby zarządzać swoją kolekcją</p>
        }
    </div>

    <div class="swiper mySwiper">
        <div class="swiper-wrapper">
            @if (Model.Games != null && Model.Games.Any())
            {
                foreach (var game in Model.Games)
                {
                    <div class="swiper-slide">
                        <img src="@(game.CoverUrl ?? "https://via.placeholder.com/380x570?text=No+Cover")" alt="@game.Name" />

                        <div class="game-info">
                            @if (game.IsInLibrary)
                            {
                                <span class="badge-library">W Bibliotece</span>
                                <br />
                            }
                            <div class="game-title">@game.Name</div>
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@game.IgdbId" class="btn-details">
                                Zobacz
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-white text-center">Wczytywanie gier...</div>
            }
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script>
    var swiper = new Swiper(".mySwiper", {
        effect: "coverflow",
        grabCursor: true,
        centeredSlides: true,
        slidesPerView: "auto",
        initialSlide: 2,
        loop: true,
        loopedSlides: 6,
        speed: 700,

        coverflowEffect: {
            rotate: 0,
            stretch: -75, // Zachowany odstęp
            depth: 0,
            modifier: 1,
            slideShadows: true,
            scale: 1
        },

        autoplay: {
            delay: 3000,
            disableOnInteraction: false,
            pauseOnMouseEnter: true
        },
        keyboard: {
            enabled: true,
        },
        mousewheel: {
            invert: false,
        },
    });
</script>