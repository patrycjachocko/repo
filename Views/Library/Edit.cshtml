@model GameInLibrary

@{
    ViewData["Title"] = "Edytuj Postęp";
}

<h1>@ViewData["Title"]</h1>

<h4>@ViewData["GameName"]</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IgdbGameId" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="DateAddedToLibrary" />

            <div class="form-group mb-3">
                <label asp-for="CurrentUserStoryMission" class="control-label">Obecna misja fabularna</label>
                <input asp-for="CurrentUserStoryMission" class="form-control" />
                <span asp-validation-for="CurrentUserStoryMission" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CurrentUserStoryProgressPercent" class="control-label">Postęp fabularny (%)</label>
                <input asp-for="CurrentUserStoryProgressPercent" type="number" min="0" max="100" class="form-control" />
                <span asp-validation-for="CurrentUserStoryProgressPercent" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Notatki</label>
                <textarea asp-for="Notes" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>